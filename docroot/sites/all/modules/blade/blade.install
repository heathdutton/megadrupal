<?php
/**
 * @file
 * Contains install and update functions for blade.
 */


/**
 * Implements hook_install().
 */
function blade_install() {
  $public_path = variable_get('file_public_path', conf_path() . '/files');
  $blade_cache = $public_path . "/blade";
  file_prepare_directory($blade_cache, FILE_CREATE_DIRECTORY);
  file_create_htaccess($blade_cache);
}
