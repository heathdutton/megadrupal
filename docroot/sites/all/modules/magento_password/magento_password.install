<?php

/**
 * @file
 * Magento password module install.
 */

/**
 * Implements hook_enable().
 */
function magento_password_enable() {
  variable_set('password_inc', drupal_get_path('module', 'magento_password') . '/password.inc');
}

/**
 * Implements hook_disable().
 */
function magento_password_disable() {
  // Fallback to default value: "includes/password.inc".
  variable_del('password_inc');
}

/**
 * Implements hook_uninstall().
 */
function magento_password_uninstall() {
  // Remove flag which enable Magento's password generation.
  variable_del('magento_password');
}
