function context_locale_cookie_context_plugins() {
  $plugins = array();
  $plugins['context_locale_cookie_context_condition_locale_cookie'] = array(
    'handler' => array(
      'path' => drupal_get_path('module', 'context_locale_cookie') .'/plugins',
      'file' => 'context_locale_cookie_context_condition_locale_cookie.inc',
      'class' => 'context_locale_cookie_context_condition_locale_cookie',
      'parent' => 'context_condition',
    ),
  );

  return $plugins;
}

function context_locale_cookie_context_registry() {
  return array(
    'conditions' => array(
      'context_locale_cookie_context_condition_locale_cookie' => array(
        'title' => t('Locale Cookie'),
        'plugin' => 'context_locale_cookie_context_condition_locale_cookie',
      ),
    ),
  );
}

function context_locale_cookie_init() {
  $plugin = context_get_plugin('condition', 'context_locale_cookie_context_condition_locale_cookie');
  if ($plugin) {
    $plugin->execute();
  }
}