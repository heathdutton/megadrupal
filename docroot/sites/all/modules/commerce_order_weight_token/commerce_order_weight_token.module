<?php


/**
 * Implements hook_token_info_alter().
 */
function commerce_order_weight_token_token_info_alter(&$data) {
  // Add out custom order-weight token to the commerce-order type.
  $data['tokens']['commerce-order']['order-weight'] = array(
    'name' => t('Order Weight'),
    'description' => t('The total physical weight of the order.'),
  );
}

/**
 * Implements hook_tokens().
 */
function commerce_order_weight_token_tokens($type, $tokens, array $data = array(), array $options = array()) {
  // Will hold out replacements.
  $replacements = array();

  // Is the order-weight and commerce-order token present (we need both)?
  if ($type == 'commerce-order' && isset($tokens['order-weight']) && !empty($data['commerce-order'])) {
    // Get the order to be used in the call to commerce_physical_order_weight.
    $order = $data['commerce-order'];
    // Get the value we'll be replacing.
    $original = $tokens['order-weight'];
    // Calculate the order weight. returns as an array of weight and unit.
    $order_weight = commerce_physical_order_weight($order);
    // Add the formatted value of the weight as a token replacement.
    $replacements[$original] = physical_weight_format($order_weight);
  }

  // Return our replacements
  return $replacements;
}