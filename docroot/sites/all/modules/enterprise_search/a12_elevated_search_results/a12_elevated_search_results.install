<?php
/**
 * @file
 * The install file for A12 Elevated Search Results
 */

function a12_elevated_search_results_enable() {
  db_add_field('solr_best_bets', 'status', array(
    'type' => 'int',
    'not null' => TRUE,
    'unsigned' => TRUE,
    'default' => 1,
  ));
}

function a12_elevated_search_results_disable() {
  db_drop_field('solr_best_bets', 'status');
}