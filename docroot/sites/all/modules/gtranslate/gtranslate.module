function gtranslate_help($path, $arg) {
    $output = '';
    switch($path) {
        case 'admin/help#gtranslate':
            $output = '<p>' . t("Uses Google power to translate your web site. Author Edvard Ananyan <a href=\"http://gtranslate.net/?xyz=1002\">http://edo.webmaster.am/gtranslate</a>. You can find more info and help on <a href=\"http://gtranslate.net/forum/\">GTranslate Forum</a>.") . '</p>';
            break;
    }
    return $output;
} // function gtranslate_help

