<?php
/**
 * Implementation of hook_init()
 */
function localefix_init(){
  $type = (int) variable_get('localefix_type', LC_CTYPE);
  setlocale($type, variable_get('localefix', 'zh_TW.UTF-8'));
}

/**
 * Implementation of hook_menu()
 */
function localefix_menu() {
  $items = array();
  $items['admin/config/regional/localefix'] = array(
    'title' => 'Localefix Configuration',
    'description' => 'Fix drupal 7 bug of set all locale LC_TYPE to C.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('localefix_admin_settings'),
    'access arguments' => array('administer site configuration'),
    'file' => 'localefix.admin.inc',
    'type' => MENU_NORMAL_ITEM
  );
  return $items;
}

