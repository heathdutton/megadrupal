  $info['FeedsSpider'] = array(
    'name' => 'Spider',
    'description' => 'Fetches links given a single page.',
    'help' => 'Download parse several links, importing each.',
    'handler' => array(
      'parent' => 'FeedsHTTPFetcher',
      'class' => 'FeedsSpider',
      'file' => 'FeedsSpider.inc',
      'path' => drupal_get_path('module', 'feeds_spider'),
    ),
  );

  return $info;
}
