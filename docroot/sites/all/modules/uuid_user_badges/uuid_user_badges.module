<?php

/**
 * @file
 * Main module functions for the uuid user badges module.
 */

/**
 * Implements hook_entity_info_alter().
 *
 * Add settings uuid for 'entity keys' subarray for entity_info.
 */
function uuid_user_badges_entity_info_alter(&$info) {
  $info['user_badge']['uuid'] = TRUE;
  $info['user_badge']['entity keys']['uuid'] = 'uuid';
}

/**
 * Implementation of hook_uuid_sync().
 *
 * Update the user_badge table with missing UUID's.
 */
function uuid_user_badges_uuid_sync() {
  _uuid_sync_table('user_badge', 'bid', 'uuid');
}
