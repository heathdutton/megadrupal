  $result = db_select('node', 'n')
          ->fields('n', array('nid', 'title'))
          ->condition('n.type', $dquarks_types, 'IN')
          ->execute();

  foreach ($result as $node) {
    $form_id = 'dquarks_client_form_' . $node->nid;
