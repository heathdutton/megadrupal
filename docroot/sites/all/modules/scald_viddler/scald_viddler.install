<?php
/**
 * @file
 * Scald Viddler Installation
 */

/**
 * Implements hook_install().
 */
function scald_viddler_install() {
  scald_add_type('video', 'Video', 'Resource video');
}

/**
 * Implements hook_uninstall().
 */
function scald_viddler_uninstall() {
  variable_del('scald_viddler_authentication');
}