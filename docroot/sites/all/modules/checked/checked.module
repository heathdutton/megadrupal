<?php

/**
 * Implements hook_element_info_alter().
 */
function checked_element_info_alter(&$type) {
  if (isset($type['radio'])) {
    $type['radio']['#after_build'][] = 'checked_after_build';
  }
  if (isset($type['checkbox'])) {
    $type['checkbox']['#after_build'][] = 'checked_after_build';
  }
}

function checked_after_build($element, &$form_state) {
  $element['#attached']['js'][] = drupal_get_path('module', 'checked') . '/checked.js';
  return $element;
}
