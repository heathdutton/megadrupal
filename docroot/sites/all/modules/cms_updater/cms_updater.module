/**
 * Implements hook_menu().
 */
function cms_updater_menu() {
  $items = array();
  // Module settings.
  $items['admin/config/system/cms-updater'] = array(
    'title' => 'CMS Updater settings',
    'description' => 'Configure the CMS Updater module settings.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('cms_updater_settings_form'),
    'access arguments' => array('administer site configuration'),
    'file' => 'cms_updater.admin.inc',
    'file path' => drupal_get_path('module', 'cms_updater'),
  );
  return $items;
}

