 */
function aspera_ip_ranges_block() {
  $return = TRUE;
  
  $whitelist = aspera_ip_ranges_get_ip_list('whitelist');
  $current_ip = ip_address();
  
  foreach ($whitelist as $ip) {
    if (aspera_ip_ranges_check_ip($ip->ip, $current_ip)) {
      $return = FALSE; 
