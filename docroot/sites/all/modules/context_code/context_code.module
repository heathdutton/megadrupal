<?php

/**
 * Implements hook_context_plugins().
 */
function context_code_context_plugins() {
  $plugins = array();
  $plugins['context_code_context_condition_code'] = array(
    'handler' => array(
      'path' => drupal_get_path('module', 'context_code') . '/plugins',
      'file' => 'context_code_context_conditions.inc',
      'class' => 'context_code_context_condition',
      'parent' => 'context_condition',
    ),
  );
  return $plugins;
}

/**
 * Implements hook_context_registry().
 */
function context_code_context_registry() {
  return array(
    'conditions' => array(
      'context_code' => array(
        'title' => t('Code'),
        'description' => t('Select which code contexts should activate this condition.'),
        'plugin' => 'context_code_context_condition_code',
      ),
    ),
  );
}

/**
 * Implements of hook_context_page_condition().
 */
function context_code_context_page_condition() {
  if ($plugin = context_get_plugin('condition', 'context_code')) {
    $plugin->execute();
  }
}

/**
 * Return a list of code contexts.
 */
function context_code_list() {
  return module_invoke_all('context_code');
}

/**
 * Trigger a context.
 */
function context_code_trigger($trigger) {
  $triggers = &drupal_static('context_code_triggers');
  $triggers[$trigger] = $trigger;
}

/**
 * Get triggers code contexts.
 */
function context_code_get() {
  return (array) drupal_static('context_code_triggers');
}
