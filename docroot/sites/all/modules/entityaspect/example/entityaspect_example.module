<?php


/**
 * Implements hook_entityaspect()
 */
function entityaspect_example_entityaspect($api) {
  $api->type('taxonomy_term')
    ->page('taxonomy/term/%/example')
    ->viewMode('example', 'Example')
  ;
}


/**
 * Implements hook_entityaspect_page__ENTITY_TYPE()
 */
function entityaspect_example_entityaspect_page__taxonomy_term($api, $term, $route) {
  switch ($route) {
    case 'taxonomy/term/%/example':
      // TODO: Access check.
      $api->viewMode('example');
      $api->title(t('Example'));
      break;
  }
}
