<?php

/**
 * @file
 * Contains install and update functions for entityreference_calc.
 */

/**
 * Implements hook_field_schema().
 */
function entityreference_calc_field_schema($field) {
  return array(
    'columns' => array(
      'calculated' => array(
        'type' => 'numeric',
        'precision' => $field['settings']['precision'],
        'scale' => $field['settings']['scale'],
        'not null' => FALSE
      ),
    ),
  );
}
