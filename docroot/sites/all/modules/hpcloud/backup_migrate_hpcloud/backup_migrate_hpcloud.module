<?php
/**
 * @file
 * The backup_migrate_hpcloud module.
 */

/**
 * Implements hook_help().
 */
function backup_migrate_hpcloud_help($path, $arg) {
  switch ($path) {
    case 'admin/help#backup_migrate_hpcloud':
      return '<p>' . t('This module provides an HPCloud backend driver for backup and migrate.') . '</p>';
  }
}

/**
 * Implements hook_backup_migrate_destination_types().
 */
function backup_migrate_hpcloud_backup_migrate_destination_types() {
  $types = array(
    'hpcloud' => array(
      'type_name' => t('HPCloud Object Storage'),
      'description' => t('Store backups on HPCloud cloud-based object storage.'),
      'file' => drupal_get_path('module', 'backup_migrate_hpcloud') . '/destinations.hpcloud.inc',
      'class' => 'BackupMigrateHPCloud',
      'can_create' => TRUE,
    ),
  );
  return $types;
}
