/**
 * Determines access to the prior authorization capture form or void form for
 * BluePay credit card transactions.
 *
 * @param $order
 *   The order the transaction is on.
 * @param $transaction
 *   The payment transaction object to be captured.
 *
 * @return
 *   TRUE or FALSE indicating access.
 */
function commerce_bluepay_capture_void_access($order, $transaction) {
  // Return FALSE if the transaction isn't for BluePay or isn't awaiting capture.
  if ($transaction->payment_method != 'bluepay' || $transaction->remote_status != 1) {
    return FALSE;
  }

  // Return FALSE if the transaction is not pending.
  if ($transaction->status != COMMERCE_PAYMENT_STATUS_PENDING) {
    return FALSE;
  }

  $workable_transactions = array(
    COMMERCE_CREDIT_AUTH_ONLY,
  );

  if (!in_array($transaction->data['bluepay']['transaction_type'], $workable_transactions)) {
    return FALSE;
  }

  // Return FALSE if it is more than 10 days past the original authorization.
  // @see https://www.bluepay.com/downloads/BluePayGuide.pdf
  if (REQUEST_TIME - $transaction->created > 86400 * 10) {
    return FALSE;
  }

  // Allow access if the user can update payments on this transaction.
  return commerce_payment_transaction_access('update', $transaction);
}

/**
 * Determines access to refund a BluePay credit card transaction.
 *
 * @param $order
 *   The order the transaction is on.
 * @param $transaction
 *   The payment transaction object to be captured.
 *
 * @return
 *   TRUE or FALSE indicating access.
 */
function commerce_bluepay_refund_access($order, $transaction) {
  // Return FALSE if the transaction isn't for BluePay or isn't awaiting capture.
  if ($transaction->payment_method != 'bluepay' || $transaction->remote_status != 1) {
    return FALSE;
  }

  // Return FALSE if the transaction is not pending.
  if ($transaction->status != COMMERCE_PAYMENT_STATUS_SUCCESS) {
    return FALSE;
  }

  // Only allow capture or sale transactions to be refunded.
  $refundable_transactions = array(
    COMMERCE_CREDIT_CAPTURE_ONLY,
    COMMERCE_CREDIT_AUTH_CAPTURE,
  );

  if (!in_array($transaction->data['bluepay']['transaction_type'], $refundable_transactions)) {
    return FALSE;
  }

  // Return FALSE if it is more than 29 days past the original payment.
  if (REQUEST_TIME - $transaction->created > 86400 * 10) {
    return FALSE;
  }


  // Allow access if the user can update payments on this transaction.
  return commerce_payment_transaction_access('update', $transaction);
}

