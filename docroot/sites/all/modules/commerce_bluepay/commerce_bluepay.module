    '#options' => array(
      COMMERCE_CREDIT_AUTH_CAPTURE => t('Sale'),
      COMMERCE_CREDIT_AUTH_ONLY => t('Authorization only (requires manual or automated capture after checkout)'),
    ),
    '#default_value' => $settings['txn_type'],
