<?php

/**
 * @file
 * Install, update and uninstall functions for the commerce_brightpearl module.
 */

/**
 * Implements hook_install().
 */
function commerce_brightpearl_install() {
  drupal_set_message(t('To finish setting-up go to <a href="@url">Brightparl configuration</a>.', array('@url' => url('admin/commerce/config/brightpearl'))));
}

/**
 * Implements hook_uninstall().
 */
function commerce_brightpearl_uninstall() {
  variable_del('commerce_brightpearl_channel_id');
  variable_del('commerce_brightpearl_order_state');
  variable_del('commerce_brightpearl_new_order_status_id');
  variable_del('commerce_brightpearl_product_minimum_cache_days');
  variable_del('commerce_brightpearl_warehouse_id');
  variable_del('commerce_brightpearl_bank_account_nominal_code');
  variable_del('commerce_brightpearl_tax_code');
  variable_del('commerce_brightpearl_log_all_requests');
  variable_del('commerce_brightpearl_shipping_nominal_code');
  variable_del('commerce_brightpearl_stock_update_type');
  variable_del('commerce_brightpearl_stock_webhook_id');
  variable_del('commerce_brightpearl_signed_account_token');
  variable_del('commerce_brightpearl_user_communication_token');
  variable_del('brightpearl_last_updated_pid');
  variable_del('brightpearl_init_stock');
  variable_del('brightpearl_updated_count');
  variable_del('brightpearl_full_stock_update_log');
  variable_del('brightpearl_stock_update_batch_size');
  variable_del('commerce_brightpearl_notify_email');
  variable_del('commerce_brightpearl_order_notifications');
  variable_del('commerce_brightpearl_order_integration_state');
  variable_del('brightpearl_failed_orders');
}
