/**
 * @file
 * Installation code for bloggit module.
 */

/**
 * Implements hook_install().
 */
function bloggit_install() {
  // Opt out of Drupal's standard node permssions.
  variable_set('node_permissions_bloggit', 0);
}

/**
 * Implements hook_uninstall().
 */
function bloggit_uninstall() {
  // Clean up after ourselves.
  variable_del('node_permissions_bloggit');
}

