<?php

/**
 * Implements hook_page_alter().
 */
function fight215_page_alter(&$page) {
  if (!variable_get('fight215_count', TRUE)) {
    return;
  }
  drupal_add_js('https://www.fight215.org/count/scripts/count.min.js', array(
    'type' => 'external',
    'scope' => 'footer',
    'defer' => TRUE,
  ));
}

/**
 * Implements hook_block_info().
 */
function fight215_block_info() {
  return array(
    'graphic_logo' => array(
      'info' => t('Fight 215 graphic with logo'),
      'cache' => DRUPAL_CACHE_GLOBAL,
    ),
    'graphic_photo' => array(
      'info' => t('Fight 215 graphic with photo'),
      'cache' => DRUPAL_CACHE_GLOBAL,
    ),
  );
}

/**
 * Implements hook_block_view().
 */	
function fight215_block_view($delta = '') {
  $block['subject'] = '';
  switch ($delta) {
    case 'graphic_logo':
      $variables['path'] = 'https://www.eff.org/files/2015/05/12/215-share-1.jpg';
      $variables['alt'] = t('This is our chance to end mass surveillance. Fight215.org');
      break;
    case 'graphic_photo':
      $variables['path'] = 'https://www.eff.org/files/2015/05/12/215-share-3.jpg';
      $variables['alt'] = t('Right now, in America, someone is keeping a record of every call you make: who you call, and who calls you, when you talked and for how long. Fight215.org');
      break;
  }
  $variables['title'] = $variables['alt'];
  $variables['attributes']['class'][] = 'fight215';
  $block['content']['#attached']['css'][] = drupal_get_path('module', 'fight215') . '/fight215.css';
  $block['content']['#markup'] = l(theme('image', $variables), 'https://www.fight215.org/', array('html' => TRUE));
  return $block;
}
