{% assign collection_handle = settings.home_featured_single_product %}

{% unless collection_handle == blank or collections[collection_handle].empty? %}
  {% if collections[collection_handle].products_count > 0 %}
    {% assign product = collections[collection_handle].products.first %}
    {% include 'single-product' %}
  {% else %}
    {% include 'blank-single-product' %}
  {% endif %}
{% else %}
  {% include 'blank-single-product' %}
{% endunless %}
