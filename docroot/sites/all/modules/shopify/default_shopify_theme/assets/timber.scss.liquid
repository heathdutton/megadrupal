.grid-image {
  display: table;
  table-layout: fixed;
  margin: 0 auto ($gutter / 2);
  position: relative;
  padding: 0 8%;
  width: 100%;

  img {
    display: block;
    margin: 0 auto;
    opacity: 1;
    @include transition(opacity 0.3s ease-out);
    @include backface();

    &:hover {
      opacity: 0.9;
      @include transition(opacity 0.05s ease-out);
    }
  }

  .is-sold-out & {
    img {
      opacity: 0.5;
      position: relative;

      &:hover {
        opacity: 0.6;
        @include transition(opacity 0.05s ease-out);
      }
    }
  }
}

.grid-image--centered {
  display: table-cell;
  vertical-align: middle;
}

/*============================================================================
  #Collection Filters
==============================================================================*/
.active-filter {
  font-weight: bold;
}

/*============================================================================
  #Breadcrumbs
==============================================================================*/
.breadcrumb {
  margin-bottom: $gutter;

  a,
  span {
    display: inline-block;
    padding: ($gutter / 2) 7px ($gutter / 2) 0;
    margin-right: 7px;

    &:first-child {
      padding-left: 0;
    }
  }
}


/*============================================================================
  #Product Page
==============================================================================*/
.product-variants {
  display: none;

  .no-js & {
    display: block;
  }
}

@include at-query($min, $large) {
  .selector-wrapper,
  .product-variants {
    select {
      max-width: 40%;
    }
  }
}

.selector-wrapper {
  padding-right: 25px;
}


/*================ Product Title ================*/

.item-product-title {
  padding: 0 0 40px 24px;

  h1 {
    text-align: center;
    margin-bottom: 10px;
  }

  h2,
  .h2 {
    font-family: $accentFontStack;
    font-size: $accentFontSize;
    color: $colorSubHeading;

    {% if settings.type_navigation_transform %}
      text-transform: uppercase;
    {% endif %}
  }

  .collection-title {
    font-family: $headerFontStack;
    color: $colorSubHeading;
    font-size: em(14px);
    letter-spacing: 2px;
    margin-bottom: 10px;
    display: inline-block;

    &:hover,
    &:active,
    &:focus {
      color: $colorHeading;
    }

    {% if settings.type_navigation_transform %}
      text-transform: uppercase;
    {% endif %}
  }
}

/*================ Product Description ================*/

.item-product-description {
  margin-bottom: 0;

  ul,
  ol {
    margin-left: 0;
    list-style-position: inside;
  }
}


/*================ Product Images ================*/

  @include at-query($max, $small) {
    .item-product-photo {
      //overrides push class on larger breakpoints
      left: 0;
    }
  }

  @include at-query($max, $small) {
    .item-product-thumbnails {
      //overrides push class on larger breakpoints
      left: 0;
    }

    .product-photo-thumbs {
      text-align: center;

      li {
        padding-right: 10px;
        display: inline-block;
      }
    }
  }

.product-photo-container {
  margin-bottom: $gutter;
}

.product-photo-container,
.product-photo-thumbs {
  img {
    display: block;
    margin: 0 auto;
  }

  li {
    margin-bottom: $gutter;
  }
}

.product-photo-thumb {
  opacity: 0.4;
  max-width: 70px;
  margin-right: 0;
  margin-left: auto;
  display: block;
  @include transition(opacity 0.2s ease-out);
  @include backface();

  img {
    max-width: 60px;
  }

  &:hover {
    opacity: 0.8;
    @include transition(opacity 0.05s ease-in);
  }

  &.active,
  &:active {
    opacity: 1;
    @include transition(opacity 0.05s ease-in);
  }
}

/*================ Add To Cart Form ================*/

.form-add-to-cart {
  text-align: center;

  & > div {
    display: inline-block;
    margin-top: 15px;
  }

  @include at-query($max, $large) {
    .selector-wrapper {
      display: block;
    }
  }

  @include at-query($max, $small) {
    & > div {
      display: block;
    }
  }

  .js-qty {
    display: inline-block;
  }

  .single-option-selector {
    // maintains a constant width on variant selects
    // not actually a magic number. promise.
    min-width: 155px;
    max-width: 205px;
  }

  .price-container {
    @include at-query($min, $small) {
      margin-right: 25px;
      margin-left: 40px;
    }

    .compare-price {
      display: inline-block;
      color: $colorPrice;
      text-decoration: line-through;
      font-size: em(20px);
      margin-right: 10px;
    }

  }

  .product-price {
    color: $colorHeading;
    font-family: $headerFontStack;
    font-size: em(26px);
    display: inline-block;

    &.sale-price {
      color: $colorSalePrice;
    }
  }

  label {
    padding: 0 20px 0 10px;
  }

  .form-item-container {
    font-family: $headerFontStack;
  }
}

.add-to-cart-container {
  position: relative;
}

.btn-add-to-cart {
  font-family: $accentFontStack;
  margin-top: -2px;

  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}

  .out-of-stock-icon-wrapper {
    display: none;
  }

  &.disabled {
    background-color: $errorRed;
    color: #fff;

    .out-of-stock-icon-wrapper {
      display: inline-block;
      position: relative;
    }

    .icon-error {
      display: inline-block;
      width: 18px;
      height: 18px;
      border-radius: 50%;
      line-height: 10px;
      font-size: em(15px);
      margin-right: 5px;
      margin-left: -2px;
    }
  }
}

.qty-container {
  input[type="number"] {
    max-width: 60px;
    text-align: center;
    margin: 0 auto;
  }
}

.low-stock-container {
  position: absolute;
  font-family: $headerFontStack;
  color: $errorRed;
  width: 100%;
  text-align: center;
  padding-top: 5px;
  font-size: em(12px);

  img {
    margin-bottom: -2px;
  }
}

/*============================================================================
  #Carousel Pagination
==============================================================================*/
.owl-dots {
  text-align: center;
}

.owl-dot {
  display: inline-block;
  width: 8px;
  height: 8px;
  border-radius: 4px;
  background-color: $colorBorder;
  margin: 7px;

  &.active {
    background-color: transparent;
    width: 10px;
    height: 10px;
    border: 2px solid $colorBtnPrimary;
    border-radius: 5px;
    margin-bottom: 6px;
  }
}

/*============================================================================
  #Related Product Carousel
==============================================================================*/

.carousel {
  position: relative;
  margin: 0 -12px;

  .owl-nav {
    width: 100%;
    position: absolute;
    top: 30%;
    z-index: 1;
  }

  &:hover {
    .carousel__nav-control {
      opacity: 0.5;
      @include transition(opacity 0.05s ease-in);
    }
  }

  .owl-carousel {
    display: block;

    .owl-item {
      -webkit-backface-visibility: visible;
    }

    img {
      transform-style: flat;
    }
  }

  @include at-query ($min, $large) {
    padding: 0 120px;
    margin: 0;
  }

  @include at-query (null, $small, $medium) {
    padding: 0 70px;
  }

  @include at-query ($max, $small) {
    margin: 0 (-$gutter);

    .owl-item {
      opacity: 0.6;

      .product-item__name,
      .product-item__price {
        visibility: hidden;
      }

      &.active {
        opacity: 1;

        .product-item__name,
        .product-item__price {
          visibility: visible;
        }
      }
    }
  }
}


.carousel__title {
  font-family: $headerFontStack;
  font-size: em($headerFontSize / 1.48);
  color: $colorHeading;
  word-wrap: break-word;
}

.carousel__items {
  margin-left: 0;
  margin-top: 50px;

  .grid-item {
    padding-left: 0px;
  }
}

.carousel__nav-control {
  width: 35px;
  height: 35px;
  position: absolute;
  padding: 5px;
  background-color: $colorHeading;
  color: $colorBody;
  opacity: 0.15;
  @include transition(opacity 0.2s ease-out);

  &:hover,
  &:active {
    background-color: $colorHeading;
    color: $colorBody;
    opacity: 0.8;
    @include transition(opacity 0.05s ease-in);
  }
}

.carousel__nav-control--next {
  right: -12%;
}

.carousel__nav-control--prev {
  left: -12%;
}

/*============================================================================
  # Homepage Slider
==============================================================================*/

.homepage-slider {
  margin-left: -$gutter;
  margin-right: -$gutter;
  margin-bottom: $gutter;

  .owl-nav {
    display: none;
  }
}

.owl-carousel {
  .owl-item img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    width: auto;
  }
}

/*============================================================================
  #Filter Dropdowns
==============================================================================*/
.filter-dropdown {
  position: relative;
  max-width: 250px;
  height: 60px;
  margin: 0 auto;
}

.supports-pointerevents {
  .filter-dropdown__select {
    position: absolute;
    text-indent: -999px;
  }

  .filter-dropdown__label {
    font-size: $baseFontSize;
    font-family: $bodyFontStack;
    color: $colorTextBody;
    background-color: $colorBody;
    font-weight: normal;
    display: block;
    text-align: left;
    position: absolute;
    top: 3px;
    left: 8px;
    margin: 5px;
    white-space: nowrap;
    max-width: 80%;
    overflow: hidden;
    text-overflow: ellipsis;
    cursor: pointer;
    pointer-events: none;
    z-index: 1;
  }
}

/*============================================================================
  #Blogs and Comments
==============================================================================*/

.blog__name {
  font-size: em(14px);
  text-transform: uppercase;
  color: $colorSubHeading;
  font-family: $headerFontStack;
  font-weight: 700;
  letter-spacing: 2px;
  display: inline-block;
  margin-bottom: 10px;

  &:hover,
  &:active,
  &:focus {
    color: $colorHeading;
  }
}

.blog__details,
.blog-list__details {
  font-family: $accentFontStack;
  font-size: $accentFontSize;
  font-weight: 700;
  color: $colorSubHeading;
  padding-top: 0px;
  margin-top: -10px;

  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}

  .bullet {
    margin: 0 10px;
  }
}

/*================ Blog List Styles ================*/

.blog-list {
  text-align: center;
}

.blog-list__filters {
  font-size: $baseFontSize;
}

.blog-list__title {
  margin-bottom: 22px;
}

.blog-list__excerpt {
  margin-top: 14px;

  p:last-child {
    margin-bottom: 0;
  }
}

.blog-list__btn-read-more {
  margin-bottom: 55px;

  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}
}

.blog-list__read-more {
  margin-top: 15px;

  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}
}

/*================ Article ================*/
.blog-article__content {
  margin-top: -22px
}

/*================ Comments ================*/

.blog-comments {
  h3,
  .h3 {
    text-align: center;
    margin: 55px 0 35px;
  }
}

.comment {
  width: 100%;

  .comment__content {
    padding-left: 25px;
    word-wrap: break-word;
  }
}


.comment__details {
  p {
    text-align: right;
    margin: 0px;
  }
}

.comment__author {
  font-size: em(15px);
  font-family: $headerFontStack;
  color: $colorHeading;
  text-transform: capitalize;
  padding-top: 2px;
}

.comment__date {
  font-size: em(13px);
  font-family: $accentFontStack;
  color: $colorSubHeading;

  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}
}

.comment-form__errors {
  margin-top : 25px;
}

/*============================================================================
  #Notes and Form Feedback
==============================================================================*/
.note,
.errors {
  border-radius: $radius;
  padding: $gutter / 2;
  margin-bottom: $gutter / 2;
  border: 1px solid transparent;
  text-align: left;

  ul,
  ol {
    margin-top: 0;
    margin-bottom: 0;
  }

  li:last-child {
    margin-bottom: 0;
  }

  p {
    margin-bottom: 0;
  }
}

.note {
  border-color: $colorBorder;
}

.errors {
  ul {
    list-style: disc outside;
    margin-left: 20px;
  }
}

.form-success {
  color: $successGreen;
  background-color: lighten($successGreen, 65%);
  border-color: $successGreen;
}

.form-error {
  color: $errorRed;

  &.inline {
    display: inline-block;
  }
}

.errors {
  color: $errorRed;
  background-color: $errorRedBg;
  border-color: $errorRed;
}


/*============================================================================
  #Cart Page
==============================================================================*/
@include at-query ($min, $large) {
  .template-cart .cart-wrapper {
    max-width: 85%;
    margin: 0 auto ($gutter * 2);
  }
}

.cart-row {
  margin-top: $gutter;
  padding-top: $gutter;
  border-top: 1px solid $colorBorder;

  &:first-child {
    margin-top: 0;
  }

  &:first-child {
    padding-top: 0;
    border-top: 0 none;
  }

  .js-qty,
  .ajaxifyCart--qty {
    display: inline-block;
    margin: 0;
  }

  input[name="goto_pp"] {
    padding: 9px 0px;
  }

  .google-wallet-button-holder {
    display: inline-block;
    vertical-align: 18px;
  }
}

.cart__additional-checkout-buttons {
  margin-top: 10px;
}

.cart-item__remove {
  display: block;
}

@include at-query ($min, $large) {
  .cart-row__table-layout {
    display: table;
    table-layout: fixed;
    width: 100%;

    .grid {
      display: table;
    }

    .grid-item {
      display: table-cell;
      vertical-align: middle;
      float: none;
    }
  }
}

.cart-image {
  display: block;
  margin: 0 auto;
  max-width: 150px;

  img {
    display: block;
    margin: 0 auto;
  }
}

.cart-subtotal__label {
  display: inline;
}

.cart-subtotal__price {
  margin: 0 0 0 ($gutter * 2);
  display: inline-block;
}

.cart-subtotal__note {
  padding: $gutter 0;
  margin-bottom: 0;
}

.cart-mini-labels {
  display: block;
  margin: ($gutter / 3) 0;
  font-size: em(12px);

  @include at-query ($min, $large) {
    display: none;
  }
}

.cart__note-add.is-hidden {
  display: none;
}

.cart__note {
  display: none;

  &.is-active {
    display: block;
  }
}

.cart-row .update-cart {
  margin-right: 10px;
}

.cart-subtotal {
  text-align: right;
}

@include at-query ($max, $small) {
  .cart-wrapper {
    .input-full {
      margin-bottom: 0px;
    }

    input[type="submit"] {
      display: block;
      margin: 10px auto;
    }
  }

  .cart-summary {
    text-align: center;
  }

  .cart-subtotal {
    text-align: center;
  }

  .cart__note-wrapper {
    margin-bottom: 25px;
  }
}

.cart__note-wrapper textarea {
  resize: none;
}

/*============================================================================
  #Collection List Page
==============================================================================*/
.collection-list {
  .section-header,
  h1 {
    margin-bottom: -10px;
  }
}

.collection-list__header {
  padding-bottom: 30px;
}

.collection-item {
  position: relative;
  display: inline-block;
  width: 49%;
  margin-top: 60px;
}

.collection-item__image {
  display: block;
  margin: 0 auto
}

.collection-item__title {
  @extend .product-item__name;
}

.collection-sorting {
  margin-top: 25px;

  /*================ Medium Up Breakpoint ================*/
  @include at-query ($min, $small) {
    margin: 25px 60px 0 60px;

    .grid-item {
      padding: 0 15px;
    }
  }
}

/*============================================================================
  # Login and Account
==============================================================================*/
.account__header {
  margin-bottom: 1.2em;

  h1 {
    margin-bottom: 0;
  }
}


/*============================================================================
  #Contact Page
==============================================================================*/
.contact-form__title {
  margin: 50px 0 30px;
}
.contact-form__errors {
  margin-top: 25px;
}
