/*============================================================================
  #Typography
==============================================================================*/
body,
input,
textarea,
button,
select {
  font-size: $baseFontSize;
  line-height: 1.6;
  font-family: $bodyFontStack;
  color: $colorTextBody;
  font-weight: 300;
  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $headerFontStack;
  font-weight: $headerFontWeight;
  color: $colorHeading;
  margin: 0 0 0.5em;
  line-height: 1.4;

  {% if settings.type_heading_transform %}
    text-transform: uppercase;
  {% endif %}

  a {
    color: inherit;
    text-decoration: none;
    font-weight: inherit;

    &:hover,
    &:active,
    &:focus {
      color: inherit;
    }
  }
}

/*================ Use em() Sass function to declare font-size ================*/
h1 {
  font-size: em($headerFontSize);
}

h2 {
  font-size: em($headerFontSize / 1.32);
}

h3 {
  font-size: em($headerFontSize / 1.68);
}

h4 {
  font-size: em($headerFontSize / 1.85);
}

h5 {
  font-size: em($headerFontSize / 2.31);
}

h6 {
  font-size: em($headerFontSize / 2.64);
}



.h1 { @extend h1; }
.h2 { @extend h2; }
.h3 { @extend h3; }
.h4 { @extend h4; }
.h5 { @extend h5; }
.h6 { @extend h6; }

p {
  margin: 0 0 ($gutter / 2) 0;

  img {
    margin: 0;
  }
}

em {
  font-style: italic;
}

b, strong {
  font-weight: bold;
}

small {
  font-size: 80%;
}

sup, sub {
  position: relative;
  font-size: 80%;
  vertical-align: baseline;
}
sup {
  top: -0.2em;
}

sub {
  bottom: -0.2em;
}

/*================ Blockquotes ================*/
blockquote {
  font-size: em(23px);
  line-height: 1.45;
  margin: 0;
  padding: ($gutter / 2) 0;
  text-align: center;

  &:before,
  &:after {
    content: '';
    display: block;
    margin: 25px auto;
    width: 70%;
    border-top: 1px solid $colorBorder;
  }
  &:before {
    margin-top: 0;
  }

  p {
    margin-bottom: 0;
    color: $colorHeading;
    font-family: $headerFontStack;

    & + cite {
      margin-top: $gutter / 2;
    }
  }

  cite {
    display: block;
    font-size: 0.75em;

    &:before {
      content: "\2014 \0020";
    }
  }
}

/*================ Code ================*/
code, pre {
  background-color: #faf7f5;
  font-family: Consolas,monospace;
  font-size: 1em;
  border: 0 none;
  padding: 0 2px;
  color: #51ab62;
}

pre {
  overflow: auto;
  padding: $gutter / 2;
  margin: 0 0 $gutter;
}

/*================ Horizontal Rules ================*/
hr {
  clear: both;
  border-top: solid $colorBorder;
  border-width: 1px 0 0;
  margin: ($gutter * 2) 0;
  height: 0;

  &.hr--small {
    margin: ($gutter / 2) 0;
  }

  &.hr--clear {
    border-top-color: transparent;
  }

  &.hr--large {
    margin-top: $gutter*2;
  }

  &.hr--narrow {
    width: 70%;
    margin: ($gutter * 2) auto;
    max-width: 360px;
  }

  &.hr--header {
    margin: 0;
  }
}

/*================ Section Headers ================*/
.section-header {
  margin-bottom: 50px;
  text-align: center;
}

.section-header--sub {
  margin-top: 50px;
  margin-bottom: 0px;
}

@include at-query ($min, $large) {
  .section-header {
    display: table;
    width: 100%;
  }

  .section-header--title {
    margin-bottom: $gutter / 2.5;
  }

  .section-header--left {
    display: table-cell;
    vertical-align: middle;
    margin-bottom: 0;

    h1, h2, h3, h4,
    .h1, .h2, .h3, .h4 {
      margin-bottom: 0;
    }
  }

  .section-header--right {
    display: table-cell;
    vertical-align: middle;
    text-align: right;
    width: 335px;

    @include at-query ($max, $medium) {
      margin-bottom: $gutter;
    }
  }
}

.section-header--right {
  .form-horizontal,
  .collection-view {
    display: inline-block;
    vertical-align: middle;
  }

  @include at-query ($min, $postSmall) {
    label + select,
    .collection-view {
      margin-left: $gutter / 2;
    }
  }
}

.collection-view {
  display: inline-block;
  border: 1px solid $colorBorder;
  border-radius: $radius;
  padding: 11px;
  height: 37px; // same as form elements

  /*================ We use SVG icons, so simply hide this in oldIE ================*/
  .lt-ie9 & {
    display: none;
  }

  /*================ Only show on larger screens ================*/
  @include at-query ($min, $large) {
    display: inline-block;
  }

  a {
    display: block;
    float: left;
    opacity: 0.7;
    cursor: pointer;

    & + a {
      margin-left: 10px;
    }

    &.collection-view--active {
      opacity: 1;
      cursor: default;
    }
  }

  img {
    display: block;
    opacity: inherit;
  }
}

/*============================================================================
  #Rich Text Editor
==============================================================================*/
.rte {
