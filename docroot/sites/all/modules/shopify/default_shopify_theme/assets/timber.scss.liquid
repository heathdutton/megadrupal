/*================ Dropdowns ================*/
.site-nav--dropdown {
  visibility: hidden;
  opacity: 0;
  position: absolute;
  left: 0;
  margin: -5px 0 0;
  z-index: 5;
  background-color: $colorBody;
  border: 1px solid $colorBorder;
  border-radius: $radius;
  @include transition(opacity 0.3s ease-in-out);

  li:hover {
    background-color: darken($colorBody, 15%);
  }

  li:first-child {
    padding-top: 13px;

    &:before,
    &:after {
      content: "";
      position: absolute;
      height: 0;
      width: 0;
      right: 46%;
      border-left: 8px solid transparent;
      border-right: 8px solid transparent;
    }

    &:before {
      top: -8px;
      border-bottom: 8px solid $colorBorder;

    }

    &:after {
      top: -7px;
      border-bottom: 8px solid $colorBody;
    }

    &:hover {
      &:after {
        border-bottom: 8px solid darken($colorBody, 15%);
      }
    }
  }

  li:last-child {
    padding-bottom: 13px;
  }

