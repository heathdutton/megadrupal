<?php
/**
 * @file
 * Install hooks for the akamai_edge_control module.
 */

/**
 * Implements hook_install().
 */
function akamai_edge_control_install() {
  // Set the weight to 100 to allow other modules to have a say
  // about page cachablity before we add our Edge-control header.
  db_update('system')
    ->fields(array('weight' => 100))
    ->condition('name', 'akamai_edge_control')
    ->execute();
}
