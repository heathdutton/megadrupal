<?php

/**
 * @file
 * Installation and update functions for the Exclusive Value module.
 */

/**
 * Implements hook_uninstall().
 */
function exclusive_value_uninstall() {
	// Get a list of all the CCK fields.
	$fields = field_info_fields();

	foreach ($fields as $field) {
		variable_del('exclusive_value_global_'. $field['field_name']);
	}

}
