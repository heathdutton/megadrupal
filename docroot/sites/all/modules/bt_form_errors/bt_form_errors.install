<?php 

/**
 * @file
 * BeautyTips Form Errors install/uninstall
 */

/**
 * Implementation of hook_install().
 */
function bt_form_errors_install() {
  variable_set('beautytips_always_add', 1);
}

/**
 * Implementation of hook_uninstall().
 */
function bt_form_errors_uninstall() {
  variable_del('bt_form_errors');
}
