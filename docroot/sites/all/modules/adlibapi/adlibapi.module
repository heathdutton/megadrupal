      $output .= '<li>' . t("Create a new adlib database setting at 'admin/build/adlibapi', or use the supplied adlib_sandbox setting") . '</li>';
      $output .= '<li>' . t("Create a new Feed importer at 'admin/build/feeds'") . '</li>';
