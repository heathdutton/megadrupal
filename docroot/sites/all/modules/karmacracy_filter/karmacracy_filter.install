<?php

/**
 * @file
 * Karmacracy Filter installation file.
 */

/**
 * Implements hook_install().
 */
function karmacracy_filter_install() {
  $t = get_t();
  drupal_set_message(filter_xss($t('You must add Karmacracy Filter to one or more !text_formats to start using it.',
    array('!text_formats' => l($t('Text formats'), 'admin/config/content/formats')))));
}
