/**
 * Implements hook_install().
 */
function nm_breadcrumb_install() {
  //set weight to before other modules so they can use the data from breadrumb_array in page variables
  db_query("UPDATE {system} SET weight = -21 WHERE name = 'nm_breadcrumb'");
}