<?php

/**
 * @file
 * Code for the Apollo XIII module.
 */

/**
 * Implements of hook_views_api().
 *
 * Inform views that you have a views plugin.
 */
function apollo_xiii_views_api() {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'apollo_xiii') . '/includes/views',
  );
}

/**
 * Implements hook_permission().
 */
function apollo_xiii_permission() {
  $permissions = array(
    'administer apollo xiii' => array(
      'title' => t('Administer apollo xiii'),
    ),
    'access apollo xiii' => array(
      'title' => t('Access apollo xiii'),
    ),
  );

  return $permissions;
}
