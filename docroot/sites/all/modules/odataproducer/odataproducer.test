<?php
/**
 * @file
 * Tests for ODataProducer module.
 */

/**
 * ODataProducer integration test case.
 */
class ODataProducerTestCase extends DrupalWebTestCase {

  public static function getInfo() {
    return array(
      'name' => 'ODataProducer',
      'description' => 'Validates whether the ODataProducer library can be autoloaded.',
      'group' => 'OData',
    );
  }

  protected function setUp() {
    // Enable the ODataProducer and related required modules.
    parent::setUp(array('libraries', 'odataproducer'));
  }

  public function testAutoload() {
    // Assert the ODataProducer library autoload functionality.
    $this->assertTrue(class_exists('ODataProducer\DataService', TRUE), 'ODataProducer library auto class loading.');
  }

}