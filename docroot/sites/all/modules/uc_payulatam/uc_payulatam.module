    }
    else {
      $iva_description = t('You must enable !taxes module.', array('!taxes' => l('Taxes', 'admin/modules', array('fragment' => 'edit-status-uc-taxes-wrapper'))));
    }
    $form['uc_payulatam_iva_tax_id'] = array(
