<?php

/**
 * @file
 * Load all Field module hooks for jqueryui formatters.
 */

require_once drupal_get_path('module', 'jqueryui_formatters') . '/jqueryui_formatters.field.inc';

/**
 * Implements hook_help().
 */
function jqueryui_formatters_help($path, $arg) {
  switch ($path) {
    case 'admin/help#jqueryui_formatters':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The jqueryui Formatters module provides three display formatters for fields of types text, text_long or text_with_summary') . '</p>';
      $output .= '<p>' . t('Accordion , Tab and Dialog are the new formatters available for simple and multiple value fields. Every one has a settings section for customizations') . '</p>';
      $output .= '<p>' . t('Configure the way you want to show your fields in admin/structure/types/manage/your-content-type/display') . '</p>';
      return $output;
  }
}

/**
 * Implements hook_theme().
 */
function jqueryui_formatters_theme() {
  return array(
    // Theme functions in jqueryui_formatters.module.
    'jqueryui_formatters_dialog' => array(
      'variables' => array(
        'text' => NULL,
        'title' => NULL,
        'unique_instance_id' => NULL,
        'delta' => NULL,
        'link_text' => NULL,
      ),
    ),
    'jqueryui_formatters_accordion' => array(
      'variables' => array(
        'header' => NULL,
        'instance' => NULL,
        'langcode' => NULL,
        'items' => NULL,
        'unique_instance_id' => NULL,
      ),
    ),
    'jqueryui_formatters_tabs' => array(
      'variables' => array(
        'instance' => NULL,
        'langcode' => NULL,
        'items' => NULL,
        'unique_instance_id' => NULL,
      ),
    ),
  );
}
