<?php
/**
 * @file
 * Install and update hooks for YPlan.
 */

/**
 * Implements hook_uninstall().
 */
function yplan_uninstall() {
  // Delete all yplan variables on uninstall.
  $variables = array(
    'yplan_affiliate_id',
    'yplan_element_id',
    'yplan_type',
    'yplan_category',
    'yplan_style',
    'yplan_items',
    'yplan_width',
  );

  foreach ($variables as $variable) {
    variable_del($variable);
  }
}
