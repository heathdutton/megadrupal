<?php

/**
 * @file
 * password_compat.module
 *
 * Add support for the password compat library.
 */

/**
 * Implements hook_libraries_info().
 */
function password_compat_libraries_info() {
  $libraries['password_compat'] = array(
    'name' => 'Password Compat',
    'vendor url' => 'https://github.com/ircmaxell/password_compat',
    'download url' => 'https://github.com/ircmaxell/password_compat/releases/tag/v1.0.3',
    'version arguments' => array(
      'file' => 'composer.json',
      'pattern' => '@"version":\s"([0-9\.]+)",@',
      'lines' => 4,
    ),
    'files' => array(
      'php' => array('lib/password.php'),
    ),
  );

  return $libraries;
}
