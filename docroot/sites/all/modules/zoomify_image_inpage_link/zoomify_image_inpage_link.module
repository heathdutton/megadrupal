<?php

/**
 * @file
 *
 * Implements Zoomify Image formatter for inpage Links to open Image in viewer.
 */

/**
 * Implements hook_field_formatter_info().
 */
function zoomify_image_inpage_link_field_formatter_info() {
  return array(
    'zoomify_image_inpage_link' => array(
      'label' => 'Image linked to Zoomify viewer on CURRENT page',
      'description' => t('Displays an image linked to the Zoomify viewer on the current page (requires another field set as Zommify image!)'),
      'field types' => array('image'),
      'settings' => array('image_style' => ''),
    ),
  );
}

/**
 * Implements hook_field_formatter_settings_form().
 */
function zoomify_image_inpage_link_field_formatter_settings_form($field, $instance, $view_mode, $form, &$form_state) {
  $display = $instance['display'][$view_mode];
  $settings = $display['settings'];

  if ($display['type'] == "zoomify_image_inpage_link") {
    $image_styles = image_style_options(FALSE);
    $element['image_style'] = array(
      '#title' => t('Image style'),
      '#type' => 'select',
      '#default_value' => $settings['image_style'],
      '#empty_option' => t('None (original image)'),
      '#options' => $image_styles,
    );
  }

  return $element;
}

/**
 * Implements hook_field_formatter_settings_summary().
 */
function zoomify_image_inpage_link_field_formatter_settings_summary($field, $instance, $view_mode) {
  $display = $instance['display'][$view_mode];
  $settings = $display['settings'];

  $summary = array();

  if ($display['type'] == "zoomify_image_inpage_link") {
    $image_styles = image_style_options(FALSE);
    // Unset possible 'No defined styles' option.
    unset($image_styles['']);
    // Styles could be lost because of enabled/disabled modules that defines
    // their styles in code.
    if (isset($image_styles[$settings['image_style']])) {
      $summary[] = t('Image style: @style', array('@style' => $image_styles[$settings['image_style']]));
    }
    else {
      $summary[] = t('Original image');
    }
  }

  return implode('<br />', $summary);
}

/**
 * Implements hook_field_formatter_view().
 */
function zoomify_image_inpage_link_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
  foreach ($items as $delta => $item) {
    switch ($display['type']) {
      case 'zoomify_image_inpage_link':
        global $base_root;
        $image_fid = $item['fid'];
        $image_url = file_create_url(_zoomify_filepath($entity, $image_fid));
        $item['attributes']['onclick'] = 'Z.Viewer.setImagePath("' . $image_url . '"); document.getElementById("ViewerDisplay").scrollIntoView();';
        $element[$delta] = array(
          '#theme' => 'image_formatter',
          '#item' => $item,
          '#image_style' => $display['settings']['image_style']
        );
        break;
    }
  }

  return $element;
}