<?php

/**
 * @file
 * Install, update and uninstall functions for the npr_story module.
 */

/**
 * Implements hook_install().
 */
function npr_story_install() {

  $audio = array(
    'field_name' => 'npr_audio',
    'type' => 'npr_audio',
    'cardinality' => FIELD_CARDINALITY_UNLIMITED,
  );
  if (!field_read_field('npr_audio')) {
    field_create_field($audio);
  }

  node_types_rebuild();
  $types = node_type_get_types();
  node_add_body_field($types['npr_story']);

  $instances = _npr_story_get_all_field_instances();
  foreach ($instances as $instance) {
    if (!field_info_instance('node', $instance['field_name'], 'npr_story')) {
      field_create_instance($instance);
    }
  }
  variable_set('node_submitted_npr_story', 0);
}

/**
 * Implements hook_uninstall().
 */
function npr_story_uninstall() {

}

/**
 * Rebuild audio, which nows has unlimited cardinality.
 */
function npr_story_update_7000() {
  $audio = array(
    'field_name' => 'npr_audio',
    'cardinality' => FIELD_CARDINALITY_UNLIMITED,
  );
  field_update_field($audio);
}

