<?php

/**
 * @file
 * Install, update and uninstall functions for the Concat Field module.
 */

/**
 * Implements hook_field_schema().
 */
function concat_field_field_schema($field) {
  $columns = array(
    'value' => array(
      'type' => 'text',
      'size' => 'big',
      'not null' => FALSE,
    ),
  );
  return array(
    'columns' => $columns,
  );
}

