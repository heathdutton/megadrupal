<?php

/**
 * @file
 * Integrates the AmplifyJS Library.
 */

/**
 * Implements hook_init().
 */
function amplifyjs_init() {
  // We use hook init rather than defining it in the .info file so
  // it can be added as a library.
  drupal_add_library('amplifyjs', 'amplifyjs');
}

/**
 * Implements hook_library().
 */
function amplifyjs_library() {
  $libraries['amplifyjs'] = array(
    'title' => 'amplifyjs', 
    'website' => 'http://amplifyjs.com', 
    'version' => '1.0.0', 
    'js' => array(
      drupal_get_path('module', 'amplifyjs') . '/lib/amplifyjs-min.js' => array('group' => JS_LIBRARY, 'every_page' => TRUE, 'weight' => -19),
    ),
  );
  return $libraries;
}
