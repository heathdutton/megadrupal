/**
 * Implements hook_preprocess_html_tag().
 */
function smart_chart_preprocess_html_tag(&$variables) {
  // Needed to render children of form items.
  // Loop over element children, render them, and add them to the #value string.
  foreach (element_children($variables['element']) as $key) {
    if ($variables['element']['#value'] === NULL) {
      // Set this to string to avoid E_NOTICE error when concatenating to NULL.
      $variables['element']['#value'] = '';
    }
    // Concatenate the rendered child onto the element #value.
    $variables['element']['#value'] .= drupal_render($variables['element'][$key]);
  }
}

/**
 * Implements hook_form_alter().
 */
function smart_chart_form_alter(&$form, &$form_state, $form_id) {

  if ($form_id == 'smart_chart_form') {
    if (module_exists('nodejs_integration')) {
      // Register Node.js callback.
      $chart_nid = $form['chart_nid']['#value'];
      $first_nid = $form['first_nid']['#value'];
      $element = '#chart_container_' . $first_nid . ' .refresh_silent_' . $first_nid;
      nodejs_integration_register('chart_nid_' . $chart_nid, $element);
    }
  }
}

/**
 * Implements hook_sc_connection_post_new().
 */
function smart_chart_sc_connection_post_new($smart_connection) {
  // Trigger chart change.
  if (module_exists('nodejs_integration')) {
    global $user;
    $sid = isset($user->sid) ? $user->sid : 0;
    nodejs_integration_trigger('chart_nid_' . $smart_connection->field_sc_chart->getIdentifier(), $sid);
  }
}

/**
 * Implements hook_sc_item_post_break()
 */
function smart_chart_sc_item_post_break($chart_nid, $item_nid) {

  // Trigger chart change.
  if (module_exists('nodejs_integration')) {
    global $user;
    $sid = isset($user->sid) ? $user->sid : 0;
    nodejs_integration_trigger('chart_nid_' . $chart_nid, $sid);
  }
}
