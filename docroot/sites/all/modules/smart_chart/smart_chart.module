/**
 * Check access to chart.
 *
 * @param $node
 *   Smart Chart node.
 *
 * @return bool
 *   TRUE or FALSE.
 */
function smart_chart_access($node) {

  // Only for Smart Chart.
  if ($node->type == 'smart_chart') {
    $chart_nid = $node->nid;

    global $user;

    // Creating hook check access to chart.
    $access = module_invoke_all('sc_chart_access', $chart_nid, $user);
    return in_array(FALSE, $access) ? FALSE : TRUE;
  }
  else {
    return FALSE;
  }
}

