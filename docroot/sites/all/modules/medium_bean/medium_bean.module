<?php

/**
 * @file
 * Medium Bean module.
 */

/**
 * Implements hook_bean_types_api_info().
 */
function medium_bean_bean_types_api_info() {
  return array('api' => 4);
}

/**
 * Implements hook_bean_types().
 */
function medium_bean_bean_types() {
  $plugins = array();

  $plugin_path = drupal_get_path('module', 'medium_bean') . '/plugins/bean';
  $plugins['medium_post'] = array(
    'label' => t('Medium Post'),
    'description' => t('Show an embedded medium post'),
    'handler' => array(
      'class' => 'MediumPostBean',
      'parent' => 'bean',
      'path' => $plugin_path,
      'file' => 'medium_bean.inc',
    ),
  );

  return $plugins;
}

/**
 * Render a medium post.
 */
function medium_post_bean_render($placeholder_text, $placeholder_url) {
  drupal_add_js('https://static.medium.com/embed.js', 'external');
  $output = l($placeholder_text, $placeholder_url, array('attributes' => array('class' => 'm-story', 'data-collapsed' => 'true')));

  return $output;
}
