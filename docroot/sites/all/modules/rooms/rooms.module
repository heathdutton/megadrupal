/**
 * Implements hook_field_formatter_view().
 */
function rooms_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();

  switch ($display['type']) {
    case 'rooms_options_default':
      foreach ($items as $delta => $item) {
