<?php

/**
 * @file
 * CacheWarmer connect module.
 */

/**
 * Implements hook_permission().
 */
function cachewarmer_connect_permission() {
  return array(
    'administer cachewarmer_connect' => array(
      'title' => t('Administer CacheWarmer connect'),
      'description' => t('Administer the CacheWarmer connect configuration'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function cachewarmer_connect_menu() {
  $items = array();

  $items['admin/config/system/cachewarmer_connect'] = array(
    'title' => 'CacheWarmer',
    'description' => 'Configure CacheWarmer connect.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('cachewarmer_connect_config_form'),
    'access arguments' => array('administer cachewarmer_connect'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'cachewarmer_connect.admin.inc',
    'file_path' => drupal_get_path('module', 'cachewarmer_connect'),
  );

  return $items;
}

/**
 * Implements hook_flush_caches().
 */
function cachewarmer_connect_flush_caches() {
  return array('cache_cachewarmer_connect');
}
