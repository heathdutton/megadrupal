      ->condition('topic_id',$topic_id)
      ->condition('prefix_id',$prefix_id);
    $query->addField('pt', 'nid');
    $nid = $query->execute()->fetchField();
    if($nid) {
      drupal_goto("node/$nid",array(),'301');
    }
    else {
      drupal_not_found();
    }
  }
  else if (isset($_GET['p'])) {
    $post = explode('#', $_GET['p']);
    if (is_numeric($post[0])) {
