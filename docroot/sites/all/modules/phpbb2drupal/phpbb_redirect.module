    }
    $query = db_select('phpbb2drupal_path_prefixes','pp')
       ->condition('path_prefix',$prefix_string);
    $query->addField('pp','prefix_id');
    $result = $query->execute()->fetchField();
    if ($result) {
      $prefix_id = $result;
    }
    else {
      drupal_not_found();
    }
