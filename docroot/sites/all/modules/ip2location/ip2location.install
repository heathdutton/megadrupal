<?php

/**
 * @file
 * Install, update and uninstall functions for the field module.
 */

/**
 * Implements hook_install().
 */
function ip2location_install() {
  variable_set('ip2location_roles_to_geolocate', array(DRUPAL_AUTHENTICATED_RID));
}

/**
 * Implements hook_uninstall().
 */
function ip2location_uninstall() {
  variable_del('ip2location_bin_path');
  variable_del('ip2location_cache');
  variable_del('ip2location_roles_to_geolocate');
}
