<?php

/**
 * Implementation of hook_views_api().
 */
function views_block_inception_views_api() {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'views_block_inception') . '/views',
    'template path' => drupal_get_path('module', 'views_block_inception') . '/theme',
  );
}

/**
 * Implementation of hook_theme().
 */
function views_block_inception_theme($existing, $type, $theme, $path) {
  $path = drupal_get_path('module', 'views_block_inception');
  $base = array(
    'file' => 'theme.inc',
    'path' => "$path/theme",
  );
  return array(
    'views_block_inception_row' => $base + array(
      'function' => 'views_block_inception_row',
    )
  );
}
