<?php
/**
 * @file
 * Install, update and uninstall functions for the Formatters for Node Reference
 * fields module.
 */

/**
 * Implements hook_install().
 */
function formatters4nodereference_install() {
  db_update('system')
    ->fields(array('weight' => 1))
    ->condition('name', 'formatters4nodereference')
    ->execute();
}
