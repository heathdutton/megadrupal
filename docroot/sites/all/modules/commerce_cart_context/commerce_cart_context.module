<?php
/**
 * @file commerce_cart_context.module
 */

/**
 * Implements hook_context_plugins().
 */
function commerce_cart_context_context_plugins() {
  $plugins = array();
  $plugins['commerce_cart_context_cart_contains_items'] = array(
    'handler' => array(
      'path' => drupal_get_path('module', 'commerce_cart_context') . '/plugins',
      'file' => 'commerce_cart_context_cart_contains_items.inc',
      'class' => 'commerce_cart_context_cart_contains_items',
      'parent' => 'context_condition',
    ),
  );
  return $plugins;
}

/**
 * Implements hook_context_registry().
 */
function commerce_cart_context_context_registry() {
  return array(
    'conditions' => array(
      'commerce_cart_context' => array(
        'title' => t('Cart contents'),
        'description' => t('Set this context based on the contents of the user\'s shopping cart.'),
        'plugin' => 'commerce_cart_context_cart_contains_items',
      ),
    ),
  );
}

/**
 * Implements hook_init().
 */
function commerce_cart_context_init() {
  $map = context_condition_map();
  if (!empty($map['commerce_cart_context']) && $plugin = context_get_plugin('condition', 'commerce_cart_context')) {
    $plugin->execute();
  }
}
