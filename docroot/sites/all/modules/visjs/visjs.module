    'version arguments' => array(
      'file' => 'dist/vis.min.js',
      'pattern' => '@(?i:version)\sv?([0-9\.a-z]+)@',
      'lines' => 7,
    ),
    'files' => array(
      'js' => array('dist/vis.min.js', ),
      'css' => array('dist/vis.min.css', ),
    ),
    'variants' => array(
      'minified' => array('files' => array(
          'js' => array('dist/vis.min.js', ),
          'css' => array('dist/vis.min.css', ),
        ), ),
      'source' => array('files' => array(
          'js' => array('dist/vis.js', ),
          'css' => array('dist/vis.css', ),
        ), ),
