<?php

/**
 * Implements hook_ctools_plugin_api().
 */
function multilingual_boxes_ctools_plugin_api($module, $api) {
  if ($module == 'boxes' && $api == 'plugins') {
    return array('version' => 1);
  }
}

/**
 * Implements hook_boxes_plugins().
 */
function multilingual_boxes_boxes_plugins() {
  $info = array();
  $path = drupal_get_path('module', 'multilingual_boxes') . '/plugins';
  $info['multilingual'] = array(
    'title' => 'Multilingual Box',
    'handler' => array(
      'parent' => 'box',
      'class' => 'multilingual_boxes',
      'file' => 'multilingual_boxes.inc',
      'path' => $path,
    ),
  );
  return $info;
}


