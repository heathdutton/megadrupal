<?php

/**
 * @file
 * Declares the schema for field storage for the scripted question references.
 */

/**
 * Implements hook_field_schema().
 */
function tutorfield_field_schema($field) {
  if ($field['type'] == 'tutorfield') {
    $schema = array();
    
    $columns = array(
      'question' => array(
        'type' => 'varchar',
        'length' => '128',
        'not null' => TRUE,
      ),
    );
    $schema['columns'] = $columns;

    return $schema;
  }
}
