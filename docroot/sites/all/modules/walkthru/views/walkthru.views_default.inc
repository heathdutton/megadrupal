<?php

function walkthru_views_default_views() {
  $block_listing_view = _walkthru_block_listing_view();

  $views[$block_listing_view->name] = $block_listing_view;

  return $views;
}

/**
 * Creates the walkthru block listing view.
 */
function _walkthru_block_listing_view() {
