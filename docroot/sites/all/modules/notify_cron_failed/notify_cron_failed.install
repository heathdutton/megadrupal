<?php

/**
 * @file
 * Important database functions for the notify cron failed module.
 */

/**
 * Implements hook_install().
 */
function notify_cron_failed_install() {
  variable_set('cron_email_alert_status', 0);
}

/**
 * Implements hook_uninstall().
 */
function notify_cron_failed_uninstall() {
  // Delete all the Exchange links variables.
  db_query("DELETE FROM {variable} WHERE name LIKE 'cron_email_alert_%'");
  cache_clear_all('variables', 'cache');
}