/**
 * Status value for the sharedcontent_index entity.
 *
 * States that the indexed entity was deleted or can not be accessed
 * for other reasons. Records with this status can not be linked any
 * more. Already linked records will not be displayed any longer.
 */
define('SHAREDCONTENT_INDEX_STATUS_UNREACHABLE', 0);

/**
 * Status value for the sharedcontent_index entity.
 *
 * States that the indexed entity is existing and visible and therefore this
 * index record can be linked and displayed.
 */
define('SHAREDCONTENT_INDEX_STATUS_VISIBLE', 1);

/**
 * Status value for the sharedcontent_index entity.
 *
 * States that the indexed entity is existing but not visible and therefore this
 * index record can be linked but not displayed.
 */
define('SHAREDCONTENT_INDEX_STATUS_LINKABLE', 2);

/**
 * Accessibility status for the sharedcontent_index entity (not accessible).
 */
define('SHAREDCONTENT_INDEX_ACCESSIBILITY_NONE', 0);

/**
 * Accessibility status for the sharedcontent_index entity (public accessible).
 */
define('SHAREDCONTENT_INDEX_ACCESSIBILITY_PUBLIC', 1);

/**
 * Accessibility status for the sharedcontent_index entity (restricted).
 */
define('SHAREDCONTENT_INDEX_ACCESSIBILITY_RESTRICTED', 2);

/**
 * Status value for the sharedcontent_assignment entity
 *
 * States that the assignment is active.
 */
define('SHAREDCONTENT_ASSIGNMENT_ACTIVE', 0);

/**
 * Status value for the sharedcontent_assignment entity
 *
 * States that the assignment is deleted and no longer exists.
 */
define('SHAREDCONTENT_ASSIGNMENT_DELETED', 1);

/**
 * The index record is created and have a corresponding content locally.
 */
define('SHAREDCONTENT_INDEX_BUNDLE_LOCAL', 'local');

/**
 * The index record was received during a synchronization process.
 */
define('SHAREDCONTENT_INDEX_BUNDLE_REMOTE', 'remote');

/**
 * The index record was received by a push from a client.
 */
define('SHAREDCONTENT_INDEX_BUNDLE_SHADOW', 'shadow');

define('SHAREDCONTENT_LOCAL_CONNECTION_NAME', 'local');

/**
 * A chapter record may be created without parent. The string defined
 * by this constant is used instead of the parent uuid so we are able
 * to track those orphaned records.
 */
define('SHAREDCONENT_CHAPTER_ORPHAN', 'orphaned chapter');

