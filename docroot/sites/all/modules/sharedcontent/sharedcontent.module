 * Check for existing index record.
 *
 * @param $entity
 *   The entity the index is checked for.
 * @param $type
 *   The type of the entity.
 * @return
 *   TRUE if there is an existing index record, FALSE otherwise.
 */
function sharedcontent_index_exists($entity, $type) {
  list($id, , $bundle) = entity_extract_ids($type, $entity);

  $query = new EntityFieldQuery;
  $query->entityCondition('entity_type', 'sharedcontent_index')
    ->propertyCondition('entity_id', entity_id($type, $entity))
    ->propertyCondition('entity_type', $type)
    ->propertyCondition('origin', SHAREDCONTENT_INDEX_BUNDLE_LOCAL);

  $result = $query->execute();
  $exists = !empty($result);
  return $exists;
}

/**
 * Update index record.
 *
 * Update the corresponding sharedcontent_index record for the given
 * entity. If no record exists a new on is created.
 *
 * There is also teh rule event â€¦ triggered and therefore allowing
 * enrich the record with custom data like keywords, tags, status,
 * reasons or accessibility.
 *
 * @param $entity
 *  The entity that was inserted or updated.
 * @param $type
 *  The type of the given entity.
 *
 * @return
 *   The resulting index record.
 */
function sharedcontent_create_or_update_index_for_entity($entity, $type) {
  list($id, , $bundle) = entity_extract_ids($type, $entity);
  $language = sharedcontent_entity_language($entity, $type);
  $index = sharedcontent_index_load_by_entity_id($id, $type, $language);
  $op = 'update';
  if (!$index) {
    // Create new record.
    $index = entity_create('sharedcontent_index', array(
      'entity_id' => $id,
      'entity_type' => $type,
      'entity_bundle' => $bundle,
      'origin' => SHAREDCONTENT_INDEX_BUNDLE_LOCAL,
    ));
    $op = 'create';
  }

  // Get the entities absolute url.
  $uri = entity_uri($type, $entity);
  $uri['options']['absolute'] = TRUE;
  $url = isset($uri['path']) ? url($uri['path'], $uri['options']) : '';
  if ($type == 'file') {
    $url = file_create_url($entity->uri);
  }

  // check if anonymous users can access the entity
  $anonymous = drupal_anonymous_user();
  $accessible = entity_access('view', $type, $entity, $anonymous) ? SHAREDCONTENT_INDEX_ACCESSIBILITY_PUBLIC : SHAREDCONTENT_INDEX_ACCESSIBILITY_RESTRICTED;

  $index->status = empty($url) ? SHAREDCONTENT_INDEX_STATUS_UNREACHABLE : SHAREDCONTENT_INDEX_STATUS_VISIBLE;
  $index->title = entity_label($type, $entity);
  $index->url = $url;
  $index->language = $language;
  $index->accessibility = $accessible;

  // Setting default created value.
  if (empty($index->entity_created)) {
    if (!empty($entity->created)) {
      $index->entity_created = $entity->created;
    }
    elseif (!empty($entity->timestamp)) {
      $index->entity_created = $entity->timestamp;
    }
    else {
      $index->entity_created = REQUEST_TIME;
    }
  }

  // Setting default changed value.
  if (!empty($entity->changed)) {
    $index->entity_changed = $entity->changed;
  }
  elseif (!empty($entity->timestamp)) {
    $index->entity_changed = $entity->timestamp;
  }
  else {
    $index->entity_changed = $index->entity_created;
  }

  // Trigger alter hook and rules event allowing other parties to alter
  // the index to their likings.
  $wrapped_entity = entity_metadata_wrapper($type, $entity);
  $event = 'sharedcontent_index_is_being_updated';
  if ($op == 'created') {
    $event = 'sharedcontent_index_is_being_created';
  }
  drupal_alter('sharedcontent_index', $index, $wrapped_entity, $op);
  if (function_exists('rules_invoke_event')) {
    rules_invoke_event($event, $index, $wrapped_entity);
  }

  $index->save();
  return $index;
}

/**
 * Get entity language.
 *
 * Try to extract the entities language.
 * With Drupal >=7.15 this wrapper is unneeded.
 *
 * @param $entity
 *   The entity.
 * @param $type
 *   The type of the entity
 * @return
 *   The entities language.
 */
function sharedcontent_entity_language($entity, $type) {
  if (function_exists('entity_language')) {
    $language = entity_language($type, $entity);
  }
  else {
    if (isset($entity->language)) {
      $language = $entity->language;
    }
  }
  if (empty($language)) {
    $language = LANGUAGE_NONE;
  }
  return $language;
}

/**
 * Implements hook_entity_insert()
 *
 * @see sharedcontent_entity_update().
 */
function sharedcontent_entity_insert($entity, $type) {
  sharedcontent_entity_update($entity, $type);
}

/**
 * Implements hook_entity_update().
 *
 * Check if the given entity should be index and trigger an index
 * update.
 */
function sharedcontent_entity_update($entity, $type) {
  list($entity_id, , $bundle) = entity_extract_ids($type, $entity);
  $indexed_entities = variable_get('sharedcontent_indexed_entities', array());
  if (isset($indexed_entities[$type][$bundle]) && $indexed_entities[$type][$bundle] == TRUE) {
    // Add nodes to be indexed to a queue if setting is active.
    if (variable_get('sharedcontent_queue_indexed_entities', FALSE)) {
      $item = array(
        'entity_id' => $entity_id,
        'type' => $type,
      );
      $queue = DrupalQueue::get('sharedcontent_indexing');
      $queue->createItem($item);
    }
    else {
      sharedcontent_create_or_update_index_for_entity($entity, $type);
    }
  }
}

/**
 * Implements hook_entity_delete().
 *
 * Set sharedcontent_index to SHAREDCONTENT_INDEX_STATUS_UNREACHABLE if
 * a record exists.
 */
function sharedcontent_entity_delete($entity, $type) {
  sharedcontent_index_mark_as_deleted_if_exists($entity, $type);
}

/**
 * Mark as deleted
 *
 * Set the status of an index record for a given entity as deleted. If
 * no index record exists, no action will be taken.
 *
 * @param $entity
 *   The entity the index should be updated for.
 * @param $type
 *   Type of the entity.
 *
 * @see sharedcontent_index_load_by_entity_id()
 */
function sharedcontent_index_mark_as_deleted_if_exists($entity, $type) {
  list($id, , $bundle) = entity_extract_ids($type, $entity);
  // @todo should we make $language optional with sharedcontent_index_load_by_entity_id.
  // @todo HIGH check if we deal right if an entity switches language.
  $language = sharedcontent_entity_language($entity, $type);
  $index = sharedcontent_index_load_by_entity_id($id, $type, $language);
  if ($index) {
    $index->status = SHAREDCONTENT_INDEX_STATUS_UNREACHABLE;
    $index->save();
    // @todo log
  }
}

/**
 * Wrapper for past_event_save to avoid dependency to past.
 */
function sharedcontent_event_save($module, $machine_name, $message, array $arguments = array(), array $options = array()) {
  if (module_exists('past')) {
    past_event_save($module, $machine_name, $message, $arguments, $options);
  }
  else {
    $severity = isset($options['severity']) ? $options['severity'] : WATCHDOG_NOTICE;

    // Ignore debug messages unless explicitly enabled.
    if ($severity == WATCHDOG_DEBUG && variable_get('sharedcontent_event_ignore_debug', TRUE)) {
      return;
    }

    // Decode exceptions, as trying to print_r() them results in recursions.
    foreach ($arguments as &$argument) {
      if ($argument instanceof Exception) {
        $decoded = _drupal_decode_exception($argument);
        $argument = $decoded;
      }
    }

    watchdog((string) $module, '@name::@message <pre>@arguments</pre>', array(
      '@name' => $machine_name,
      '@message' => $message,
      '@arguments' => print_r($arguments, TRUE),
    ), $severity);
  }
}

/**
 * Implements hook_cron_queue_info().
 */
function sharedcontent_cron_queue_info() {
  $queues['sharedcontent_indexing'] = array(
    'worker callback' => 'sharedcontent_index_queued_entities',
    'time' => 30,
  );
  return $queues;
}

/**
 * Callback which dequeues nodes indexes queued nodes.
 *
 * @todo Rename: not only nodes anymore!
 */
function sharedcontent_index_queued_entities($data) {
  $entity = entity_load_single($data['type'], $data['entity_id']);
  if ($entity) {
    try {
      sharedcontent_create_or_update_index_for_entity($entity, $data['type']);
    }
    catch (SharedContentIndexingException $e) {
      if ($e->getCode() == SHAREDCONTENT_ERROR_NO_PARENT_INDEX
        && (empty($data['count']) || $data['count'] < 1)
      ) {
        // We do not have control about the order the items get indexed.
        // If we do come here the first time we do a reschedule the first
        // time expecting the parent index record to be generated later
        // during this cron run.
        $data['count'] = 1;
        DrupalQueue::get('sharedcontent_indexing')->createItem($data);
      }
      else {
        sharedcontent_event_save('sharedcontent', __FUNCTION__, $e->getMessage(), $e->data, array('severity' => WATCHDOG_ERROR));
      }
    }
  }
  else {
    sharedcontent_event_save('sharedcontent', __FUNCTION__, 'Failed to load entity', $data, array('severity' => WATCHDOG_WARNING));
  }
}

/**
 * Implements hook_init()
 *
 * Set Origin and Access-Control-Allow-Origin in order to make remote js
 * work for Shared Content.
 */
function sharedcontent_init() {
  global $base_url;
  // @todo: Only add when required? Possibly security issues by allowing
  //   everything?
  drupal_add_http_header('Origin', $base_url);
  drupal_add_http_header('Access-Control-Allow-Origin', '*');
}

/**
 * Get flag status
 *
 * Check if the the entity is flagged,
 *
 * @return
 *   TRUE if at leas on flag is set for the entity, FALSE otherwise.
 */
function sharedcontent_flag_value_get($data, array $options, $name, $type, $info) {
  list($id, , ) = entity_extract_ids($type, $data);
  $flag = flag_get_content_flags($type, $id, $name);
  return !empty($flag);
}

/**
 * Implements hook_flag()
 *
 * Mark a sharedcontent_index entity as dirty so it will get reindexed
 * by search api on flagging and unflagging.
 */
function sharedcontent_flag($op, $flag, $content_id, $account, $fcid) {
  if ($flag->content_type == 'sharedcontent_index') {
    search_api_track_item_change($flag->content_type, array($content_id));
  }
}

/**
 * Checks if referenced entity is linkable.
 *
 * Callback for the calculated is_linkable attribute of sharedcontent_index.
 *
 * @param $index
 *  The sharedcontent_index record to calculate the is linkable attribute.
 *
 * @return bool
 *   TRUE if the referenced entity can link Shared Content, FALSE otherwise.
 */
function sharedcontent_is_linkable($index) {
  if ($index->origin != SHAREDCONTENT_INDEX_BUNDLE_LOCAL) {
    return FALSE;
  }
  $field_names = sharedcontent_client_get_all_shared_content_field_names();
  $instances = field_info_instances($index->entity_type, $index->entity_bundle);
  foreach ($field_names as $field_name) {
    if (array_key_exists($field_name, $instances)) {
      return TRUE;
    }
  }
  return FALSE;
}
