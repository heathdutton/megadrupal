<?php

/**
 * Implements hook_enable()
 */
function httptrace_enable() {
  $previous = variable_get('drupal_http_request_function', FALSE);
  /// @TODO handle if there is one set already
  variable_set('drupal_http_request_function', 'httptrace_http_request');
} 

/**
 * Implements hook_disable()
 */
function httptrace_disable() {
  variable_del('drupal_http_request_function');
}

