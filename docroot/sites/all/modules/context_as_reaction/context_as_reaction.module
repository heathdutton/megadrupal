<?php

/**
 * @file
 * 
 */

/**
 * Implements hook_init().
 */
function context_as_reaction_init() {
  context_as_reaction_context();  
}

/**
 * Implementation of hook_context_plugins()
 */
function context_as_reaction_context_plugins() {
  $plugins = array();
  $plugins['context_as_reaction_context_reaction_more_context'] = array(
    'handler' => array(
      'file' => 'context_as_reaction_context_reaction_more_context.inc',
      'class' => 'context_as_reaction_context_reaction_more_context',
      'parent' => 'context_reaction',
    ),
  );
  return $plugins;
}

/**
* Implements of hook_context_registry()
*/
function context_as_reaction_context_registry() {
  return array(
		'reactions' => array(
		'context_as_reaction' => array(
			'title' => t('Context as Reaction'),
        'plugin' => 'context_as_reaction_context_reaction_more_context',
      ),
    ),
  );
}

/**
 * Implements hook_user_view() 
 */
function context_as_reaction_user_view($account, $view_mode, $langcode) {
  if ($view_mode == 'full') {
    context_as_reaction_context();
  }  
}

/**
 * Implements hook_node_view() 
 */
function context_as_reaction_node_view($node, $view_mode, $langcode) {
  if ($view_mode == 'full') {
    context_as_reaction_context();
  }
}

/**
 * Implements hook_views_pre_view()
 */
function context_as_reaction_views_pre_view($view, $display) {
  context_as_reaction_context();
}

/**
 * Determine if the reaction should fire 
 */
function context_as_reaction_context() {
  $plugin = context_get_plugin('reaction', 'context_as_reaction');
  if ($plugin) {
    $plugin->execute();
  }
}