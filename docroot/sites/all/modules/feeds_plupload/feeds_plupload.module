<?php
/**
 * @file
 * Provides a feeds fetcher using the plupload library.
 */

/**
 * Break out for feeds_feed_plugins().
 */
function feeds_plupload_feeds_plugins() {
  $path = drupal_get_path('module', 'feeds') . '/plugins';

  $info = array();
  $info['FeedsPluploadFetcher'] = array(
    'name' => 'File upload with Plupload',
    'description' => 'Upload content from local files with the plupload widget.',
    'handler' => array(
      'parent' => 'FeedsFetcher',
      'class' => 'FeedsPluploadFetcher',
      'file' => 'FeedsPluploadFetcher.inc',
      'path' => $path,
    ),
  );

  return $info;
}

/**
 * Implements hook_ctools_plugin_api().
 */
function feeds_plupload_ctools_plugin_api($owner, $api) {
  if ($owner == 'feeds' && $api == 'plugins') {
    return array('version' => 1);
  }
}
