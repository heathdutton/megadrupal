// comments
function stacksight_comment_delete($comment) {
	global $ss_client, $user;
	if (!$ss_client) return;

	$event = array();
	$url_options = array('absolute' => true);
	if ($user->uid) {
		$event['user'] = array(
			'name' => $user->name,
			'url' => url('user/'.$user->uid, $url_options)
		);
	}
	if ($comment->subject) $event['name'] = $comment->subject;

	$lang = $comment->language;
	if (isset($comment->comment_body[$lang]) && count($comment->comment_body[$lang])) {
		$event['data']['body'] = $comment->comment_body[$lang][0]['value'];
		if (!$event['name']) $event['name'] = mb_substr($event['data']['body'], 0, 16).'...';
	}

	$res = $ss_client->publishEvent(array(
		'action' => 'deleted',
		'type' => 'comment'
	) + $event);

	// $level = 'comments_hooks';
	// SSUtilities::error_log('-------------comment is being deleted----------------', $level);
	// SSUtilities::error_log($comment, $level);
}

