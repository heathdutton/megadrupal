function stacksight_node_update($node) {
	global $ss_client, $user;
	if (!$ss_client) return;

	$event = array();
	$url_options = array('absolute' => true);
	if ($user->uid) {
		$event['user'] = array(
			'name' => $user->name,
			'url' => url('user/'.$user->uid, $url_options)
		);
	}

	$res = $ss_client->publishEvent(array(
		'action' => 'updated',
		'type' => 'content',
		'subtype' => $node->type,
		'name' => $node->title,
		'url' => url('node/' . $node->nid, $url_options)
	) + $event);

	// if a user published a node to the front page
	if ($node->promote) {
		$res = $ss_client->publishEvent(array(
			'action' => 'promoted',
			'type' => 'content',
			'subtype' => $node->type,
			'name' => $node->title,
			'url' => url('node/' . $node->nid, $url_options)
		) + $event);
	}
}

