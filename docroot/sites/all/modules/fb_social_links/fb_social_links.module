<?php

/**
 * Implements hook_theme().
 */
function fb_social_links_theme($existing, $type, $theme, $path) {
  return array(
    'fsl_like_style' => array(
      'variables' => array('text' => '', 'nodelink' => FALSE),
    ),
  );
}

/**
 * Implements hook_service_links().
 */
function fb_social_links_service_links() {
  $links = array();

  if ($presets = fb_social_get_presets()) {
    foreach ( $presets as $preset ) {
      $links['fb_social_links_' . $preset->name] = array(
        'name' => $preset->name,
        'link' => '',
        'icon' => 'facebook.png',
        'description' => $preset->description,
        'style' => 'fsl_' . $preset->plugin_type . '_style',
      );
    }
  }

  return $links;
}

function theme_fsl_like_style($variables) {
  $preset = fb_social_get_presets($variables['text']);
  $output = fb_social_preset_view($preset);
  if ($variables['nodelink']) {
    return array(
      'title' => $output,
      'attributes' => $variables['attributes'],
      'html' => TRUE,
    );
  } else {
    return $output;
  }
}
