<?php

/**
 * Implements hook_browser_details_plugin().
 */
function bd_ip_browser_details_plugin() {
    return array(
        'ipaddress' => array(
            'name' => 'ipaddress',
            'title' => 'IP Address',
            'icon' => drupal_get_path('module', 'bd_ip') . '/images/bd_ip.png',
            'content' => 'bd_ip_load_content',
        ),
    );
}

function bd_ip_load_content() {
    return $_SERVER['REMOTE_ADDR'];
}
