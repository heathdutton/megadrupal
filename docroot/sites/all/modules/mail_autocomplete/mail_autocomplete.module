<?php

/**
 * hook_form_alter(&$form, &$form_state, $form_id).
 */
function mail_autocomplete_form_alter(&$form, &$form_state, $form_id) {
  $form_id_array = array('user_register_form');
  
  if (in_array($form_id, $form_id_array)) {
    if (isset($form['account']['mail'])) {
      $form['account']['mail']['#prefix'] = '<div class="mail-input-wrapper">';
      $form['account']['mail']['#suffix'] = '<div id="mail-autocomplete"></div></div">';
      $form['account']['mail']['#attached']['css'] = array(
        drupal_get_path('module', 'mail_autocomplete') . '/mail_autocomplete.css',
      );
      $form['account']['mail']['#attached']['js'] = array(
        drupal_get_path('module', 'mail_autocomplete') . '/mail_autocomplete.js',
      );
    }
  }
}