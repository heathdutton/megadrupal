<?php

/**
 * Implements hook_field_schema().
 *
 * Defines the database schema of the field, using the format used by the
 * Schema API. We store UID's here.
 */
function field_acl_field_schema($field) {
  $columns = array(
    'uid' => array(
      'type' => 'int',
      'not null' => false
    ),
  );
  $indexes = array(
    'uid' => array('uid'),
  );
  return array(
    'columns' => $columns,
    'indexes' => $indexes,
  );
}
