define('CHATBLOCK_BLOCK_ADMIN_URL', 'admin/structure/block/manage/chatblock/chatwindow');
define('CHATBLOCK_PERMISSIONS_ADMIN_URL', 'admin/people/permissions');
define('CHATBLOCK_LINKS_SHOW_NEVER', 0);
define('CHATBLOCK_LINKS_SHOW_CONDITIONAL', 1);
