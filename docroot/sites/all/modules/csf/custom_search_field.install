<?php

/**
 * @file
 * Install, update, and uninstall functions for the custom search module.
 */

/**
 * Implements hook_install().
 */
function custom_search_field_install() {
  db_update('system')
    ->fields(array('weight' => 101))
    ->condition('name', 'custom_search_field')
    ->execute();
}

/**
 * Implements hook_uninstall().
 */
function custom_search_field_uninstall() {
  db_delete('variable')
    ->condition('name', 'custom_search_field%', 'LIKE')
    ->execute();
}