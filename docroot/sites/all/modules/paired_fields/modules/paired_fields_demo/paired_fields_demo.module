<?php

/**
 * @file
 * Main file of the Paired Fields Demonstration module.
 */

/**
 * Implements hook_form_alter().
 */
function paired_fields_form_alter(&$form, $form_state, $form_id) {
  if ($form_id == 'user_login') {
    foreach (element_children($form) as $key) {
      $temp = $form[$key];
      unset($form[$key]);
      $form['paired'][$key] = $temp;

    }
    $form['paired']['#type'] = 'paired_fields';
  }
}
