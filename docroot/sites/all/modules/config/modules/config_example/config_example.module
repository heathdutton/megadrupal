/**
 * Implements hook_config_api().
 */
function config_example_config_api() {

  return array(
    // Required.
    'api' => 1,
    // Optional.
    'sets' => array(
      'config' => array(
        'title' => t('Example configuration'),
        'description' => t('Demonstrates how to provide configuration using PHP & JSON'),
        'path' => 'config',
        'path_type' => 'relative',
        'type' => CONFIG_PARSER_JSON,
        'files' => array(
          'json_example' => array(
            'name' => 'json_example.json',
            'type' => CONFIG_PARSER_JSON,
          ),
          'php_example' => array(
            'name' => 'php_example.php',
            'type' => CONFIG_PARSER_PHP,
          ),
        ),
      ),
    ),
  );
}
