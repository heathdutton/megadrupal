<?php
/**
 * @file keybase.module
 */

/**
 * Implements hook_menu().
 */
function keybase_menu() {
  $items['keybase.txt'] = array(
    'title' => t('Well Known Keybase'),
    'page callback' => 'keybase_well_known',
    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK,
  );
  $items['admin/config/services/keybase'] = array(
    'title' => t('Keybase'),
    'description' => t('Configure keybase module.'),
    'page callback' => 'drupal_get_form',
    'page arguments' => array('keybase_settings_form'),
    'access arguments' => array('administer site configuration'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'keybase.admin.inc',
  );
  return $items;
}

/**
 * Well-known callback.
 */
function keybase_well_known() {
  header('Content-type: text/plain');
  die(variable_get('keybase_well_known', t('Unconfigured')));
}
