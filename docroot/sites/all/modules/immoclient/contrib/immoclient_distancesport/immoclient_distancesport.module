function immoclient_distancesport_label_callback($immoclient_distancesport){
  $distanz_zu_sport = $immoclient_distancesport->distanz_zu_sport;
  $options = immoclient_distancesport_options_list();
  return $options[$distanz_zu_sport];
}

function immoclient_distancesport_option_callback($immoclient_distancesportbuild){
  $options = immoclient_distancesport_options_list();
  return $options[$immoclient_distancesportbuild];
}

