/**
 * Callback function for displaying the individual distancesport default page
 */
function immoclient_distancesport_view_area($id) {
  
  $area = entity_load('immoclient_distancesport', array($id));
  $area_def = $area[$id];
  drupal_set_title($area_def->distanz_zu_sport);
  $output = entity_view('immoclient_distancesport', array($area_def));
  return $output;
  
}
/**
 * Form definition for adding / editing a distancesport.
 */
function immoclient_distancesport_form($form, &$form_state, $free = NULL) {

  $form['distanz_zu_sport'] = array(
    '#title' => t('Distance to sport facilities'),
    '#type' => 'select',
    '#options' => array(
      'STRAND'=>t('Beach'),
      'SEE' => t('Lake'),
      'MEER' =>t('Sea'),
      'SKIGEBIET'=>t('Ski resort'),
      'SPORTANLAGEN'=>t('Sports facilities'),
      'WANDERGEBIETE'=>t('Hiking area'),
      'NAHERHOLUNG'=>t('Local recreation'),
        ),
    '#default_value' => isset($free->distanz_zu_sport) ? $free->distanz_zu_sport : '',
    '#required' => TRUE,
  );

  $form['distancesport_measure'] = array(
    '#title' => t('Distancesport'),
    '#type' => 'numericfield',
    '#precision' => 10,
    '#decimals' => 0,
    '#minimum' => 0,
    '#maximum' => 50000000.99,
    '#default_value' => isset($free->distancesport_measure) ? $free->distancesport_measure : '',
    '#required' => FALSE,
  );
  
  $form['submit'] = array(
    '#type' => 'submit', 
    '#value' => isset($free->id) ? t('Update project') : t('Save project'),
    '#weight' => 50,
  );

  return $form;
}
/**
 * Submit handler for the distancesport add/edit form.
 */
function immoclient_distancesport_form_submit($form, &$form_state) {
  $project = entity_ui_form_submit_build_entity($form, $form_state);
  $project->save();
  drupal_set_message(t('The project: @name has been saved.', array('@name' => $project->name)));
  $form_state['redirect'] = 'admin/content/distancesport';
}
