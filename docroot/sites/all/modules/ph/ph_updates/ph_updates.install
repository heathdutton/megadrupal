<?php
/**
 * @file
 * Module installer.
 */

/**
 * Implements hook_install().
 */
function ph_updates_install() {
  variable_set('ph_updates_feed_format', 'xml');
  variable_set('ph_updates_feed_path', 'release-history');
}

/**
 * Implements hook_uninstall().
 */
function ph_updates_uninstall() {
  variable_del('ph_updates_feed_format');
  variable_del('ph_updates_feed_path');
}
