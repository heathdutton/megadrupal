function _yamaps_geocoder_url() {
  global $is_https;

  return $is_https ? 'https://geocode-maps.yandex.ru/1.x/' : 'http://geocode-maps.yandex.ru/1.x/';
}

/**
 * Provide legal agreement url, use YAMAPS_LEGAL_AGREEMENT_URL instead direct calling.
