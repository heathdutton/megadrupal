<?php
/**
 * @file
 * Article jump module functions.
 */

/**
 * Implements hook_menu().
 */
function article_jump_menu() {
  $items = array();
  // The configuration page.
  $items['admin/config/user-interface/article_jump'] = array(
    'title' => 'Article Jump Configuration',
    'description' => 'Configure which elements are used as jump anchors.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('article_jump_admin_settings'),
    'file' => 'article_jump.admin.inc',
    'access arguments' => array('administer site configuration'),
    'weight' => 0,
  );
  return $items;
}

/**
 * Implements hook_init().
 *
 * Passes drupal variables to javascript files and also adds the javascipt
 * files.
 */
function article_jump_init() {
  _article_jump_pass_variables();

  if ($path = libraries_get_path("mousetrap")) {
    drupal_add_js($path . '/mousetrap.min.js');
  }
  drupal_add_css(drupal_get_path('module', 'article_jump') . '/article_jump.css');
}

/**
 * Passes drupal variables to javascript.
 */
function _article_jump_pass_variables() {
  // Pass variable in to javascript as Drupal.settings.article_jump.my_selector.
  if ($article_jump_aas = variable_get("article_jump_article_selector", ".content article, .content .node-teaser")) {
    drupal_add_js(array('article_jump' => array('my_selector' => $article_jump_aas)), 'setting');
  }
  // Pass variable to javascript as Drupal.settings.article_jump.scroll_speed.
  if ($article_jump_scroll_speed = variable_get("article_jump_scroll_speed", "500")) {
    drupal_add_js(array('article_jump' => array('scroll_speed' => $article_jump_scroll_speed)), 'setting');
  }
  // Pass in next and previous hotkey.
  if ($article_jump_next_hk = variable_get("article_jump_next_hotkey", "j")) {
    drupal_add_js(array('article_jump' => array('next_hk' => $article_jump_next_hk)), 'setting');
  }
  if ($article_jump_prev_hk = variable_get("article_jump_prev_hotkey", "k")) {
    drupal_add_js(array('article_jump' => array('prev_hk' => $article_jump_prev_hk)), 'setting');
  }

}
