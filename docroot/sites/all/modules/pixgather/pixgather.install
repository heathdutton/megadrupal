<?php

/**
 * Implements hook_uninstall().
 */
function pixgather_uninstall() {
  variable_del('pixgather_bundle');
  variable_del('pixgather_secret_code');
  variable_del('pixgather_entity_type');
  variable_del('pixgather_image_field');
  variable_del('pixgather_name_field');
}

/**
 * Implements hook_update_N().
 *
 * Clears cache for new image style.
 */
function pixgather_update_7101(&$sandbox) {
  drupal_flush_all_caches();
}
