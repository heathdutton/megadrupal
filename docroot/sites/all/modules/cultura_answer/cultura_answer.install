<?php

/**
 * Implements hook_install().
 */
function cultura_answer_install() {
  $admin_theme = variable_get('admin_theme', 'seven');
  $blocks = array(
    array(
      'module' => 'cultura_answer',
      'delta' => 'aggregate',
      'theme' => $admin_theme,
      'status' => 1,
      'weight' => -9,
      'region' => 'dashboard_main',
      'pages' => '',
      'cache' => -1,
    ),
    array(
      'module' => 'cultura_answer',
      'delta' => 'publish',
      'theme' => $admin_theme,
      'status' => 1,
      'weight' => -8,
      'region' => 'dashboard_main',
      'pages' => '',
      'cache' => -1,
    ),
    array(
      'module' => 'cultura_answer',
      'delta' => 'studentprogress',
      'theme' => $admin_theme,
      'status' => 1,
      'weight' => -5,
      'region' => 'dashboard_sidebar',
      'pages' => '',
      'cache' => -1,
    ),
  );
  $query = db_insert('block')->fields(array('module', 'delta', 'theme', 'status', 'weight', 'region', 'pages', 'cache'));
  foreach ($blocks as $block) {
    $query->values($block);
  }
  $query->execute();
}
