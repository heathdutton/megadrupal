<?php

/**
 * @file
 * Install, update and uninstall functions for the pg_linkpoint module.
 */

/**
 * Implements hook_uninstall().
 */
function pg_linkpoint_uninstall() {
  db_delete('variable')
    ->condition('name', 'pg_linkpoint_%', 'LIKE')
    ->execute();
  cache_clear_all('variables', 'cache_bootstrap');
}
