<?php

/**
 * @file
 *   Install and unistall functions for PGAPI module
 */

/**
 * Implements hook_uninstall().
 */
function pgapi_uninstall() {
  db_delete('variable')
    ->condition('name', 'pgapi_%', 'LIKE')
    ->execute();
  cache_clear_all('variables', 'cache_bootstrap');
}

