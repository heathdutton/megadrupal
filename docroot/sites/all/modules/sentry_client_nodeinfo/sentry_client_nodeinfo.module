<?php

/**
 * @file
 * Provide xmlrpc callback for nodeinfo requests.
 */

/**
 * Implements hook_xmlrpc().
 */
function sentry_client_nodeinfo_xmlrpc() {
  module_load_include('inc', 'sentry_client_nodeinfo', 'sentry_client_nodeinfo_xmlrpc');

  $methods[] = array(
    'drupalSentry.nodeInfo',
    'sentry_client_nodeinfo_xmlc',
    array('struct', 'string'),
    t('Return a number of pieces of node information.'),
  );
  return $methods;
}
