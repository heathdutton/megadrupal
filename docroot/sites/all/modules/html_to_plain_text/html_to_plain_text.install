<?php
/**
 * @file
 * Install, update, and uninstall functions for the Foo Bar module.
 */

/**
 * Impelements hook_uninstall().
 */
function html_to_plain_text_uninstall() {
  $node_types = node_type_get_types();
  foreach ($node_types as $type_machine => $type_obj) {
    // Delete variables
    variable_del('html_to_plain_text_type_' . $type_machine);
    variable_del('html_to_plain_text_enable_' . $type_machine);
    variable_del('html_to_plain_text_weight_' . $type_machine);
  }
}