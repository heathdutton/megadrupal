<?php
/**
 * Implements hook_install()
 */
function registry_debug_install() {
  _registry_debug_set_weight();
}

/**
 * Set module weight
 */
function _registry_debug_set_weight() {
  db_update('system')
    ->fields(array('weight' => 2000))
    ->condition('name', 'registry_debug', '=')
    ->execute();
}
