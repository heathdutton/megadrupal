<?php
/**
 * @file
 * Core functions for the Derivicon module.
 */

/**
 * Implements hook_html_head_alter().
 */
function derivicon_html_head_alter(&$head_elements) {
  if ($plugin = context_get_plugin('reaction', 'derivicon')) {
    $plugin->execute($head_elements);
  }
}

/**
 * Implements hook_context_plugins().
 */
function derivicon_context_plugins() {
  $plugins = array();

  $plugins['context_reaction_derivicon'] = array(
    'handler' => array(
      'path' => drupal_get_path('module', 'derivicon') . '/plugins',
      'file' => 'context_reaction_derivicon.inc',
      'class' => 'context_reaction_derivicon',
      'parent' => 'context_reaction',
    ),
  );

  return $plugins;
}

/**
 * Implements hook_context_registry().
 */
function derivicon_context_registry() {
  $registry = array();

  $registry['reactions'] = array(
    'derivicon' => array(
      'title' => t('Derivicon'),
      'description' => t('Use an Image style powered favicon derivative.'),
      'plugin' => 'context_reaction_derivicon',
    ),
  );

  return $registry;
}
