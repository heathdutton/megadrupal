			// is already applied.
			$form['actions']['submit_' . REQUEST_TIME] = $form['actions']['submit'];
			$form['actions']['submit']['#access'] = FALSE;
		}
	}
	elseif($form_id == 'fancy_login_user_register_form')
	{
		// Invoke all instances of hook_form_user_register_form_alter()
