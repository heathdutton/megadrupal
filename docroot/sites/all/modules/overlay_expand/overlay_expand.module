<?php
/**
 * @file
 * Code for the Overlay Expand module.
 */

/**
 * Implements hook_proprocess_overlay().
 */
function overlay_expand_preprocess_overlay(&$vars) {
  // Load css to change placement of expand widget.
  drupal_add_css(drupal_get_path('module', 'overlay_expand') . '/css/overlay_expand-child.css');

  // Suggest replacement theme for overlay module.
  $vars['theme_hook_suggestions'][] = 'overlay_expand';
}

/**
 * Implements hook_theme().
 */
function overlay_expand_theme($existing, $type, $theme, $path) {
  $items = array();

  // Alternative template for Overlay Expand.
  $items['overlay_expand'] = array(
    'template' => 'overlay_expand',
    'path' => drupal_get_path('module', 'overlay_expand') . '/templates',
  );

  return $items;
}
