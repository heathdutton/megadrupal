<?php

/**
 * Implements hook_requirements().
 */
function gopushapi_service_requirements($phase) {
  $requirements = array();

  if ($phase === 'runtime') {
    $requirements +=
      generate_library_requirement('phpseclib', t('phpseclib')) +
      generate_php_extension_requirement('curl', t('cURL')) +
      generate_php_extension_requirement('gmp', t('GMP')) +
      generate_php_extension_requirement('bcmath', t('BC Math'));
  }

  return $requirements;
}
