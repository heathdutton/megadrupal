define('SCALD_TWITTER_ID_REGEXP', '/^[a-zA-Z0-9]+$/');
define('SCALD_TWITTER_WEB_REGEXP', '#^https?://([-\w]+\.)?twitter\.com/.*/(status|statuses)/(\d+)#');
define('SCALD_TWITTER_WEB', 'http://twitter.com');
define ('SCALD_TWITTER_API', 'https://api.twitter.com');
define ('SCALD_TWITTER_STATUS_URL', 'https://api.twitter.com/1.1/statuses/show.json');
define ('SCALD_TWITTER_EMBED_URL', 'https://api.twitter.com/1.1/statuses/oembed.json');
define ('SCALD_TWITTER_SEARCH_URL', 'https://api.twitter.com/1.1/search/tweets.json');

