function dnd_fields_skill_list_array($list = NULL) {
  $list = ($list) ? dnd_fields_skill_list() : $list;
  $skills = array();
  foreach($list as $skill) {
    list($machine_name, $skill_name) = explode('|', $skill);
    $skills[$machine_name] = $skill_name;
  }
  return $skills;
}

