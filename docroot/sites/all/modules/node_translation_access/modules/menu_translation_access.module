<?php

/**
 * @file
 * Menu Translation access module.
 */

require_once DRUPAL_ROOT . '/' . drupal_get_path('module', 'menu_translation_access') . '/includes/menu_translation_access.helper.inc';

/**
 * Implements hook_form_FORM_ID_alter().
 */
function menu_translation_access_form_menu_edit_item_alter(&$form, &$form_state) {
  // Deny access form for menu item.
  $form = menu_translation_access_menu_languages_form($form, $form_state);
}

/**
 * Implements hook_menu_link_delete().
 */
function menu_translation_access_menu_link_delete($link) {
  $mlid = $link['mlid'];
  $denied = variable_get('menu_translation_access_menu_items', array());
  if (isset($denied[$mlid])) {
    unset($denied[$mlid]);
    variable_set('menu_translation_access_menu_items', $denied);
  }
}

/**
 * Implements hook_translated_menu_link_alter().
 */
function menu_translation_access_translated_menu_link_alter(&$item, $map) {
  if (($item['router_path'] == 'node/%' && node_translation_access_denied(arg(1, $item['link_path']))) || menu_translation_access_menu_denied($item['mlid'])) {
    $item['hidden'] = 1;
  }
}
