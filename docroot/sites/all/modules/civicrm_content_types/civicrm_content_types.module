<?php

/**
 * @file
 * Allows for selected content types in Drupal to be mirrored with groups in
 * CiviCRM.
 */

/**
 * Implements hook_menu().
 */
function civicrm_content_types_menu() {
  $items['admin/config/civicrm-content-types'] = array(
    'title' => 'CiviCRM Content Type Groups settings',
    'description' => 'Administration settings for the CiviCRM Content Type Groups module',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('civicrm_content_types_settings_form'),
    'access arguments' => array('administer civicrm content type groups'),
    'file' => 'includes/civicrm_content_types.admin.inc',
  );

  return $items;
}

/**
 * Implements hook_permission().
 */
function civicrm_content_types_permission() {
  return array(
    'administer civicrm content type groups' => array(
      'title' => t('Administer CiviCRM Content Type Groups'),
    ),
  );
}
