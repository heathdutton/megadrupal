<?php
function pay_block_block_info() {
  $pay_forms = pay_forms_list();
  foreach($pay_forms as $key => $value) {
    $block[$key] = array(
    'info' => 'Pay block: ' . $value->title,
    );
  }
  return $block;
}

/**
* Implements hook_block_view().
*/
function pay_block_block_view($delta = 0) {
  $block = array();
  $delta = (int)$delta;
  if (!empty($delta)) {
    $pay_form = pay_form_load($delta);
    $block['content'] = drupal_get_form('pay_form', $pay_form->pfid, $pay_form->table);
  }
  return $block;
}
