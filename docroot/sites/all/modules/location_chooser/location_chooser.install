/**
 * Implements hook_install().
 */
function location_chooser_install() {
  $weight = db_query("SELECT weight FROM {system} WHERE name = :name AND type = :type", array(':name' => 'location', ':type' => 'module'))->fetchField();
  db_update('system')
  ->fields(array(
    'weight' => $weight + 1,
  ))
  ->condition('name', 'location_chooser')
  ->condition('type', 'module')
  ->execute();
}
