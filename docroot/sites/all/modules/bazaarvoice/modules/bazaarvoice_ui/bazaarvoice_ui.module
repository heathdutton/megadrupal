<?php
/**
 * @file
 * UI components for the Bazaarvoice Module.
 */

/**
 * Implements hook_menu().
 */
function bazaarvoice_ui_menu() {
  $items = array();

  // Minor code reduction technique.
  $base = array(
    'access callback' => 'user_access',
    'file' => 'includes/admin.inc',
  );

  // Top level configuration page.
  $items['admin/config/services/bazaarvoice'] = array(
    'title' => 'Bazaarvoice',
    'description' => 'Configure for Bazaarvoice integration',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('bazaarvoice_ui_admin_settings_form'),
    'access arguments' => array('administer bazaarvoice'),
  ) + $base;

  // Configure Bazaarvoice settings.
  $items['admin/config/services/bazaarvoice/settings'] = array(
    'title' => 'Settings',
    'type' => MENU_DEFAULT_LOCAL_TASK,
    'weight' => -1,
  );

  // Configure Bazaarvoice locales.
  $items['admin/config/services/bazaarvoice/locales'] = array(
    'title' => 'Locales',
    'type' => MENU_LOCAL_TASK,
    'weight' => 0,
    'description' => 'Configure Locale settings for languages',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('bazaarvoice_ui_admin_locale_form'),
    'access arguments' => array('administer bazaarvoice locales'),
  ) + $base;

  return $items;
}

/**
 * Implements hook_theme().
 */
function bazaarvoice_ui_theme() {
  $items = array();

  $items['bazaarvoice_ui_admin_locale_form_locales'] = array(
    'render element' => 'element',
  );

  return $items;
}

/**
 * Theme callback for admin locale form.
 */
function theme_bazaarvoice_ui_admin_locale_form_locales($variables) {
  $element = $variables['element'];
  $table = array(
    '#theme' => 'table',
    '#header' => array(
      array('data' => t('Language')),
      array('data' => t('Locale Code')),
      array('data' => t('Default')),
    ),
    '#rows' => array(),
  );

  // Get site languages.
  $languages = bazaarvoice_get_site_languages();

  // Loop through each child.
  foreach (element_children($element) as $lang_code) {
    if (isset($languages[$lang_code])) {
      $element['locale_default'][$lang_code]['#title_display'] = 'invisible';
      // Build table row.
      $table['#rows'][] = array(
        $languages[$lang_code]->name,
        drupal_render($element[$lang_code]),
        drupal_render($element['locale_default'][$lang_code]),
      );
    }
  }
  // Returned themed table.
  return render($table);
}
