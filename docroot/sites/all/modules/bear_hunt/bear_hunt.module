<?php
/**
 * @file
 * Configuration for ctools and search_api index.
 */

require_once 'bear_hunt.config.inc';

/**
 * Implements hook_form_FORM_ID_alter().
 */
function bear_hunt_form_views_exposed_form_alter(&$form, &$form_state, $form_id) {
  if ($form['#id'] == 'views-exposed-form-global-search-global-search-pane') {
    // Force the form to submit to proper location.
    $form['#action'] = '/search';
    // Add placeholder text.
    $form['search']['#attributes']['placeholder'] = t('Search');
  }
}
