<?php

/**
 * @file
 * Exposes the Google Reader API
 */

/**
 * Implements hook_libraries_info().
 */
function google_reader_api_menu() {
  $items['admin/config/development/google-reader'] = array(
    'title' => 'Google Reader API',
    'description' => 'Manage Google Reader API settings.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('google_reader_api_settings'),
    'access callback' => 'user_access',
    'access arguments' => array('administer menu'),
    'file' => 'google_reader_api.admin.inc',
  );
  return $items;
}

/**
 * Implements hook_libraries_info().
 */
function google_reader_api_libraries_info() {
  $libraries['Google-Reader-API'] = array(
    'name' => 'Google Reader API',
    'vendor url' => 'https://github.com/dimmduh/Google-Reader-API-PHP-class',
    'download url' => 'https://github.com/dimmduh/Google-Reader-API-PHP-class/zipball/master',
    'path' => 'www',
    'files' => array(
      'php' => array(
        'google-reader-api.php',
      ),
    ),
    'version' => '0.1'
  );
  return $libraries;
}