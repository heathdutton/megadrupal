<?php
/**
 * @file
 * Creates a line_item type for auctions, updates product price and user cart
 * when the auction is finalized
 */

/**
 * Implements hook_commerce_line_item_type_info().
 */
function commerce_auction_lineitem_commerce_line_item_type_info() {
  $line_item_types['commerce_auction_lineitem'] = array(
    'name' => t('Auction Line Item'),
    'description' => t('Line Item Type representing an auction product'),
    'product' => TRUE,
    'add_form_submit_value' => t('Add auction product'),
    'base' => 'commerce_product_line_item',
  );

  return $line_item_types;
}
