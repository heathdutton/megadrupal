<?php
/**
 * @file
 * Adds a new line_item type used by commerce_auction module
 */

/**
 * Implements hook_enable().
 */
function commerce_auction_lineitem_enable() {
  // This function configures all existing line item types, including ours.
  commerce_line_item_configure_line_item_types();
  $line_item_type = commerce_line_item_type_load('commerce_auction_lineitem');
  if ($line_item_type) {
    commerce_line_item_configure_line_item_type($line_item_type);
  }
}
