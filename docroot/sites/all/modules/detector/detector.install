<?php

/**
 * Implementation of hook_install().
 */
function detector_install() {
  module_load_include('inc', 'detector', 'detector.lib');
  
  $found = _detector_check_lib();
  
  variable_set('detector_active', $found);
  variable_set('detector_per_request', false);
  
  variable_set('detector_special_detection', false);
  variable_set('detector_special_detection_java', '');
  variable_set('detector_special_detection_flash', '');
}
