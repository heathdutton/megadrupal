<?php

/**
 * @file
 * Module used with tests form Contact Save Remind.
 */

/**
 * Implements hook_csremind_remind_user().
 */
function  csremind_test_helper_csremind_remind_user($reminder, $unread_message_count) {
  drupal_set_message(t('hook_csremind_remind_user was fired and implemented'));
  drupal_set_message(t('Reminder with ID @reminder_id received for user with ID @uid', array(
      '@reminder_id' => $reminder['id'],
      '@uid' => $reminder['uid'],
    )
  ));
  drupal_set_message(t('There is @count saved, unread message',
    array('@count' => $unread_message_count)));
}