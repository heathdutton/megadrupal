<?php
/**
 * @file
 * Code for the Showoff Misc feature.
 */

include_once 'showoff_misc.features.inc';

/**
 * Implements hook_menu().
 */
function showoff_misc_menu() {
  return array(
    'help' => array(
      'title' => 'Help',
      'page callback' => 'showoff_misc_help_page',
      'access arguments' => array('access content'),
      'type' => MENU_CALLBACK,
    ),
  );
}

/**
 * Page callback to display the help info.
 */
function showoff_misc_help_page() {
  $vars = array(
    '!link' => l('Drupal Showoff issue queue', 'http://drupal.org/project/issues/showoff'),
  );
  return t("<p>More help is on the way!</p><p>For questions regarding Drupal Showoff, or to report a bug, please visit the !link.</p>", $vars);
}
