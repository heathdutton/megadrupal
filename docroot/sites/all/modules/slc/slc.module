/**
 * Implements hook_help().
 */
function slc_help($path, $arg) {
  switch ($path) {
    case 'admin/help#slc':
      return t("Help at <a href='http://slcedu.org/'>www.slcedu.org</a>");
    // OPTIONAL: Add additional cases for other paths that should display help text.
  }
}

/**
 * Implementation of hook_perm().
 */
function slc_permission() {
  return array(
    'administer_slc_configuration' => array(
      'title' => t('Administer SLC Configuration'), 
      'description' => t('Can change SLC App credentials'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function slc_menu() { 
  $items['admin/config/system/slc'] = array(
    'title' => 'SLC Edu Configuration',
    'description' => 'Configure the SLC Edu module',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('_slc_admin_settings'), // An array of arguments to pass to the page callback function. Integer values pass the corresponding URL component.
    'access arguments' => array('administer_slc_configuration'),
    'weight' => 0,
    'type' => MENU_NORMAL_ITEM, // One of MENU_NORMAL_ITEM / MENU_CALLBACK / MENU_SUGGESTED_ITEM / MENU_LOCAL_TASK / MENU_DEFAULT_LOCAL_TASK
    'file' => 'slc.admin.inc',
    'menu_name' => '', // Menu to place this item in.
    'title callback' => '', // Function to generate the title, defaults to t(). 
    'title arguments' => array(), // Arguments to send to t() or your custom callback. 
  );
  $items['slc/endpoint'] = array(
  	'page callback' => 'slc_endpoint', 
  	'access arguments' => array('administer_slc_configuration'),
  	'file' => 'slc.admin.inc',
   );
  $items['slc/jsontoxml'] = array(
  	'page callback' => 'slc_jsontoxml', 
  	'access arguments' => array('access content'),
  	'file' => 'slc.admin.inc',
   );
  return $items;
}
