<?php

/**
 * @file
 * Install, update and uninstall functions for the simpleviews field module.
 */

/**
 * Implements hook_field_schema().
 */
function simpleviews_field_field_schema($field) {
  return array(
    'columns' => array(
      'value' => array(
        'type' => 'text',
        'not null' => FALSE,
        'size' => 'big',
      ),
    ),
  );
}
