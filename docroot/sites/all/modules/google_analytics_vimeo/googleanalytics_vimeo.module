<?php
/**
 * @file
 * Google Analytics Vimeo Video Tracking.
 */

/**
 * Define admin config url.
 */
define("GOOGLEANALYTICS_VIMEO_CONFIG_PAGE_URL", "admin/config/googleanalytics_vimeo");
define("GOOGLEANALYTICS_VIMEO_USE_PHP_FOR_TRACKING", 2);

/**
 * Implements hook_menu().
 */
function googleanalytics_vimeo_menu() {
  $items = array();
  $items[GOOGLEANALYTICS_VIMEO_CONFIG_PAGE_URL] = array(
    'title' => 'Google Analytics Vimeo Video Tracking',
    'description' => 'Configure Google Analytics Vimeo',
    'position' => 'right',
    'page callback' => 'system_admin_menu_block_page',
    'access arguments' => array('administer google analytics'),
    'file' => 'system.admin.inc',
    'file path' => drupal_get_path('module', 'system'),
  );
  $items[GOOGLEANALYTICS_VIMEO_CONFIG_PAGE_URL . '/settings'] = array(
    'title' => 'Google Analytics Vimeo Settings',
    'description' => 'Configure Google Analytics Vimeo Settings',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('googleanalytics_vimeo_settings'),
    'access arguments' => array('administer google analytics'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'googleanalytics_vimeo.admin.inc',
    'file path' => drupal_get_path('module', 'googleanalytics_vimeo'),
  );
  return $items;
}

/**
 * Implements hook_libraries_info().
 */
function googleanalytics_vimeo_libraries_info() {
  $libraries['vimeo.ga.js'] = array(
    'name' => 'Google Analytics Vimeo Video Tracking',
    'vendor url' => 'https://github.com/sanderheilbron/vimeo.ga.js',
    'download url' => 'https://github.com/sanderheilbron/vimeo.ga.js/archive/master.zip',
    'version arguments' => array(
      'file' => 'vimeo.ga.min.js',
      'pattern' => '/vimeo.ga.js \| v(\d+\.+\d+)/',
      'lines' => 2,
    ),
    'files' => array(
      'js' => array(
        'vimeo.ga.min.js',
      ),
    ),
  );
  return $libraries;
}

/**
 * Implements hook_page_alter().
 */
function googleanalytics_vimeo_page_build(&$page) {
  module_load_include('inc', 'googleanalytics_vimeo', 'googleanalytics_vimeo');
  $library = libraries_detect('vimeo.ga.js');
  $googleanalytics_vimeo_visibility_pages = googleanalytics_vimeo_visibility_pages();
  if (!empty($library['installed']) && !empty($googleanalytics_vimeo_visibility_pages)) {
    libraries_load('vimeo.ga.js');
    $googleanalytics_vimeo_js = drupal_get_path('module', 'googleanalytics_vimeo') . '/googleanalytics_vimeo.js';
    $page['content']['#attached']['js'][] = array(
      'data' => $googleanalytics_vimeo_js,
      'type' => 'file',
      'scope' => 'footer',
    );
  }
  googleanalytics_vimeo_admin_config_js();
}

/**
 * Implements hook_permission().
 */
function googleanalytics_vimeo_permission() {
  return array(
    'use PHP for vimeo tracking visibility' => array(
      'title' => t('Use PHP for vimeo tracking visibility'),
      'description' => t('Enter PHP code in the field for vimeo video tracking visibility settings.'),
      'restrict access' => TRUE,
    ),
  );
}

/**
 * Implements hook_paranoia_hide_permissions().
 */
function googleanalytics_vimeo_paranoia_hide_permissions() {
  return array('use PHP for vimeo tracking visibility');
}
