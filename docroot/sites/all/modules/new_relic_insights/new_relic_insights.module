/**
 * Implements hook_cron().
 */
function new_relic_insights_cron() {
  $info = system_get_info('module', 'new_relic_insights');
  $version = $info['version'];
  $old_ua = variable_get('new_relic_insights_ua', '');
  $new_ua = "Drupal/$version (drupal.org/project/new_relic_insights)";

  // If the version has been updated, set the version UA.
  if ($old_ua !== $new_ua) {
    variable_set('new_relic_insights_ua', $new_ua);
  }
}

