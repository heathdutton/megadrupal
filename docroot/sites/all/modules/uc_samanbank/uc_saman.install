  variable_del('saman_bank_PageBGColor');
  variable_del('saman_bank_PageBorderColor');
  variable_del('saman_bank_TitleFont');
  variable_del('saman_bank_TitleColor');
  variable_del('saman_bank_TitleSize');
  variable_del('saman_bank_TextFont');
  variable_del('saman_bank_TextColor');
  variable_del('saman_bank_TextSize');
  variable_del('saman_bank_TypeTextColor');
  variable_del('saman_bank_TypeTextSize');
  variable_del('saman_bank_LogoURI');
}
