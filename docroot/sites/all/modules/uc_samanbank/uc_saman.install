/**
 * Implements hook_schema().
 */
function uc_saman_schema() {
  $schema = array();

  $schema['uc_payment_saman'] = array(
    'fields' => array(
      'id' => array(
        'type' => 'int',
        'length' => 10,
        'unsigned' => TRUE,
        'not null' => True,
      ),
      'res_num' => array(
        'type' => 'varchar',
        'not null' => TRUE,
        'length' => 20,
        'default' => '',
      ),
      'ref_num' => array(
        'type' => 'varchar',
        'length' => 50,
        'not null' => TRUE,
        'default' => '',
      ),
      'total_amont' => array(
        'type' => 'int',
        'length' => 255,
        'not null' => TRUE,
      ),
      'payment' => array(
        'type' => 'int',
        'length' => 255,
        'not null' => TRUE,
        'default' => 0,
      ),
      'date_start' => array(
        'type' => 'int',
        'length' => 12,
        'not null' => TRUE,
      ),
    ),
    'indexes' => array(
      'ref_num' => array('ref_num'),
    ),
    'primary key' => array('id'),
    'unique keys' =>  array(
      'res_num' => array('res_num'),
    ),
  );

  return $schema;
}

