<?php

/**
 * @file
 * Allow users to create context reactions that hide the toolbar.
 */

/**
 * Implements hook_context_plugins().
 */
function context_hide_toolbar_context_plugins() {
  return array(
    'context_hide_toolbar_hide' => array(
      'handler' => array(
        'path' => drupal_get_path('module', 'context_hide_toolbar'),
        'file' => 'context_hide_toolbar.context.inc',
        'class' => 'context_hide_toolbar_context_reaction_hide_toolbar',
        'parent' => 'context_reaction',
      ),
    ),
  );
}

/**
 * Implements hook_context_registry().
 */
function context_hide_toolbar_context_registry() {
  return array(
    'reactions' => array(
      'context_hide_toolbar_hide' => array(
        'title' => t('Hide Toolbar'),
        'plugin' => 'context_hide_toolbar_hide',
      ),
    ),
  );
}

/**
 * Implements hook_page_alter().
 */
function context_hide_toolbar_page_alter(&$page) {
  $plugin = context_get_plugin('reaction', 'context_hide_toolbar_hide');
  if ($plugin) {
    $hide_toolbar = $plugin->execute();
    if ($hide_toolbar && isset($page['page_top']['toolbar'])) {
      $page['page_top']['toolbar']['#access'] = FALSE;
    }
  }
}
