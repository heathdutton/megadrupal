<?php

function webform_email_input_filter_form_webform_email_edit_form_alter(&$form, &$form_state, $form_id) {
    $form['template']['template']["#wysiwyg"] = true;
    $form['template']['template']['#type'] = 'text_format';
    $form['template']['template']['#format'] = 'full_html';

    $new = array("webform_email_input_filter_webform_email_edit_form_submit");
    $form["#submit"] = array_merge($new,$form["#submit"]);
} 

function webform_email_input_filter_webform_email_edit_form_submit($form, &$form_state) {
    $form_state['values']['template'] = $form_state['values']['template']['value'];
}

