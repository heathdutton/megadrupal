/**
 * Implementation of hook_block_info().
 */

function futurama_block_info() {
  $blocks['futurama'] = array(
    'info' => t('Futurama'),
    );
  return $blocks;
}

/**
 * Implementation of hook_block_view().
 */

function futurama_block_view($delta = '') {
  switch ($delta) {
    case 'futurama':
      $blocks['subject'] = t('Futurama');
      $blocks['content'] = futurama_rand();
  }
  return $blocks;
}

