function nm_galleries_install() {
  // Attached gallery field to be applied to all content types.
  // Ensure the forum node type is available.
  node_types_rebuild();
  $types = node_type_get_types();

  foreach ($types as $type => $info) {
    //drupal_set_message('Adding gallery reference field to content type: ' . $info->type);
    if ($info->type != 'nm_gallery') {
      nm_galleries_add_reference_field($info);
    }
  }
}