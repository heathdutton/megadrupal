        'unsigned' => TRUE,
      ),
      'fid' => array(
        'description' => 'File id.',
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
      ),
      'loc' => array(
        'description' => 'ID of the object using the file.',
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
      ),
      'thumbnail_loc' => array(
        'description' => 'The URL to the video thumbnail, relative to the Drupal path.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'content_loc' => array(
        'description' => 'The URL to the video, can be relative to the Drupal path or full URL.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'player_loc' => array(
        'description' => 'The URL to the video player, can be relative to the Drupal path or full URL.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'title' => array(
        'description' => 'The title of the video.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'description' => array(
        'description' => 'The description of the video.',
        'type' => 'text',
        'not null' => TRUE,
      ),
      'filemime' => array(
        'description' => 'The fileâ€™s MIME type.',
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
      ),
      'language' => array(
        'description' => 'The {languages}.language of this link or an empty string if it is language-neutral.',
        'type' => 'varchar',
        'length' => 12,
        'not null' => TRUE,
        'default' => '',
      ),
      'status' => array(
