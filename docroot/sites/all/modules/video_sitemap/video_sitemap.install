}

/**
 * Implements hook_install().
 */
function video_sitemap_install() {
  $t = get_t();
  drupal_set_message($t("Thank you for installing the Video Sitemap module."));
}

/**
 * Implements hook_uninstall().
 */
function video_sitemap_uninstall() {
  $variable_del = array(
    'video_sitemap_exclude_mime_types',
    'video_sitemap_minimum_lifetime',
    'video_sitemap_disable_cron_regeneration',
    'video_sitemap_generated_last',
  );
  foreach ($variable_del as $variable) {
    variable_del($variable);
  }
}
