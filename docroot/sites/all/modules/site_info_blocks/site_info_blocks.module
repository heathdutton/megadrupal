<?php
/**
 * @file
 * Core hook implementations for Site Info Blocks.
 */

/**
 * Implements hook_block_info().
 */
function site_info_blocks_block_info() {
  $blocks = array();
  $blocks['slogan'] = array(
    'info' => t('Site Slogan'),
    'cache' => BLOCK_CACHE_GLOBAL,
  );
  $blocks['mission'] = array(
    'info' => t('Site Mission'),
    'cache' => BLOCK_CACHE_GLOBAL,
  );
  $blocks['footer-message'] = array(
    'info' => t('Site Footer Message'),
    'cache' => BLOCK_CACHE_GLOBAL,
  );
  return $blocks;
}

/**
 * Implements hook_block_info().
 */
function site_info_blocks_block_view() {
  $block = array();

  switch ($delta) {
    case 'slogan':
      $block['subject'] = t('Slogan');
      $block['content'] = variable_get('site_slogan', '');
      break;
    case 'mission':
      $block['subject'] = t('Mission');
      $block['content'] = variable_get('site_mission', '');
      break;
    case 'footer-message':
      $block['subject'] = t('Footer Message');
      $block['content'] = variable_get('site_footer', '');
      break;
  }
  return $block;
}
