<?php

/**
 * @file
 * Provides a page like the standard Site Information page
 * (admin/settings/site-information) but with the ability for an administrator
 * to set which fields should be shown. Permission are created for
 * administering which fields should be shown and for accessing the "lite"
 * site information page..
 *
 * Author: Oliver Coleman, oliver@e-geek.com.au
 * http://e-geek.com.au
 * http://enviro-geek.net
*/



/**
 * Implements hook_permission().
 */
function site_info_lite_permission() {
  return array(
    'administer site info lite',
    'access site info lite'
  );
}


/**
 * Implements hook_help().
 */
function site_info_lite_help($section='') {
  switch ($section) {
    case 'admin/settings/site-info-lite':
      $output = t('Set which fields should be shown on the !site_info_page page.', array('!site_info_page' => l(t('basic site information'), 'admin/settings/basic-site-info')));
      return $output;
  }
}


/**
 * Implements hook_menu().
 */
function site_info_lite_menu() {
  $items = array();
  $items['admin/settings/basic-site-info'] = array(
    'title' => t('Basic site information'),
    'description' => t('Change basic site information.'),
    'page callback' => 'site_info_lite_page',
    'access arguments' => array('access site info lite'),
    'type' => MENU_NORMAL_ITEM,
  );
  $items['admin/settings/site-info-lite'] = array(
    'title' => t('Site info lite settings'),
    'description' => t('Administer Site info lite.'),
    'page callback' => 'site_info_lite_settings',
    'access arguments' => array('administer site info lite'),
    'type' => MENU_NORMAL_ITEM,
  );
  return $items;
}

function site_info_lite_page() {
  $output = drupal_get_form('site_info_lite_page_form');
  return $output;
}

function site_info_lite_settings() {
  $output = drupal_get_form('site_info_lite_settings_form');
  return $output;
}

function site_info_lite_page_form() {
  if (variable_get('site_info_lite_name', 0))
    $form['site_name'] = array(
      '#type' => 'textfield',
      '#title' => t('Name'),
      '#default_value' => variable_get('site_name', 'Drupal'),
      '#description' => t('The name of this web site.'),
      '#required' => TRUE
    );
  if (variable_get('site_info_lite_mail', 0))
    $form['site_mail'] = array(
      '#type' => 'textfield',
      '#title' => t('E-mail address'),
      '#default_value' => variable_get('site_mail', ini_get('sendmail_from')),
      '#description' => t('A valid e-mail address to be used as the "From" address by the auto-mailer during registration, new password requests, notifications, etc.  To lessen the likelihood of e-mail being marked as spam, this e-mail address should use the same domain as the website.'),
      '#required' => TRUE,
    );
  if (variable_get('site_info_lite_slogan', 0))
    $form['site_slogan'] = array(
      '#type' => 'textfield',
      '#title' => t('Slogan'),
      '#default_value' => variable_get('site_slogan', ''),
      '#description' => t('The slogan of this website. Some themes display a slogan when available.')
    );

  if (variable_get('site_info_lite_mission', 0))
    $form['site_mission'] = array(
      '#type' => 'textarea',
      '#title' => t('Mission'),
      '#default_value' => variable_get('site_mission', ''),
      '#description' => t('Your site\'s mission statement or focus.')
    );
  if (variable_get('site_info_lite_footer', 0))
    $form['site_footer'] = array(
      '#type' => 'textarea',
      '#title' => t('Footer message'),
      '#default_value' => variable_get('site_footer', ''),
      '#description' => t('This text will be displayed at the bottom of each page. Useful for adding a copyright notice to your pages.')
    );
  if (variable_get('site_info_lite_anonymous', 0))
    $form['anonymous'] = array(
      '#type' => 'textfield',
      '#title' => t('Anonymous user'),
      '#default_value' => variable_get('anonymous', t('Anonymous')),
      '#description' => t('The name used to indicate anonymous users.')
    );
  if (variable_get('site_info_lite_frontpage', 0))
    $form['site_frontpage'] = array(
      '#type' => 'textfield',
      '#title' => t('Default front page'),
      '#default_value' => variable_get('site_frontpage', 'node'),
      '#size' => 40,
      '#description' => t('The home page displays content from this relative URL. If unsure, specify "node".'),
      '#field_prefix' => url(NULL, NULL, NULL, TRUE) . (variable_get('clean_url', 0) ? '' : '?q=')
    );

  return system_settings_form($form);
}


function site_info_lite_settings_form() {
  $form['site_info_lite_name'] = array(
    '#type' => 'checkbox',
    '#title' => t('Show site name field.'),
    '#default_value' => variable_get('site_info_lite_name', 1)
  );
  $form['site_info_lite_mail'] = array(
    '#type' => 'checkbox',
    '#title' => t('Show site e-mail field.'),
    '#default_value' => variable_get('site_info_lite_mail', 1)
  );
  $form['site_info_lite_slogan'] = array(
    '#type' => 'checkbox',
    '#title' => t('Show site slogan field.'),
    '#default_value' => variable_get('site_info_lite_slogan', 1)
  );
  $form['site_info_lite_mission'] = array(
    '#type' => 'checkbox',
    '#title' => t('Show site mission field.'),
    '#default_value' => variable_get('site_info_lite_mission', 1)
  );
  $form['site_info_lite_footer'] = array(
    '#type' => 'checkbox',
    '#title' => t('Show site footer field.'),
    '#default_value' => variable_get('site_info_lite_footer', 0)
  );
  $form['site_info_lite_anonymous'] = array(
    '#type' => 'checkbox',
    '#title' => t('Show anonymous name field.'),
    '#default_value' => variable_get('site_info_lite_anonymous', 1)
  );
  $form['site_info_lite_frontpage'] = array(
    '#type' => 'checkbox',
    '#title' => t('Show default front page field.'),
    '#default_value' => variable_get('site_info_lite_frontpage', 0)
  );
  return system_settings_form($form);
}