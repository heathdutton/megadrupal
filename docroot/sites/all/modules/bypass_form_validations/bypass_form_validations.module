<?php

/**
 * @file
 * Bypass Form Validations Module
 */

// Enable PSR-4 Namespaces.
xautoload()->registerModulePsr4(__FILE__, 'src');

/**
 * Implements hook__permission().
 */
function bypass_form_validations_permission() {
  return array(
    'bypass form validations' => array(
      'title' => t('Bypass form validations'),
      'description' => t('Bypass form validations and required fields'),
    ),
	  'bypass form required fields' => array(
        'title' => t('Bypass form required fields'),
        'description' => t('Bypass form required fields'),
	  ),
  );
}

/**
 * Implements hook_form_alter().
 */
function bypass_form_validations_form_alter(&$form, &$form_state, $form_id) {
  Drupal\bypass_form_validations\FormBypassHooks::BypassFormHookFormAlter($form, $form_state, $form_id);
}
