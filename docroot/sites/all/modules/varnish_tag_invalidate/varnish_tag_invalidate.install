<?php
/**
 * Implements hook_install().
 * 
 * Sets initial value of varnish_tag_invalidate_install to all entity types
 */
function varnish_tag_invalidate_install() {
  $entity_types = array();
  
  foreach (entity_get_info() as $name => $info) {
    $entity_types[$name] = $name;
  }
  
  variable_set('varnish_tag_invalidate_entities_view', $entity_types);
}

/**
 * Set all entities to be handled for tags
 */
function varnish_tag_invalidate_update_7011() {
  varnish_tag_invalidate_install();
}