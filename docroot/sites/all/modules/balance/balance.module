<?php
/**
 * @file
 * Module file for the balance module.
 */

/**
 * Implements hook_modules_enabled().
 */
function balance_modules_enabled($modules) {
  foreach ($modules as $module) {
    features_revert_module($module);
    watchdog('balance', '%module is reverted', array('%module' => $module), WATCHDOG_INFO);
  }
}
