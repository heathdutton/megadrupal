<?php


/**
 * Implements hook_install().
 */
function comment_score_install() {
  $schema = drupal_get_schema('comment');
  db_add_field('comment', 'score', $schema['fields']['score'], array(
    'indexes' => array(
      'comment_score' => array('score')
    ),
  ));
}

/**
 * Implementation of hook_uninstall().
 */
function comment_score_uninstall() {
  db_drop_index('comment', 'comment_score');
  db_drop_field('comment', 'score');
}
