<?php

/**
 * @file
 * Provides the SuperSleight library.
 */

/**
 * Implements hook_init().
 */
function supersleight_init() {
  // Do not load supersleight during the Drupal installation process, e.g. if 
  // part of installation profiles.
  if (!drupal_installation_attempted()) {
    $path = drupal_get_path('module', 'supersleight');
    drupal_add_library('supersleight', 'supersleight-jquery', TRUE);
    drupal_add_js('jQuery(document).ready(function () { jQuery("body").supersleight({shim: "' . $path .'/x.gif"}); });', 'inline');
  }
}

/**
 * Implements hook_library().
 */
function supersleight_library() {
  $libraries = array();

  $libraries['supersleight-jquery'] = array(
    'title' => 'SuperSleight jQuery Plugin',
    'website' => 'http://allinthehead.com/code/sleight/supersleight.plugin.js',
    'version' => 1,
    'js' => array(
      _supersleight_library_path('jquery') => array(
        'group' => JS_LIBRARY,
      ),
    ),
    'dependencies' => array(
      // jquery.supersleight.js relies on jQuery in jquery.js
      array('system', 'jquery'),
    ),
  );

  $libraries['supersleight-original'] = array(
    'title' => 'SuperSleight Original',
    'website' => 'http://24ways.org/code/supersleight-transparent-png-in-ie6/supersleight.zip',
    'version' => 1,
    'js' => array(
      _supersleight_library_path('original') => array(
        'group' => JS_LIBRARY,
      ),
    ),
  );

  return $libraries;
}

function supersleight_libraries_info() {
  
}

/**
 * Gets the path to the jQuery supersleight library.
 *
 * @return
 *   The path to the supersleight library js file, or FALSE if not found.
 */
function _supersleight_library_path($version = 'jquery') {
  $supersleight_path = libraries_get_path('supersleight');
  $result = FALSE;

  if (!empty($supersleight_path)) {
    switch($version) {
      case 'jquery':
        // Attempt to use minified version of jQuery supersleight plugin.
        if (file_exists($supersleight_path . '/jquery.supersleight.min.js')) {
          $result = $supersleight_path . '/jquery.supersleight.min.js';
        }
        // Otherwise use non-minified version if available.
        elseif (file_exists($supersleight_path . '/jquery.supersleight.js')) {
          $result = $supersleight_path . '/jquery.supersleight.js';
        }
      break;
      case 'original':
        // Standard JS minified.
        if (file_exists($supersleight_path . '/supersleight-min.js')) {
          $result = $supersleight_path . '/supersleight-min.js';
        }
        // Standard JS non-minified.
        elseif (file_exists($supersleight_path . '/supersleight.js')) {
          $result = $supersleight_path . '/supersleight.js';
        }
      break;
    }
  }

  return $result;
}