<?php

/**
 * @file
 * Hooks and API functions for Search API Hashtag module.
 */

/**
 * Implements hook_search_api_alter_callback_info().
 */
function search_api_hashtag_search_api_alter_callback_info() {
  $callbacks['search_api_hashtag'] = array(
    'name' => t('Generate a hashtag indexed field'),
    'description' => t('This alteration creates a hashtag field to extract hashtags from text fields.'),
    'class' => 'SearchApiHashtagAlterCallback',
  );

  return $callbacks;
}
