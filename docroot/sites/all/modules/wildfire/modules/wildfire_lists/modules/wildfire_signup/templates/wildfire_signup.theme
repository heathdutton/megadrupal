<?php
/**
 * @file
 *    Theme functions for the wildfire_signup module.
 */

/**
 * Preprocess function for theme_wildfire_signup_form
 */
function template_preprocess_wildfire_signup(&$vars) {

  $vars['subscribed'] = FALSE;
  $vars['signup_form'] = FALSE;

  if (user_is_logged_in()) {
    $vars['subscribed'] = wildfire_signup_user_subscribed();
  }
  if ($vars['subscribed'] == FALSE) {
    $vars['signup_form'] = drupal_get_form('wildfire_signup_form');
  }

}
