<?php

/**
 * @file
 * Add additional behaviour to tabledrag-enabled tables.
 */

/**
 * Implements hook_js_alter().
 */
function tabledragextra_js_alter(&$javascript) {
  if (isset($javascript['misc/tabledrag.js'])) {
    // Add our extra javascript file if tabledrag.js was added already.
    $file = drupal_get_path('module', 'tabledragextra') . '/tabledragextra.js';
    $javascript[$file] = array('weight' => -0.9) + drupal_js_defaults($file);
  }
}
