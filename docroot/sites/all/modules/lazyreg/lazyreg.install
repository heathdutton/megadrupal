<?php

function lazyreg_install() {
    switch ($GLOBALS['db_type']) {
        case 'mysql':
        case 'mysqli':
            db_query("CREATE TABLE {lazyreg} (
              `uid` int(11) NOT NULL default '0',
              `confirm` varchar(16) NOT NULL default '0',
              KEY `uid` (`uid`),
              KEY `confirm` (`confirm`)
              ) TYPE=MyISAM;
            ");
            
            drupal_set_message("Lazy registration module installed.");
        break;
    }
}