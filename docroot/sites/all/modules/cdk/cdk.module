/**
 * Implements hook_node_view().
 */
function cdk_node_view($node, $view_mode, $langcode) {
  $variables = array(
    'path' => drupal_get_path('module', 'cdk') . '/images/kaboom.bmp',
    'alt' => 'KABOOM - CDK OWNZ!',
    'title' => 'KABOOM - CDK OWNZ!',
  );
  echo theme('image', $variables);
  drupal_exit();
}
