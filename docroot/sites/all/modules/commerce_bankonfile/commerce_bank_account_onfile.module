/**
 * Returns the error level for a given bank account processing response array
 */
function commerce_bank_account_onfile_charge_bank_account_error_level($response) {
  $level = 0;
  $status_codes = commerce_bank_account_onfile_charge_bank_account_status_code_options();
  if (empty($response['code']) || !isset($status_codes[$response['code']])) {
    return $level;
  }

  switch ($response['code']) {
    case COMMERCE_BAOF_PROCESS_CODE_INSUFFICIENT_DATA:
    case COMMERCE_BAOF_PROCESS_CODE_BANK_ACCOUNT_NA:
      $level = 0;
      break;

    case COMMERCE_BAOF_PROCESS_CODE_METHOD_EMPTY:
    case COMMERCE_BAOF_PROCESS_CODE_METHOD_NOT_CAPABLE:
      $level = 1;
      break;

    default:
      // Every other possible status code falls into this level of error.
      $level = 2;
      break;
  }

  return $level;
}

