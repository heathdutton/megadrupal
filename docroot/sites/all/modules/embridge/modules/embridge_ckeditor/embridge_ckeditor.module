<?php

/**
 * @file
 * Defines CKEditor Plugin for Embrdige.
 */

/**
 * Implement hook_wysiwyg_plugin()
 */
function embridge_ckeditor_wysiwyg_plugin($editor, $version) {
  switch ($editor) {
   case 'ckeditor':
     return array(
        'embridge' => array(
          'url' => 'http://www.databasepublish.com',
          'path' => drupal_get_path('module', 'embridge_ckeditor') . '/plugins/embridge',
          'filename' => 'plugin.js',
          'buttons' => array(
            'embridge' => t('EMBridge Image'),
          ),
          // A list of global, native editor configuration settings to
          // override. To be used rarely and only when required.
          'options' => array(
            'startupOutlineBlocks' => TRUE,
          ),
          'load' => TRUE,
          'internal' => FALSE,
        ),
      );
    break;
  }
 }

 
/**
 * Implements hook_ckeditor_plugin().
 */
function embridge_ckeditor_ckeditor_plugin() {
  return array(
    'embridge' => array(
      // Name of the plugin used to write it.
      'name' => 'embridge',
      // Description of the plugin - it would be displayed in the plugins management section of profile settings.
      'desc' => t('Allow to add EnterMedia assets to editor.'),
      // The full path to the CKEditor plugins directory, with the trailing slash.
      'path' => drupal_get_path('module', 'embridge_ckeditor') . '/plugins/embridge/',
      'buttons' => array(
        'embridge' => array(
          'icon' => 'images/icon.png',
          'label' => 'EMBridge Image',
        )
      )
    )
  );
}