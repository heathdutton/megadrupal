<?php

/**
 * @file
 * Primary hook implementations.
 */

/**
 * Implements hook_menu_alter().
 */
function patch_status_menu_alter(&$items) {

  // Swop out update module's callback for our own.
  $items['admin/reports/updates']['page callback'] = 'patch_status_update_status';
  $items['admin/reports/updates']['file'] = 'patch_status.pages.inc';
  $items['admin/reports/updates']['file path'] = drupal_get_path('module', 'patch_status');
}

/**
 * Implements hook_theme().
 */
function patch_status_theme() {
  return array(
    'patch_status_update_report' => array(
      'variables' => array('data' => NULL),
    ),
  );
}
