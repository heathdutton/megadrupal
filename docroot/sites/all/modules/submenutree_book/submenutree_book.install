/**
 * Implements hook_install().
 *
 * This needs to run after core book module, as we undo things it does.
 */
function submenutree_book_enable() {
  db_update('system')
    ->fields(array('weight' => 2))
    ->condition('name', 'submenutree_book')
    ->execute();
}

