<?php

/**
 * Implements hook_install().
 */
function cultura_questionnaire_install() {
  require drupal_get_path('module', 'cultura_questionnaire') . '/install/taxonomy.inc';
  cultura_questionnaire_create_language_vocabulary();

  require drupal_get_path('module', 'cultura_questionnaire') . '/install/content_types.inc';
  cultura_questionnaire_create_questionnaire_builder_content_type();
  cultura_questionnaire_configure_auto_nodetitle();
  cultura_questionnaire_configure_webform();
  cultura_questionnaire_add_builder_reference_to_discussion();

  require drupal_get_path('module', 'cultura_questionnaire') . '/install/user.inc';
  cultura_questionnaire_configure_user();
}
