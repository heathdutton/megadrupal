<?php

/**
 * @file
 * Install file for whosends api integration  
 */

/**
 * Sets vaiable. 
 */
function who_sends_api_integration_install() {
  variable_set('mail_system', array('default-system' => 'WhoSendsMailSystem'));
}

/**
 * Sets the mail system to use the Whosends class.
 */
function who_sends_api_integration_enable() {
  variable_set('mail_system', array('default-system' => 'WhoSendsMailSystem'));
}

/**
 * Resets mail back to normal.
 */
function who_sends_api_integration_uninstall() {
  mailsystem_set(mailsystem_defaults());
  // Remove set vars.
  variable_del('who_sends_api_integration_api_url');
  variable_del('who_sends_api_integration_registered_domain');
  variable_del('who_sends_api_integration_appkey');
  variable_del('who_sends_api_integration_url_duration');
  variable_del('who_sends_api_integration_format');
  variable_del('who_sends_api_integration_image_location');
}

/**
 * Resets mail back to normal.
 */
function who_sends_api_integration_disable() {
  mailsystem_set(mailsystem_defaults());
}
