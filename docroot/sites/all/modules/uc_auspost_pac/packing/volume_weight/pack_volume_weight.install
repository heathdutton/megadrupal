<?php
/**
 * @file
 * Uninstall the module cleanly.
 */

/**
 * Implements hook_uninstall().
 */
function pack_volume_weight_uninstall() {

  // Delete all of the variables used by this module. Not wildcarding, but only
  // removing variables known to be saved by this module.
  $vars = variable_get('pack_volume_weight_vars', array());
  foreach ($vars as $variable_name) {
    variable_del($variable_name);
  }

  variable_del('pack_volume_weight_vars');
}
