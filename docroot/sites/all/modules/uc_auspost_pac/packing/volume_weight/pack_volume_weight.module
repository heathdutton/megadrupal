<?php
/**
 * @file
 * AusPost PAC Packing Algorithm - Volume/Weight limited.
 */

/**
 * Settings defaults. In the events that the settings are not set specifically,
 * these defaults will be used.
 */
function pack_volume_weight_get_settings($method_id) {
  $settings = array();

  switch ($method_id) {
    case 'auspost_domestic_letter':
      $settings = array(
        'volume_disabled' => TRUE,
        'volume_limit' => 0,
        'weight_limit' => 500,
      );
      break;
    case 'auspost_domestic_parcel':
      $settings = array(
        'volume_disabled' => FALSE,
        'volume_limit' => 128625000, // 350x350x1050
        'weight_limit' => 20000,
      );
      break;
    case 'auspost_intnl_letter':
      $settings = array(
        'volume_disabled' => TRUE,
        'volume_limit' => 0,
        'weight_limit' => 500,
      );
      break;
    case 'auspost_intnl_parcel':
      $settings = array(
        'volume_disabled' => TRUE,
        'volume_limit' => 0,
        'weight_limit' => 20000,
      );
      break;
    default:
      $settings = array(
        'volume_disabled' => FALSE,
        'volume_limit' => 128625000,
        'weight_limit' => 20000,
      );
  }

  $stored = variable_get('pack_volume_weight_' . $method_id, FALSE);
  if ($stored !== FALSE) {
    $settings = array_merge($settings, $stored);
  }

  return $settings;
}
