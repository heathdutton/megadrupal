<?php

/**
 * @file
 * Install, update and uninstall functions for the rut field module.
 */

/**
 * Implements hook_field_schema().
 */
function rut_field_field_schema($field) {
  return array(
    'columns' => array(
      'rut' => array(
        'type' => 'int',
        'size' => 'big',
        'not null' => FALSE,
        'unsigned' => TRUE,
      ),
      'dv' => array(
        'type' => 'char',
        'not null' => FALSE,
        'length' => 1,
      ),
    ),
    'indexes' => array(
      'rut' => array('rut'),
    ),
  );
}


/**
 * Helper function to change column specifications.
 */
function _rut_field_update_field($fields, $spec, $suffix) {
  foreach ($fields as $field) {
    if ($field['deleted']) {
      $table = "field_deleted_data_{$field['id']}";
      $revision_table = "field_deleted_revision_{$field['id']}";
    }
    else {
      $table = "field_data_{$field['field_name']}";
      $revision_table = "field_revision_{$field['field_name']}";
    }
    $column = $field['field_name'] . '_' . $suffix;
    db_change_field($table, $column, $column, $spec);
    db_change_field($revision_table, $column, $column, $spec);
  }
}


/**
 * Remove the default value 0 for 'rut' column and set unsigned value.
 */
function rut_field_update_7100() {
  $spec = array(
    'type' => 'int',
    'not null' => FALSE,
    'unsigned' => TRUE,
  );

  $fields = _update_7000_field_read_fields(array('module' => 'rut_field'));
  _rut_field_update_field($fields, $spec, 'rut');
}


/**
 * Change the size for 'rut' column to support big values.
 */
function rut_field_update_7101() {
  $spec = array(
    'type' => 'int',
    'size' => 'big',
    'not null' => FALSE,
    'unsigned' => TRUE,
  );

  $fields = _update_7000_field_read_fields(array('module' => 'rut_field'));
  _rut_field_update_field($fields, $spec, 'rut');
}
