  $handler->display->display_options['path'] = 'admin/config/system/advanced-page/dashboard';
  $handler->display->display_options['menu']['type'] = 'default tab';
  $handler->display->display_options['menu']['title'] = 'Advanced page list';
  $handler->display->display_options['menu']['description'] = 'Advanced Page List';
  $handler->display->display_options['menu']['weight'] = '0';
  $handler->display->display_options['menu']['context'] = 0;
  $handler->display->display_options['tab_options']['type'] = 'normal';
  $handler->display->display_options['tab_options']['title'] = 'Advanced page';
  $handler->display->display_options['tab_options']['description'] = 'Manage advanced page related settings.';
  $handler->display->display_options['tab_options']['weight'] = '0';
  $handler->display->display_options['tab_options']['name'] = 'management';
  $export['advanced_page_list'] = $view;

  return $export;
}
