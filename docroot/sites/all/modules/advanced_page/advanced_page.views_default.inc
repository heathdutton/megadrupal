/**
 * Implements hook_views_default_views().
 */
function advanced_page_views_default_views() {
  $export = array();

  $view = new view();
  $view->name = 'advanced_page_list';
  $view->description = 'List all avanced page contents.';
  $view->tag = 'default';
  $view->base_table = 'node';
  $view->human_name = 'advanced_page_list';
  $view->core = 7;
  $view->api_version = '3.0';
  $view->disabled = FALSE; /* Edit this to true to make a default view disabled initially */

  /* Display: Master */
  $handler = $view->new_display('default', 'Master', 'default');
