<?php


/**
 * Implements hook_injapi_image_default_styles()
 */
function injapi_example_injapi_image_default_styles($api) {

  $api->style('injapi_example_scale_50')->scale(50, 50);
  $api->style('injapi_example_crop_100_gray')->crop(100, 100)->grayscale();
}


/**
 * Implements hook_injapi_menu()
 */
function injapi_example_injapi_menu($api) {

  return;

  $api->item('admin/content/comment', MENU_LOCAL_TASK | MENU_NORMAL_ITEM)
    ->title('Comments')
    ->description('List and edit site comments and the comment approval queue')
    ->pageCallback('comment_admin', array(), 'comment.admin.inc')
    ->permission('administer comments');

  $api->defaultLocalTask('admin/content/comment/new')
    ->title('Published comments');

  $api->localTask('admin/content/comment/approval')
    ->title('Unapproved comments')
    ->titleCallback('comment_count_unpublished')
    ->pageCallback('comment_admin', array('approval'))
    ->permission('administer comments');

  $api->item('comment/%')
    ->title('Comment permalink')
    ->pageCallback('comment_permalink', array(1))
    ->permission('access comments');

  $api->defaultLocalTask('comment/%/view')
    ->title('View comment');

  $api->localTask('comment/%comment/edit')
    ->title('Edit')
    ->pageCallback('comment_edit_page', array(1))
    ->accessCallback('comment_access', array('edit', 1));

  $api->item('comment/%/approve')
    ->title('Approve')
    ->pageCallback('comment_approve', array(1), 'comment.pages.inc')
    ->permission('administer comments')
    ->weight(1);

  $api->localTask('comment/%/delete')
    ->title('Delete')
    ->pageCallback('comment_confirm_delete_page', array(1), 'comment.admin.inc')
    ->permission('administer comments')
    ->weight(2);

  $api->item('comment/reply/%node')
    ->title('Add new comment')
    ->pageCallback('comment_reply', array(2), 'comment.pages.inc')
    ->accessCallback('node_access', array('view', 2));
}
