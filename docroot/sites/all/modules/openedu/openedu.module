/**
 * Implements hook_help().
 */
function openedu_help($path, $arg) {
  switch ($path) {
    // Main module help for the openedu module
    case 'admin/help/openedu#general':
      return '<p>' . t('OpenEDU') . '</p>';
  }
}




/**
 * Implements hook_menu().
 */
function openedu_menu() {

  $items = array();

  $items['admin/config/openedu'] = array(
    'title' => 'OpenEDU Configuration',
    'description' => 'Default configuration items for the OpenEDU Suite',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('openedu_admin_config_form'),
    'file' => 'inc/openedu.admin.inc',
    'access arguments' => array('administer openedu'),
  );

  return $items;
}


/**
 * Implementation of hook_perm().
 */
function syndication_client_perm() {
  return array('administer openedu');
}
