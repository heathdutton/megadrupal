<?php

/**
 * Implements hook_theme().
 */
function nudity_theme($existing, $type, $theme, $path) {
  return array(
    'field_naked' => array(
      'theme path' => drupal_get_path('module', 'nudity'),
      'function' => 'theme_field_naked',
    ) + $existing['field'],
  );
}

/**
 * Implements hook_preprocess_field().
 */
function nudity_preprocess_field(&$variables) {
  if ($variables['element']['#field_name'] == 'body') {
    array_unshift($variables['theme_hook_suggestions'], 'field_naked');
  }
}

/**
 * Renders a naked field with no wrappers or labels.
 * @see theme_field().
 */
function theme_field_naked($variables) {
  $output = '';
  foreach ($variables['items'] as $delta => $item) {
    $output .= drupal_render($item);
  }
  return $output;
}
