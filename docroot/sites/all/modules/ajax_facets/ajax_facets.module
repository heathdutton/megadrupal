/**
 * Implements hook_views_pre_render().
 */
function ajax_facets_views_pre_render(&$view) {
  // Save settings of rendered views, to use them in request for AJAX facets.
  $setting = array(
    'facetapi' => array(
      'view_args' => array(
        "$view->name:$view->current_display" => $view->args,
      ),
      'exposed_input' => array(
        "$view->name:$view->current_display" => $view->exposed_raw_input,
      ),
      'view_path' => array(
        "$view->name:$view->current_display" => $view->get_path(),
      ),
    )
  );
  drupal_add_js($setting, 'setting');
}
