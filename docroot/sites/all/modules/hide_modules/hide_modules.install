<?php
/**
 * @file
 * Contains install and update functions for Hide Modules.
 */

/**
 * Implements hook_install().
 */
function hide_modules_install() {
  $t = get_t();
  drupal_set_message($t('Hide Modules settings are available under !link',
    array('!link' => l($t('Administer > Modules > Hide'), 'admin/modules/hide'))
  ));
}
/**
 * Implements hook_uninstall().
 */
function hide_modules_uninstall() {
  variable_del('hide_modules_list');
}
