<?php

/**
 * @file
 * TimelineJS API module
 */

/**
 * Implements hook_library().
 */
function timelinejs_api_library() {
  $libraries = [];
  $module_path = drupal_get_path('module', 'timelinejs_api');

  $libraries['timeline'] = [
    'title' => 'Timeline integration',
    'version' => '1.0.0',
    'js' => [
      "$module_path/js/timelinejs-api.js" => [],
    ],
  ];

  return $libraries;
}

/**
 * Implements hook_libraries_info().
 */
function timelinejs_api_libraries_info() {
  $libraries = [];

  $libraries['TimelineJS3'] = [
    'name' => 'TimelineJS3',
    'vendor url' => 'https://timeline.knightlab.com',
    'download url' => 'https://timeline.knightlab.com',
    'version arguments' => [
      'file' => 'compiled/js/timeline.js',
      'pattern' => '/TimelineJS - ver. ([\d.]+)/i',
      'lines' => 5,
    ],
    'files' => [
      'js' => [
        'compiled/js/timeline.js',
      ],
      'css' => [
        'compiled/css/timeline.css' => [
          'group' => CSS_THEME,
          'weight' => 100,
        ],
      ],
    ],
  ];

  return $libraries;
}
