<?php

/**
 * Implements hook_ctools_plugin_api().
 */
function ritzau_importer_ctools_plugin_api() {
  list($module, $api) = func_get_args();
  if ($module == "feeds" && $api == "feeds_importer_default") {
    return array("version" => "1");
  }
}

/**
 * Implements hook_feeds_plugins().
 */
function ritzau_importer_feeds_plugins() {
  $info = array();
  $info['RitzauWireParser'] = array(
    'name' => 'Ritzau wire parser',
    'description' => 'Reads XML from Ritzau.',
    'help' => 'Attempts to parse XML from Ritzau.',
    'handler' => array(
      'parent' => 'FeedsParser',
      'class' => 'RitzauWireParser',
      'file' => 'RitzauWireParser.inc',
      'path' => drupal_get_path('module', 'ritzau_importer') . '/plugins',
    ),
  );
  $info['RitzauWireProcessor'] = array(
    'name' => 'Ritzau wire processor',
    'description' => 'Create, update and unpublish wire nodes.',
    'help' => 'Create, update and unpublish nodes from parsed content.',
    'handler' => array(
      'parent' => 'FeedsNodeProcessor',
      'class' => 'RitzauWireProcessor',
      'file' => 'RitzauWireProcessor.inc',
      'path' => drupal_get_path('module', 'ritzau_importer') . '/plugins',
    ),
  );
  return $info;
}

