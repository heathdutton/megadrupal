<?php
/**
 * @file
 */

define('MICROSERVICES_CRON', 'cron');
define('MICROSERVICES_CRON_EVENT_CRON', 'cron');
define('MICROSERVICES_CRON_EVENT_TICK', 'tick');

/**
 * Implements hook_hook_info();
 */
function microservices_cron_hook_info() {
  return array(
    'microservices_cron_info' => array(
      'group' => 'microservices',
    ),
  );
}

/*
 * Implements hook_microservices_cron_info().
 */
function microservices_cron_microservices_cron_info() {
  return array(
    'yearly' => '0 0 1 1 *',
    'monthly' => '0 0 1 * *',
    'weekly' => '0 0 * * 0',
    'daily' => '0 0 * * *',
    'hourly' => '0 * * * *',
    'every30m' => '*/30 * * * *',
    'every20m' => '*/20 * * * *',
    'every15m' => '*/15 * * * *',
    'every10m' => '*/10 * * * *',
    'every5m' => '*/5 * * * *',
    'every1m' => '* * * * *',
  );
}

/**
 * @return array
 */
function microservices_cron_info() {
  $cache = &drupal_static(__FUNCTION__);

  if (!isset($cache)) {
    $cache = module_invoke_all('microservices_cron_info');
    drupal_alter('microservices_cron_info', $cache);
  }

  return $cache;
}
