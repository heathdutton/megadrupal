<?php

/**
 * @file
 * Used to allow users to cancel account without filling the profile form.
 */

/**
 * Implements hook_help().
 */
function cancel_account_directly_help($path, $arg) {
  switch ($path) {
    case 'admin/help#cancel_account_directly':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Helps user to cancel an account without filling the required fields of profile form.') . '</p>';
      $output .= '<p>' . t('Any user who has "cancel account" or "adminster users" permissions can view Cancel Account link in the profile edit form.') . '</p>';
      $output .= '<p>' . t('When user clicks the cancel account link he is not required to fill all the required fields which are empty.') . '</p>';
      $output .= '<p>' . t('In site development when user profile fields are added or changed from non required fields to required fields, all users are not required to fill the profile fields to cancel account.') . '</p>';
      return $output;
  }
}

/**
 * Implements hook_form_FORM_ID_alter() for user_profile_form().
 */
function cancel_account_directly_form_user_profile_form_alter(&$form, &$form_state, $form_id) {
  if (user_access('cancel account') || user_access('administer users')) {
    unset($form['actions']['cancel']);
    $form['actions']['cancel'] = array(
      '#markup' => l(t('Cancel Account'), 'user/' . $form['#user']->uid . '/cancel'),
    );
  }
}
