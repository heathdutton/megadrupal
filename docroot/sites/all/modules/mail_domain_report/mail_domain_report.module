<?php

/**
 * Implements hook_permission().
 *
 * @return array
 */
function mail_domain_report_permission() {
  return array(
    'view mail domain report' => array(
      'title' => t('View mail domain report'),
      'description' => t('Report contains statistics about used mail domains.'),
    ),
  );
}

/**
 * Implements hook_views_api().
 *
 * @return array
 */
function mail_domain_report_views_api() {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'mail_domain_report') . '/views',
  );
}
