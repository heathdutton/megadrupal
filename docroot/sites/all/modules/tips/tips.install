/**
 * Implements hook_enable().
 */
function tips_enable() {
  $format_exists = (bool) db_query_range('SELECT 1 FROM {filter_format} WHERE name = :name', 0, 1, array(
    ':name' => 'Tips'))->fetchField();

  if (!$format_exists) {
    $tips_format = array(
      'format' => 'tips',
      'name' => 'Tips',
      'weight' => 15,
      'filters' => array(
        'tips_tokens' => array(
          'weight' => 0,
          'status' => 1,
        ),
      ),
    );
    $tips_format = (object) $tips_format;
    filter_format_save($tips_format);
  }
}

/**
 * Implements hook_uninstall().
 */
function tips_uninstall() {
  // Common.
  drupal_uninstall_schema('tips_registry');
  drupal_uninstall_schema('tips_settings_registry');
  drupal_uninstall_schema('tips_content_registry');

  // Cache.
  drupal_uninstall_schema('cache_tips');
}

/**
 * Implements hook_schema().
 */
