  // Cache tables, @todo, get_t for description.
  $schema['cache_tips'] = drupal_get_schema_unprocessed('system', 'cache');
  $schema['cache_tips']['description'] = 'Cache table to store TIPS.';

  return $schema;
}

/**
 * Allow site-builder to specify the pages on which element selectors will be active.
 */
function tips_update_7001() {

  db_add_field('tips_registry', 'pages', array(
    'description' => 'Activate on pages',
    'type' => 'varchar',
    'length' => 256,
    'not null' => FALSE,
    'default' => '')
  );
  return t("Added 'pages' column to tips_registry table.");
}