/**
 * Implements hook_init().
 *
 * Adds ckeditor override css to the page so you can override ckeditor styling
 */
function sprout_wysiwyg_init() {
  drupal_add_css(drupal_get_path('module', 'sprout_wysiwyg') . '/css/sprout_wysiwyg.css');
}

/**
 * Implements hook_wysiwyg_editor_settings_alter()
 */
function sprout_wysiwyg_ckeditor_settings_alter(&$settings, $context) {
  // The $context variable contains information about the wysiwyg profile we're using
  // In this case we just need to check that the editor being used is ckeditor
  // Specify the custom config file that defines our font styles
  $settings['customConfig'] = base_path() . drupal_get_path('module', 'sprout_wysiwyg') .
                              '/scripts/sprout_wysiwyg.js';

  // We are also going to specify a custom body id and class
  $settings['bodyId'] = 'sprout_wysiwyg';
  $settings['bodyClass'] = 'sprout_wysiwyg';
  $settings['height'] = 300;
}
