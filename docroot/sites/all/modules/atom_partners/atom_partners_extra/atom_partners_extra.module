<?php

/*
 * Implements hook_block_info()
 */
function atom_partners_extra_block_info() {
  $blocks['partner_info'] = array(
    'info' => t('Partner Info'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  return $blocks;
} // atom_partners_extra_block_info()

/* 
 * Implements hook_block_configure()
 */
function atom_partners_extra_block_configure($delta = '') {
  $form = array();

  if ($delta == 'partner_info') {
    $text = variable_get('atom_partners_extra_partner_text', array('value' => '', 'format' => 'full_html'));
    $form['partner_text'] = array(
      '#type' => 'text_format',
      '#title' => t('Partner Text'),
      '#default_value' => $text['value'],
      '#format' => $text['format'],
      '#required' => TRUE,
    );
  } // if partner_info

  return $form;
} // atom_partners_extra_block_configure()

/*
 * Implements hook_block_save()
 */
function atom_partners_extra_block_save($delta = '', $edit = array()) {
  if ($delta == 'partner_info') {
    variable_set('atom_partners_extra_partner_text', $edit['partner_text']);
  } // if partner_info
} // atom_partners_extra_block_save()

/*
 * Implements hook_block_view()
 */
function atom_partners_extra_block_view($delta = '') {
  $block = array();

  if ($delta == 'partner_info') {
    $text = variable_get('atom_partners_extra_partner_text', array('value' => '', 'format' => 'full_html'));
    $block['content'] = '<div class="partner-text">' . check_markup($text['value'], $text['format']) . '</div>';
  } // if partner_info

  return $block;
} // atom_partners_extra_block_view()
