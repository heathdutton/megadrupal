<?php
/**
 * @file
 * Code for the Sprout Core feature.
 */

include_once 'sprout_core.features.inc';

function sprout_core_enable() {
  // set various system variables
  variable_set('pathauto_node_pattern', '[node:content-type]/[node:title]');
  variable_set('pathauto_node_page_pattern', '[node:title]');
  variable_set('pathauto_node_webform_pattern', '[node:title]');
  variable_set('pathauto_transliterate', '1');
  variable_set('pathauto_punctuation_underscore', '1');

  // date settings
  variable_set('date_first_day', '1');
  variable_set('configurable_timezones', '0');
  variable_set('date_format_long', '');
  variable_set('date_format_medium', "D, Y-m-d H:i");
  variable_set('date_format_short', "Y-m-d H:i");

  // search settings
  $search_settings = array(
    'node' => 'node',
    'advanced_help' => 0,
    'user' => 0,
  );
  variable_set('search_active_modules', $search_settings);

  // webforms settings
  variable_set('webform_csv_delimiter', ',');
}