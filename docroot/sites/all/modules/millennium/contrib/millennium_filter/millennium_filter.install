<?php
/**
 * @file
 * Install, update and uninstall functions for the millennium_filter module.
 *
 */


/**
 * @todo Please document this function.
 * @see http://drupal.org/node/1354
 */
function millennium_filter_uninstall() {
  // Remove variables
  db_delete('variable')
    ->condition('name', 'millennium_filter_%', 'LIKE')
    ->execute();
  cache_clear_all('variables', 'cache');
}
