<?php
/**
 * @file
 * Modules Collapse module logic.
 */

/**
 * Implements hook_permission().
 */
function modules_collapse_permission() {
  return array(
    'administer modules collapse' => array(
      'title' => t('Administer Modules Collapse'),
      'description' => t('Administer the settings for the modules collapse feature.'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function modules_collapse_menu() {
  $items['admin/modules/collapse'] = array(
    'title' => 'Collapse Settings',
    'description' => t('Administer the settings for the modules collapse feature.'),
    'page callback' => 'drupal_get_form',
    'page arguments' => array('modules_collapse_settings'),
    'access arguments' => array('administer modules collapse'),
    'type' => MENU_LOCAL_TASK,
    'file' => 'includes/modules_collapse.admin.settings.inc',
    'weight' => 99,
  );

  return $items;
}

/**
 * Implements hook_form_alter().
 */
function modules_collapse_form_alter(&$form, &$form_state, $form_id) {
  if ($form_id == 'system_modules' && variable_get('modules_collapse_collapse_modules', 1)) {
    foreach ($form['modules'] as $key => $module) {
      if ($key != '#tree') {
        $form['modules'][$key]['#collapsed'] = TRUE;
      }
    }
  }
}
