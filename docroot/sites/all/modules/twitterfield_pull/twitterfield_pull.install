/**
 * Change twitterfield_pull_tweet table user_id column type from int to bigint,
 * to store large Twitter numeric user IDs.
 */
function twitterfield_pull_update_7200(&$sandbox) {

  db_change_field('twitterfield_pull_tweet', 'user_id', 'user_id', array(
    'description' => 'User ID.',
    'type' => 'int',
    'size' => 'big',
    'unsigned' => TRUE,
    // Hint for number of digits to show for zerofill, not the max value.
    'length' => 20,
  ));
}

