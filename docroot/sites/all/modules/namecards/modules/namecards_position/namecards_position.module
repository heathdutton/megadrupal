/**
 * Implements hook_node_access().
 */
function namecards_position_node_access($node, $op, $account) {
  // Set default access behaviour.
  $access = NODE_ACCESS_IGNORE;
  // Get node type.  $node can either be a node object or a content type string.
  $node_type = (is_object($node)) ? $node->type : $node;
  if ($node_type == 'namecards_position') {
    switch ($op) {
      case 'create':
          // Allow if user's role has 'create position' permission.
          if (user_access('create position', $account)) {
          $access = NODE_ACCESS_ALLOW;
        }
      case 'update':
        // Allow if user's role has 'edit own position' permission and user is
        // the author; or if the user's role has 'edit any position' permission.
        if (user_access('edit own position', $account) && $account->uid == $node->uid ||
          user_access('edit any position', $account)) {
          $access = NODE_ACCESS_ALLOW;
        }
      case 'delete':
        // Allow if user's role has 'delete own position' permission and user is
        // the author; or if the user's role has 'delete any position' permission.
        if (user_access('delete own position', $account) && $account->uid == $node->uid ||
          user_access('delete any position', $account)) {
          $access = NODE_ACCESS_ALLOW;
        }
    }
  return $access;
  }
}

/**
 * Implement hook_form()
