/**
 * Implements hook_field_formatter_view()
 */
function namecards_fax_field_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
  foreach ($items as $delta => $item) {
    $element[$delta] = namecards_fax_field_format_field($item);
  }
  return $element;
}

