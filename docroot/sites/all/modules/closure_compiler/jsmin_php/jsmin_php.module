<?php

/**
 * @file
 * JSMin-PHP primary module file.
 *
 * Contains the bare minimum of module functions - only hooks.
 */

/**
 * Implements hook_closure_compiler_service().
 */
function jsmin_php_closure_compiler_service() {
  return array('jsmin_php' => "JSMin-PHP");
}

/**
 * Implements hook_libraries_info().
 */
function jsmin_php_libraries_info() {
  $libraries = array();

  // Unfortunately the jsmin-php version is not detectable, and so we set
  // it to 1.0.
  $libraries['jsmin-php'] = array(
    'name' => 'JSMin-PHP',
    'vendor url' => 'https://github.com/eriknyk/jsmin-php',
    'download url' => 'https://raw.github.com/eriknyk/jsmin-php/master/jsmin.php',
    'files' => array(
      'php' => array('jsmin.php'),
    ),
    'version' => '1.0',
  );

  return $libraries;
}
