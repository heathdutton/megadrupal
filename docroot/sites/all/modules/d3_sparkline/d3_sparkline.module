<?php

/**
 * Implements hook_libraries_info_file_paths().
 */
function d3_sparkline_libraries_info_file_paths() {
  // This module's libraries full path.
  $libraries_path = drupal_get_path('module', 'd3_sparkline') . '/libraries/';
  $paths = array();

  // Add this folder for the libraries module to check when it checks
  // specifically for info files.
  foreach (_d3_sparkline_default_libraries() as $type) {
    $paths[] = $libraries_path . $type;
  }
  return $paths;
}

/**
 * Implements hook_libraries_info_alter().
 */
function d3_sparkline_libraries_info_alter(&$libraries) {
  // By default, the libraries module only checks the libraries folders. We
  // need to add this module's libraries path to the library info.
  $path = drupal_get_path('module', 'd3_sparkline') . '/libraries/';
  foreach (_d3_sparkline_default_libraries() as $library_name) {
    // Change library path to path/to/module/d3/libraries
    $libraries[$library_name]['library path'] = $path . $library_name;
  }
}

/**
 * Implements hook_libraries_paths().
 */
function d3_sparkline_libraries_paths() {
  // Taken from the Libraries test module, which needs to specify the path to
  // the test library.
  $chart_path = array(drupal_get_path('module', 'libraries') . '/d3.bar');

  // Add these to the search directories for libraries.
  foreach (_d3_sparkline_default_libraries() as $chart_lib) {
    $paths[] = $chart_path . $chart_lib;
  }

  return $chart_path;
}

/**
 * Helper callback to return all sample libraries located inside this module.
 */
function _d3_sparkline_default_libraries() {
  return array(
    'd3.sparkline',
  );
}
