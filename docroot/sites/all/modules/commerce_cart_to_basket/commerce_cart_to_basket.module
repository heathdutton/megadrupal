<?php

/**
 * Implements hook_menu_alter().
 */
function commerce_cart_to_basket_menu_alter(&$items) {
  // Make the /cart page provided by commerce_cart also available at /basket.
  $items['basket'] = $items['cart'];
}

function commerce_cart_to_basket_url_outbound_alter(&$path, &$options, $original_path) {
  // Change module-generated links from /cart to /basket.
  if ($path == 'cart' or $path == 'cart/my') {
    $path = 'basket';
  }
}
