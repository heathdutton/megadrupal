<?php

/**
 * Implements hook_form_FORM_ID_ater().
 */
function openacadept_core_form_user_profile_form_alter(&$form, &$form_state, $form_id) {
  $form['#after_build'][] = '_openacadept_core_profile_change_weight';
}


function _openacadept_core_profile_change_weight($form, &$form_state) {
  $form['picture']['#weight'] = 0;
  $form['timezone']['#weight'] = 1;
  $form['contact']['#weight'] = 1;
  $form['overlay_control']['#weight'] = 1;
  $form['timezone']['#weight'] = 1;
  return $form;
}


/**
 * Implements hook_form_FORM_ID_ater().
 */
function openacadept_core_form_user_register_form_alter(&$form, &$form_state, $form_id) {
  $form['#after_build'][] = '_openacadept_core_register_change_weight';
}


function _openacadept_core_register_change_weight($form, &$form_state) {
  $form['apply_for_role']['#weight'] = 90;
  $form['terms_of_use']['#weight'] = 91;
  return $form;
}


/**
 * Implements hook_menu_block_blocks().
 */
function openacadept_core_menu_block_blocks() {
  // The array key is the block delta used by menu block.
  return array(
    'openacadept_core-1' => array(
      'menu_name'   => 'main-menu',
      'parent_mlid' => 0,
      'title_link'  => 0,
      'admin_title' => 'Footer Menu Block',
      'level'       => 1,
      'follow'      => 0,
      'depth'       => 0,
      'expanded'    => 1,
      'sort'        => 0,
    ),
  );
}

