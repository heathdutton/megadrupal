<?php
/**
 * @file
 * Module file for extra_tabs_menu_context.
 */

/**
 * Implements hook_context_registry().
 */
function extra_tabs_menu_context_context_registry() {
  return array(
    'reactions' => array(
      'extra_tabs_menu_reaction' => array(
        'title' => t('Extra Tabs Menu'),
        'plugin' => 'extra_tabs_menu_reaction',
      ),
    ),
  );
}

/**
 * Implements hook_context_plugins().
 */
function extra_tabs_menu_context_context_plugins() {
  return array(
    'extra_tabs_menu_reaction' => array(
      'handler' => array(
        'path' => drupal_get_path('module', 'extra_tabs_menu_context') . '/plugins',
        'file' => 'extra_tabs_menu_reaction.inc',
        'class' => 'ExtraTabsMenuContextReaction',
        'parent' => 'context_reaction',
      ),
    ),
  );
}

/**
 * Implements hook_extra_tabs_menu().
 */
function extra_tabs_menu_context_extra_tabs_menu() {
  if ($plugin = context_get_plugin('reaction', 'extra_tabs_menu_reaction')) {
    return $plugin->execute();
  }
}
