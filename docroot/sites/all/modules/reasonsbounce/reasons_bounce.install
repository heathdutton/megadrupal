<?php

/**
 * Implements hook_install(). 
 */
function reasons_bounce_uninstall() {
  drupal_load('module', 'reasons_bounce');
  $templates = reasons_bounce_get_templates();
  if ($templates) {
    foreach ($templates as $nid => $item) {
      reasons_bounce_delete_bounce_form($nid);
    }
  }    
  variable_del(BOUNCE_FORM_CONTAIN_NIDS);
}