<?php/** * Add sky fields to entity content. */function sky_field_entity_view_add_sky_fields($entity_type, $entity) {  $sky_fields = sky_field_get_sky_fields($entity_type, $entity);  if (empty($sky_fields)) {    return;  }  // Add sky fields to entity.  $entity->content['sky_fields'] = array(    '#theme_wrappers' => array('sky_field_fields'),  );  foreach ($sky_fields as $field) {    $field = sky_field_sky_field_formatter($field);    $entity->content['sky_fields'][] = array(      '#theme' => 'sky_field_field',      '#sky_field' => $field,    );  }}