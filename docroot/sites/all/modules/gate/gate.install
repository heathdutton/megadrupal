<?php

/**
 * @file
 * Install, update and uninstall functions for the kanban module.
 */

/**
 * Implements hook_uninstall().
 */
function gate_uninstall() {
  include_once drupal_get_path('module', 'gate') . '/gate.drush.inc';
  $drush_commands = array_keys(_gate_drush_openclose_arguments());

  foreach ($drush_commands as $command) {
    $variablename = "gate_" . str_replace("-", "_", $command);
    variable_del($variablename);
  }
}

/**
