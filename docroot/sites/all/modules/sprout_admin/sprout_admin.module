<?php
/**
 * @file
 * Code for the Sprout Admin module.
 */

include_once 'sprout_admin.features.inc';

/**
 * Implements hook_init().
 *
 * Adds ckeditor override css to the page so you can override ckeditor styling
 */
function sprout_admin_init() {
  if (path_is_admin(current_path())) {
    drupal_add_css(drupal_get_path('module', 'sprout_admin') . '/css/sprout_admin.css');
  }
}

function sprout_admin_enable() {
  // scheduler settings
  variable_set('scheduler_field_type', 'date_popup');

  // views basic ui bits
  $views_basic_ui_settings = array(
    'header' => 'header',
    'footer' => 'footer',
    'title' => 'title',
    'empty' => 'empty',
    'pager_options' => 'pager_options',
  );
  variable_set('views_ui_basic_fields', $views_basic_ui_settings);
}

/**
 * Implementation of hook_ctools_plugin_directory().
 *
 * It simply tells panels where to find the .inc files that define various
 * types of plugins: layouts, styles, args, contexts, content_types.
 *
 */
function sprout_admin_ctools_plugin_directory($owner, $plugin_type) {
  // We're just providing layout plugins.
  if ($owner == 'panels' && $plugin_type == 'layouts') {
    return "plugins/$plugin_type";
  }
}
