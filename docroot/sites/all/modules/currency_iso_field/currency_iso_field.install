/**
 * @file
 * Install, uninstall and update functions for the currency iso field module.
 */

/**
 * Implements hook_field_schema().
 */
function currency_iso_field_field_schema($field) {
  return array(
    'columns' => array(
      'currency' => array(
        'type' => 'varchar',
        'length' => 128,
        'not null' => FALSE,
      ),
    ),
  );
}
