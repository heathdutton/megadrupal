<?php
/**
 * @file
 * Provides installation functions for the auto_retina module.
 *
 * @ingroup auto_retina
 * @{
 */

/**
 * Implements hook_uninstall().
 */
function auto_retina_uninstall() {
  $vars = db_select('variable', 'v')
    ->fields('v', array('name'))
    ->condition('name', 'auto_retina%', 'LIKE')
    ->execute()->fetchCol();
  foreach ($vars as $var) {
    variable_del($var);
  }
}
