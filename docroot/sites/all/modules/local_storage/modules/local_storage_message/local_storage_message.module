/**
 * @file Main file of the module.
 */

/**
 * Implements hook_local_storage_attach_alter().
 */
function local_storage_message_local_storage_attach_alter(&$element, $settings) {
  $path = drupal_get_path('module', 'local_storage_message');

  $element['#attached']['js'][] = array(
    'type' => 'file',
    'data' => $path . '/js/local-storage-message.plugin.js',
  );

  $element['#attached']['js'][] = array(
    'type' => 'file',
    'data' => $path . '/js/local-storage-message.js',
    'weight' => 6.01,
  );
}

/**
 * Implements hook_local_storage_plugins().
 */
function local_storage_message_local_storage_plugins() {
  return array(
    'local_storage_message' => array(
      'title' => t('Local Storage Message Plugin'),
      'elements' => local_storage_get_element_types(),
    ),
  );
}
