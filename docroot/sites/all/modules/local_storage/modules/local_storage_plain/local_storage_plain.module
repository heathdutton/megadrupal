/**
 * Implements hook_local_storage_attach_alter().
 */
function local_storage_plain_local_storage_attach_alter(&$element, $settings) {
  $path = drupal_get_path('module', 'local_storage_plain');
  $element['#attached']['css'][] = $path . '/css/local-storage-plain.css';

  $element['#attached']['js'][] = array(
    'type' => 'file',
    'data' => $path . '/js/local-storage-plain.plugin.js',
  );

  $element['#attached']['js'][] = array(
    'type' => 'file',
    'data' => $path . '/js/local-storage-plain.js',
    'weight' => 6.01,
  );
}

/**
 * Implements hook_local_storage_plugins().
 */
function local_storage_plain_local_storage_plugins() {
  return array(
    'local_storage_plain' => array(
      'title' => t('Local Storage Plain Plugin'),
      'elements' => local_storage_get_element_types(),
    ),
  );
}
