/**
 * Implements hook_local_storage_attach_alter().
 */
function local_storage_wysiwyg_local_storage_attach_alter(&$element) {
  $path = drupal_get_path('module', 'local_storage_wysiwyg');
  $element['#attached']['css'][] = $path . '/css/local-storage-wysiwyg.css';

  $element['#attached']['js'][] = array(
    'type' => 'file',
    'data' => $path . '/js/local-storage-wysiwyg.plugin.js',
  );

  $element['#attached']['js'][] = array(
    'type' => 'file',
    'data' => $path . '/js/local-storage-wysiwyg.js',
    'weight' => 6.02,
  );
}

/**
 * Implements hook_wysiwyg_include_directory().
 */
function local_storage_wysiwyg_wysiwyg_include_directory($type) {
  if ($type == 'plugins') {
    return $type;
  }
  return FALSE;
}
