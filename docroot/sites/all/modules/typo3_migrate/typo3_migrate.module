<?php
define('TYPO3_DATABASE_NAME', variable_get('typo3_database', 'typo3'));

/**
 * Implements hook_migrate_api().
 * For migration classes to be recognized by the Migrate module.
 */
function typo3_migrate_migrate_api() {
  $api = array(
    'api' => 2,
  );
  return $api;
}

/**
 * Implements hook_menu().
 */
function typo3_migrate_menu() {
  $items = array();

  $items['admin/settings/typo3'] = array(
    'title' => 'Typo3 migration - Database settings',
    'description' => 'Get the database name.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('typo3_migrate_config'),
    'access arguments' => array('administer TYPO3 migration'),
    'type'             => MENU_NORMAL_ITEM,
  );
  $items['admin/settings/typo3/db'] = array(
    'title' => 'Typo3 migration - Database settings',
    'description' => 'Get the database name.',
    'access arguments' => array('administer TYPO3 migration'),
    'type'             => MENU_DEFAULT_LOCAL_TASK,
  );

  return $items;
}

/**
 * Implements hook_permission().
 */
function typo3_migrate_permission() {
  return array(
    'administer TYPO3 migration' => array(
      'title' => t('administer TYPO3 migration'),
      'description' => t('Allow users to configure the TYPO3 migration settings'),
    )
  );
}

/**
 * Form for getting the Typo3 database name.
 */
function typo3_migrate_config($form_state) {

  $form['typo3_database'] = array(
    '#type' => 'textfield',
    '#title' => t('Database Name'),
    '#description' => t('The Typo3 db must be accessible by the drupal db user and must reside on the same db server.'),
    '#default_value' => variable_get('typo3_database', 'typo3_DB'),
    '#required' => TRUE
  );
  return system_settings_form($form);
}

