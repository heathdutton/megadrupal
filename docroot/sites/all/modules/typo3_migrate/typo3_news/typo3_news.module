<?php

/**
 * Implements hook_migrate_api().
 * For migration classes to be recognized by the Migrate module.
 */
function typo3_news_migrate_api() {
  $api = array(
    'api' => 2,
  );
  return $api;
}

/**
 * Implements hook_menu().
 */
function typo3_news_menu() {
  $items = array();

  $items['admin/settings/typo3/news'] = array(
    'title' => 'Typo3 news settings',
    'description' => 'Set the news folders.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('typo3_news_get_pids'),
    'access arguments' => array('administer TYPO3 migration'),
    'type'             => MENU_LOCAL_TASK,
  );

  return $items;
}


/**
 * Form for getting typo3 news folder ids.
 */
function typo3_news_get_pids($form_state) {

  $form['typo3_pids'] = array(
    '#type' => 'textfield',
    '#title' => t('News Folders'),
    '#description' => t('Enter the PIDs of the news folders to be migrated in comma separated format. By default all news will be migrated.'),
    '#default_value' => variable_get('typo3_pids', '0'),
    '#required' => FALSE
  );
  return system_settings_form($form);
}
