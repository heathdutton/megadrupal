<?php

/**
 * Implement replicate_entity_alter().
 */
function replicate_eck_replicate_entity_alter(&$clone, $entity_type, $entity) {
  $ecks = EntityType::loadAll();
  if (! isset($ecks[$entity_type])) {
    return;
  }

  global $user;

  $clone->id = NULL;
  $clone->uid = $user->uid;
  $clone->created = NULL;
  $clone->changed = NULL;
  $clone->title .= ' ' . t('Replicated');
}
