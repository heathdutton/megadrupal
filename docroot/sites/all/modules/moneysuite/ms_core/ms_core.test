<?php
/**
 * @file
 * Test ajax example module.
 * TESTME - Test currency conversion.
 */
class MsCoreTestCase extends DrupalWebTestCase {
  protected $admin_user;
  protected $regular_user;

  public static function getInfo() {
    return array(
      'name' => 'MS Core',
      'description' => 'Checks behavior of MS Core',
      'group' => 'MoneySuite',
    );
  }

  /**
   * Enable module.
   */
  function setUp() {
    // Enable all modules needed
    parent::setUp('ms_core');

    // Create our users
    $this->admin_user = (object)$this->drupalCreateUser(array(
      'administer moneysuite settings',
      'administer moneysuite orders',
      ));
    $this->regular_user = $this->drupalCreateUser(array(
      'access moneysuite cart',
      'access checkout page',
      'edit own payment info',
      'view own moneysuite orders'
      ));
    // Login the admin
    /** @noinspection PhpParamsInspection */
    $this->drupalLogin($this->admin_user);

    // Save the settings
    $this->drupalPost('admin/moneysuite/ms_core', array(), 'Save configuration');
  }

  // TESTME - Check adding a product to the cart and viewing the cart and checkout pages

  // TESTME - Check creating an order, editing it, adding payment to it, editing payment

  /**
   * Check various pages in the module for errors
   */
  function testAdminPages() {
    // Login the admin
    $this->drupalLogin($this->admin_user);
    $this->drupalGet('admin/moneysuite/orders');
    $this->drupalGet('admin/moneysuite/orders/add');
    $this->drupalGet('admin/moneysuite/payments');
    $this->drupalGet('admin/moneysuite/payments/add');
    $this->drupalGet('admin/moneysuite');
    $this->drupalGet('admin/moneysuite/gateways');
    $this->drupalGet('admin/moneysuite/reports');
    $this->drupalGet('admin/moneysuite/ms_core');
  }

}
