  if (!empty($node->ms_ppv_use_override)) {
    ms_ppv_insert_node_price($node->vid, $node->nid, $node->ms_ppv_price, $node->ms_ppv_expiration_string, $node->ms_ppv_protected_content_message, $node->ms_ppv_protected_content_message_format, $node->ms_ppv_allow_multiple, $node->ms_ppv_stock, $node->ms_ppv_out_of_stock_message);
  }
  else {
