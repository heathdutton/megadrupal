#function to flatten text_format fields in ppv formatter
function _text_format_validate($element, &$form_state) {
	if($element['#type']=='text_format') {
		if (isset($form_state['values']['ms_ppv_protected_content_message'])) {
				$form_state['values']['ms_ppv_protected_content_message_format']=$form_state['values']['ms_ppv_protected_content_message']['format'];
				$form_state['values']['ms_ppv_protected_content_message']=$form_state['values']['ms_ppv_protected_content_message']['value'];
		}
		else {
			$field_name=$element['#parents'][1];
			if (isset($form_state['values']['fields'][$element['#parents'][1]]['settings_edit_form']['settings']['message'])) {
				$values = $form_state['values']['fields'][$field_name]['settings_edit_form']['settings'];
				$form_state['values']['fields'][$field_name]['settings_edit_form']['settings']['format'] = $values['message']['format'];
				$form_state['values']['fields'][$field_name]['settings_edit_form']['settings']['message'] = $values['message']['value'];
			}
			else
				watchdog('ms_ppv','Unknown text_format field');
		}
	}
}

