<?php

/**
 * Implements hook_menu().
 */
function privatemsg_stats_menu() {
  $items = array();

  $items['admin/reports/privatemsg-stats'] = array(
    'title' => 'Privatemsg Statistics',
    'access arguments' => array('access privatemsg_stats reports'),
    'page callback' => 'privatemsg_stats_all_page',
    'file' => 'privatemsg_stats.reports.inc',
  );

  $items['admin/reports/privatemsg-stats/all'] = array(
    'title' => 'All',
    'type' => MENU_DEFAULT_LOCAL_TASK,
    'weight' => 0,
  );

  $items['admin/reports/privatemsg-stats/year'] = array(
    'title' => 'Year',
    'page callback' => 'privatemsg_stats_year_page',
    'access arguments' => array('access privatemsg_stats reports'),
    'file' => 'privatemsg_stats.reports.inc',
    'type' => MENU_LOCAL_TASK,
    'weight' => 1,
  );

  $items['admin/reports/privatemsg-stats/month'] = array(
    'title' => 'Month',
    'page callback' => 'privatemsg_stats_month_page',
    'access arguments' => array('access privatemsg_stats reports'),
    'file' => 'privatemsg_stats.reports.inc',
    'type' => MENU_LOCAL_TASK,
    'weight' => 2,
  );

  return $items;
}

/**
 * Implements hook_permission().
 */
function privatemsg_stats_permission() {
  return array(
    'access privatemsg_stats reports' =>  array(
      'title' => t('View Privatemsg Statistics'),
    ),
  );
}

/**
 * Implement hook_theme().
 */
function privatemsg_stats_theme($existing, $type, $theme, $path) {
  return array(
    'privatemsg_stats_chart' => array(
      'variables' => array(
        'times' => array(),
        'authors' => array(),
        'messages' => array(),
      ),
    ),
  );
}

function theme_privatemsg_stats_chart($vars) {
  $chart = array(
    '#type' => 'chart',
    '#chart_type' => 'column',
    '#title' => t('Privatemsg Statistics'),
    '#legend_position' => 'bottom',
  );

  $chart['authors'] = array(
    '#type' => 'chart_data',
    '#title' => t('Authors'),
    '#data' => $vars['authors'],
  );

  $chart['messages'] = array(
    '#type' => 'chart_data',
    '#chart_type' => 'line',
    '#data' => $vars['messages'],
    '#title' => t('Messages'),
    '#target_axis' => 'yaxis2',
  );

  $chart['xaxis'] = array(
    '#type' => 'chart_xaxis',
    '#labels' => array_map('strval', $vars['times']),
  );

  $chart['yaxis'] = array(
    '#type' => 'chart_yaxis',
    '#axis_type' => 'linear',
    '#title' => t('Authors'),
  );

  $chart['yaxis2'] = array(
    '#type' => 'chart_yaxis',
    '#axis_type' => 'linear',
    '#title' => t('Messages'),
    '#opposite' => TRUE,
  );

  return drupal_render($chart);
}
