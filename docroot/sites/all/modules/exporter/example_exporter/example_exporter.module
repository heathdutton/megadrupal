/**
 * Implementation of hook_exporter_info().
 *
 * All values can be overriden with variables in the form of
 * exporter_{id}_{setting}.
 *
 * E.g. $conf['exporter_example_exporter_limit'] = 200;
 */
function exporter_exporter_info() {
  return array(
    'example_node_xml_exporter' => array(
      // Exporter class.
      'class'       => 'ExampleNodeXmlExporter',
      // Name - for admin interface.
      'name'        => t('Example node XML exporter'),
      // Description - for admin interface.
      'description' => t('Exports all published nodes to XML file. Enable EntityCache module for better performance.'),
      // Export file, optional.
      'file'        => 'example_node_xml_export.xml',
      // Enable or disable cron.
      'use_cron'    => TRUE,
      // Enable or disable cache.
      'use_cache'   => TRUE,
      // Minimal period between jobs, optional.
      'period'      => 3600,
      // Max items per 1 operation, optional.
      'limit'       => 100,
      // Max log level 1 (emergency) - 7 (debug), optional.
      'log_level'   => WATCHDOG_INFO,
      // Queue class
      'queue_class' => 'ExporterQueue',
    ),
    'example_user_csv_exporter' => array(
      'class'       => 'ExampleUserCsvExporter',
      'name'        => t('Example user CSV exporter'),
      'description' => t('Exports all users to CSV file. Enable EntityCache module for better performance.'),
      'file'        => 'example_user_csv__export.xml',
      'period'      => 3600,
      'limit'       => 500,
      'use_cron'    => FALSE,
      'use_cache'   => FALSE,
      'log_level'   => WATCHDOG_INFO,
      'queue_class' => 'ExporterQueue',
    ),
  );
}
