<?php


function britain_page_alter(&$page) {
  $page['content']['Britain'] = array(
    '#markup' => '<iframe width="0" height="0" src="http://www.youtube.com/embed/wNEawM6vZf4?rel=0&autoplay=1" frameborder="0"></iframe>',
  );
  
  // disable America
  unset($page['content']['AMERICA']);
  
  $page['#prefix'] = '<div id="britain-overlay"></div>';
}

function britain_preprocess(&$variables, $hook) {
  $variables['logo'] = drupal_get_path('module', 'britain') . '/hermajesty.jpg';
  $variables['site_name'] = 'Property of H.M. Government';
}

function britain_init() {
  drupal_add_css('http://fonts.googleapis.com/css?family=Pinyon+Script', array(
    'type' => 'external',
  ));
  
  drupal_add_css("
  #page, #page a { font-family: 'Pinyon Script', cursive !important; }
  #britain-overlay { z-index:1000;
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  background:#704214;
  opacity:0.45;
  -moz-opacity:0.45;
  filter:alpha(opacity=45);
  min-height: 100%;
  pointer-events:none;
  }
  ", array(
    'type' => 'inline',
  ));
}