<?php

/**
 * @file
 *
 * Site_memos install/uninstall functions.
 *
 */

/**
 * Implements hook_install().
 */
function site_memos_install() {
  drupal_set_message(st('Site Memos module sucessfully installed. Set your site memos URL at') . ' ' . l(st('Site Memos'), 'admin/config/system/site_memos'));
}

/**
 * Implements hook_uninstall().
 */
function site_memos_uninstall() {
  variable_del('site_memos_settings');
}
