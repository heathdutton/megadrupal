<?php

/**
 * @file
 *
 * Site_memos helps administrators save information about their site.
 *
 */

/**
 * Implements hook_help().
 */

function site_memos_help($path, $arg) {
  $output = '';
  switch ($path) {
    case "admin/help#site_memos":
      // Return a line-break version of the site README.txt
      $help_text  = file_get_contents( dirname(__FILE__) . "/README.txt");
      return '<pre>' . $help_text . '</pre>';
      break;
  }
  return $output;
}

/**
 * Implements hook_menu().
 */
function site_memos_menu() {
  $items = array();

  $items['admin/config/system/site_memos'] = array(
    'page callback' => 'drupal_get_form',
    'page arguments' => array('site_memos_configuration_form'),
    'title' => 'Site Memos',
    'description' => 'Site Memos Configuration and Access',
    'file' => 'site_memos_ui.inc',
    'access arguments' => array(t('view site reports')),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}
