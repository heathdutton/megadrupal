function cloudwords_settings_form_validate($form, &$form_state) {
 
  if ($form_state['values']['cloudwords_client_mode'] == 'stage') {
    if (!empty($form_state['values']['cloudwords_app_url']) || !empty($form_state['values']['cloudwords_api_url'])) {

      if ($form_state['values']['cloudwords_app_url'] && $form_state['values']['cloudwords_app_url']) {
        $url_app_preffix = parse_url($form_state['values']['cloudwords_app_url']);
        $url_api_preffix = parse_url($form_state['values']['cloudwords_api_url']);

        if (valid_url($form_state['values']['cloudwords_app_url'], $absolute = TRUE) === false || $url_app_preffix['scheme'] != 'https') {
          form_set_error('cloudwords_app_url', t('Application URL is not a valid one or is not starting with https'));
        }
        if (valid_url($form_state['values']['cloudwords_api_url'], $absolute = TRUE) === false || $url_api_preffix['scheme'] != 'https') {
          form_set_error('cloudwords_api_url', t('API URL is not a valid one or is not starting with https'));
        }
      }
    }
    else {
      form_set_error('cloudwords_api_url', t('Please, provide a valid API URL'));
      form_set_error('cloudwords_app_url', t('Please, provide a valid Application URL'));
    }
  }

  if(!is_numeric($form_state['values']['cloudwords_auto_import_translation_frequency'])){
    form_set_error('cloudwords_auto_import_translation_frequency', t('Must be a positive number value.  This runs on cron.'));        
  }

}

