<?php

require_once 'includes/sky_field_file.field.inc';

define('SKY_FIELD_FILE_DEFAULT_WIDTH', 400);
define('SKY_FIELD_FILEEFAULT_HEIGHT', 300);

/**
 * Implements hook_sky_field_info_alter().
 */
function sky_field_file_sky_field_info_alter(&$items) {
  $items['file'] = array(
    'type' => 'file',
    'label' => t('File'),
    'widget' => 'sky_field_file_widget',
    'formatter' => 'sky_field_file_formatter',
    'settings' => 'sky_field_file_settings',
  );
}

/**
 * Implements hook_sky_field_update_alter().
 */
function sky_field_file_sky_field_update_alter($field) {
  if (isset($field['value'])) {
    $sky_field = sky_field_load($field['id']);
    if (empty($field['value'])) {
      if ($sky_field['value']) {
        $file = file_load($sky_field['value']);
        if ($file) {
          file_usage_delete($file, 'sky_field_file', 'sky_field', $field['id']);
          file_delete($file);
        }
      }
    }
    else {
      $file_system = empty($sky_field['settings']['file_system']) ? 'public' :
        $sky_field['settings']['file_system'];
      $file = file_load($field['value']);
      if ($file) {
        $file->status = FILE_STATUS_PERMANENT;
        $destination = $file_system . '://' . $file->filename;
        $destination = file_unmanaged_move($file->uri, $destination, FILE_EXISTS_RENAME);
        $file->uri = $destination;
        file_save($file);
        file_usage_add($file, 'sky_field_file', 'sky_field', $field['id']);
      }
    }
  }
}

/**
 * Implements hook_sky_field_delete().
 */
function sky_field_file_sky_field_delete($field) {
  if (!empty($field['value'])) {
    $file = file_load($field['value']);
    file_delete($file);
  }
}