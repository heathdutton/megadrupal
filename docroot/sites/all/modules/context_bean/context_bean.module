<?php
/**
 * @file
 * Bean plugin that alters view mode per context.
 */

/**
 * Implements hook_bean_types_api_info().
 */
function context_bean_bean_types_api_info() {
  return array('api' => 4);
}

/**
 * Implements hook_bean_types().
 */
function context_bean_bean_types() {
  $plugins = array();
  $plugin_path = drupal_get_path('module', 'context_bean') . '/plugins';
  $plugins['context_bean'] = array(
    'label' => t('Context Bean'),
    'description' => t('A list of beans shown within a bean using available contexts.'),
    'handler' => array(
      'class' => 'ContextBean',
      'parent' => 'bean',
    ),
    'path' => $plugin_path,
    'file' => 'ContextBean.class.php',
  );
  return $plugins;
}

/**
 * Implements hook_theme().
 */
function context_bean_theme() {
  $items = array();
  $items['context_bean_child'] = array(
    'arguments' => array(
      'entity' => NULL,
      'view_mode'  => NULL,
      'css_class' => NULL,
    ),
    'file' => 'context_bean.theme.inc',
  );
  return $items;
}
