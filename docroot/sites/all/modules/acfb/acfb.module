<?php

/**
 * @file
 * Extends autocomplete to provide feedback when a search returns no results.
 */

/**
 * Implements hook_init().
 */
function acfb_init() {

  $path = drupal_get_path('module', 'acfb');

  drupal_add_css(  $path . '/css/acfb.css', array(
    'type' => 'file',
    'group' => CSS_SYSTEM,
    'every_page' => TRUE,
  ));

  drupal_add_js(  $path . '/js/acfb.js', array(
    'type' => 'file',
    'scope' => 'footer',
    'group' => JS_DEFAULT,
    'weight' => -100,
    'every_page' => TRUE,
  ));

}
