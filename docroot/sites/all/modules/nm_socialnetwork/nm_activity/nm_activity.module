include_once 'nm_activity.features.inc';


/**
 * Implements hook_help().
 */
function nm_activity_help($path, $arg) {
  switch ($path) {
    case 'admin/help#nm_activity':
      $content = array(
        '#group' => 'info',
        '#theme' => 'item_list',
        '#attributes' => array(
          'class' => array('nodemaker-apps-details'),
        ),
        '#items' => nm_activity_help_details(),
      );

      return render($content);
      break;
  }
}


/**
  * Content for hook_help().
  */
