<?php 

/**
 * @file
 * This file holds drupal_hook's implementations . 
 */

/**
 * Implements hook_help().
 */
function sn_quick_multisite_help($path, $arg) {
  switch ($path) {
    case "admin/help#sn_quick_multisite":
      $output = t('About') . PHP_EOL;
      $output .= t('To create multisite.') . PHP_EOL;
      $output .= t('This module helps to addup multisite enviornment without human intervention, however it requires host file to be write mode enabled.') . PHP_EOL;
      return $output;
  }
}

/**
 * Implements hook_menu().
 */
function sn_quick_multisite_menu() {
  $items = array();
  $items['admin/config/development/quick-multisite'] = array(
    'title' => 'Create quick multisite with sub domains',
    'description' => 'To create quick multisite.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('sn_quick_multisite_action_form'),
    'file' => 'sn_quick_multisite_form.inc',
    'access callback' => 'user_access',
    'access arguments' => array('administer site configuration'),
  );
  return $items;
}
