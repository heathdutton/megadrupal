<?php

/**
 * @file
 * OOP Example 08 module.
 *
 * ColorInterface.
 */

// Declare class usage.
use Drupal\oop_example_08\BusinessLogic\Common\ColorInterface;
use Drupal\oop_example_08\BusinessLogic\Vehicle\Vehicle;
use Drupal\oop_example_08\BusinessLogic\Vehicle\Car\Car;
use Drupal\oop_example_08\BusinessLogic\Vehicle\Car\Toyota\ToyotaCamry;
use Drupal\oop_example_08\BusinessLogic\Vehicle\Car\Toyota\ToyotaYaris;
use Drupal\oop_example_08\BusinessLogic\Vehicle\Motorcycle\Motorcycle;
use Drupal\oop_example_08\BusinessLogic\Fruit\Orange;
use Drupal\oop_example_08\BusinessLogic\Fruit\Banana;

/**
 * Implements hook_menu().
 */
function oop_example_08_menu() {
  return array(
    'oop-examples/oop-example-08' => array(
      'title' => '08 ColorInterface',
      'page callback' => 'oop_example_08_page',
      'access callback' => TRUE,
    ),
  );
}

/**
 * Page callback.
 */
function oop_example_08_page() {

  $v = new Vehicle();
  $message = $v->getDescription();
  $message .= '<br />';

  $v1 = new Car();
  $v1->color = t('blue');
  $message .= $v1->getDescription();
  $message .= '<br />';

  $v2 = new Motorcycle();
  $v2->color = t('green');
  $message .= $v2->getDescription();
  $message .= '<br />';

  $v3 = new ToyotaCamry();
  $v3->color = t('black');
  $message .= $v3->getDescription();
  $message .= '<br />';
  $message .= $v3->getDoorsDescription();
  $message .= '<br />';

  $v4 = new ToyotaYaris();
  $v4->color = t('yellow');
  $message .= $v4->getDescription();
  $message .= '<br />';
  $message .= $v4->getDoorsDescription();
  $message .= '<br />';

  $f1 = new Orange();
  $f2 = new Banana();

  $message .= _oop_example_08_color_output($f1);
  $message .= '<br />';
  $message .= _oop_example_08_color_output($v3);
  $message .= '<br />';
  $message .= _oop_example_08_color_output($f2);
  $message .= '<br />';

  return array(
    '#type' => 'markup',
    '#markup' => $message,
  );
}

/**
 * Returns color message.
 */
function _oop_example_08_color_output(ColorInterface $color_object) {
  $s = t('This object has color') . ' ' . $color_object->getColor() . '.';
  return $s;
}
