<?php

/**
 * @file
 * OOP Example 05 module.
 *
 * Business logic setup.
 */

// Declare class usage.
use Drupal\oop_example_05\BusinessLogic\Vehicle\Vehicle;
use Drupal\oop_example_05\BusinessLogic\Vehicle\Car\Car;
use Drupal\oop_example_05\BusinessLogic\Vehicle\Motorcycle\Motorcycle;

/**
 * Implements hook_menu().
 */
function oop_example_05_menu() {
  return array(
    'oop-examples/oop-example-05' => array(
      'title' => '05 Business logic setup',
      'page callback' => 'oop_example_05_page',
      'access callback' => TRUE,
    ),
  );
}

/**
 * Page callback.
 */
function oop_example_05_page() {

  $v = new Vehicle();
  $message = $v->getDescription();
  $message .= '<br />';

  $v1 = new Car();
  $message .= $v1->getDescription();
  $message .= '<br />';

  $v2 = new Motorcycle();
  $message .= $v2->getDescription();
  $message .= '<br />';

  return array(
    '#type' => 'markup',
    '#markup' => $message,
  );
}
