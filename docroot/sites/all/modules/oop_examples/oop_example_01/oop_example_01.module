<?php

/**
 * @file
 * OOP Example 01 module.
 *
 * Basic classes.
 */

/**
 * Implements hook_menu().
 */
function oop_example_01_menu() {
  return array(
    'oop-examples/oop-example-01' => array(
      'title' => '01 Basic classes',
      'page callback' => 'oop_example_01_page',
      'access callback' => TRUE,
    ),
  );
}

/**
 * Page callback.
 */
function oop_example_01_page() {

  $v = new oop_example_01_vehicle();
  $message = $v->getDescription();
  $message .= '<br />';

  $v1 = new oop_example_01_car();
  $message .= $v1->getDescription();
  $message .= '<br />';

  $v2 = new oop_example_01_motorcycle();
  $message .= $v2->getDescription();
  $message .= '<br />';

  return array(
    '#type' => 'markup',
    '#markup' => $message,
  );
}
