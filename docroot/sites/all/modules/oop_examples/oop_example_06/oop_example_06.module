<?php

/**
 * @file
 * OOP Example 06 module.
 *
 * Class field $color.
 */

// Declare class usage.
use Drupal\oop_example_06\BusinessLogic\Vehicle\Vehicle;
use Drupal\oop_example_06\BusinessLogic\Vehicle\Car\Car;
use Drupal\oop_example_06\BusinessLogic\Vehicle\Motorcycle\Motorcycle;

/**
 * Implements hook_menu().
 */
function oop_example_06_menu() {
  return array(
    'oop-examples/oop-example-06' => array(
      'title' => '06 Class field $color',
      'page callback' => 'oop_example_06_page',
      'access callback' => TRUE,
    ),
  );
}

/**
 * Page callback.
 */
function oop_example_06_page() {

  $v = new Vehicle();
  $message = $v->getDescription();
  $message .= '<br />';

  $v1 = new Car();
  $v1->color = t('blue');
  $message .= $v1->getDescription();
  $message .= '<br />';

  $v2 = new Motorcycle();
  $v2->color = t('green');
  $message .= $v2->getDescription();
  $message .= '<br />';

  return array(
    '#type' => 'markup',
    '#markup' => $message,
  );
}
