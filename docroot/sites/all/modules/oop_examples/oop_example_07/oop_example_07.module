<?php

/**
 * @file
 * OOP Example 07 module.
 *
 * Class field $doors.
 */

// Declare class usage.
use Drupal\oop_example_07\BusinessLogic\Vehicle\Vehicle;
use Drupal\oop_example_07\BusinessLogic\Vehicle\Car\Car;
use Drupal\oop_example_07\BusinessLogic\Vehicle\Car\Toyota\ToyotaCamry;
use Drupal\oop_example_07\BusinessLogic\Vehicle\Car\Toyota\ToyotaYaris;
use Drupal\oop_example_07\BusinessLogic\Vehicle\Motorcycle\Motorcycle;

/**
 * Implements hook_menu().
 */
function oop_example_07_menu() {
  return array(
    'oop-examples/oop-example-07' => array(
      'title' => '07 Class field $doors',
      'page callback' => 'oop_example_07_page',
      'access callback' => TRUE,
    ),
  );
}

/**
 * Page callback.
 */
function oop_example_07_page() {

  $v = new Vehicle();
  $message = $v->getDescription();
  $message .= '<br />';

  $v1 = new Car();
  $v1->color = t('blue');
  $message .= $v1->getDescription();
  $message .= '<br />';

  $v2 = new Motorcycle();
  $v2->color = t('green');
  $message .= $v2->getDescription();
  $message .= '<br />';

  $v3 = new ToyotaCamry();
  $v3->color = t('black');
  $message .= $v3->getDescription();
  $message .= '<br />';
  $message .= $v3->getDoorsDescription();
  $message .= '<br />';

  $v4 = new ToyotaYaris();
  $v4->color = t('yellow');
  $message .= $v4->getDescription();
  $message .= '<br />';
  $message .= $v4->getDoorsDescription();
  $message .= '<br />';

  return array(
    '#type' => 'markup',
    '#markup' => $message,
  );
}
