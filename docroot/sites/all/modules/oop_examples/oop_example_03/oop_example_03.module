<?php

/**
 * @file
 * OOP Example 03 module.
 *
 * PSR-0 namespaces.
 */

// Declare namespace usage with alias.
use Drupal\oop_example_03\Classes as Classes03;
// Declare class usage.
use Drupal\oop_example_03\Classes\Motorcycle;

/**
 * Implements hook_menu().
 */
function oop_example_03_menu() {
  return array(
    'oop-examples/oop-example-03' => array(
      'title' => '03 PSR-0 namespaces',
      'page callback' => 'oop_example_03_page',
      'access callback' => TRUE,
    ),
  );
}

/**
 * Page callback.
 */
function oop_example_03_page() {

  // Use full namespace name.
  $v = new \Drupal\oop_example_03\Classes\Vehicle();
  $message = $v->getDescription();
  $message .= '<br />';

  // Use namespace alias declared above.
  $v1 = new Classes03\Car();
  $message .= $v1->getDescription();
  $message .= '<br />';

  // Use class declared above.
  $v2 = new Motorcycle();
  $message .= $v2->getDescription();
  $message .= '<br />';

  return array(
    '#type' => 'markup',
    '#markup' => $message,
  );
}
