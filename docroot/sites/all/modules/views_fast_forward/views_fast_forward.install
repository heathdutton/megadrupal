<?php

/**
 * @file
 * The basic "installer".
 */

/**
 * Implements hook_install().
 */
function views_fast_forward_install() {
  $t = get_t();
  drupal_set_message($t("Views Fast Forward is installed. Choose a !view to enable and setup its fast forwad path.",
    array('!view' => l($t('view'), 'admin/structure/views'))
  ));
}
