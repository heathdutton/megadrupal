/**
 * @file
 * Provides a UI for administering AvaTax.
 */

/**
 * Implements hook_menu().
 */
function uc_avatax_ui_menu() {
  $items = array();

  $items['admin/store/settings/uc_avatax'] = array(
    'access arguments' => array('administer avatax'),
    'title' => 'AvaTax settings',
    'description' => 'Configure AvaTax',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('uc_avatax_ui_admin_settings'),
    'file' => 'includes/uc_avatax_ui.admin.inc',
  );

  return $items;
}
