<?php

/**
 * @file
 * Implementation of Feeds mapping API for Fivestar
 */

/**
 * Implements hook_feeds_processor_targets_alter().
 *
 * @see FeedsNodeProcessor::getMappingTargets().
 *
 */

function feeds_voting_mappers_feeds_processor_targets_alter(&$targets, $entity_type, $bundle_name) {
  foreach (field_info_instances($entity_type, $bundle_name) as $name => $instance) {
    $info = field_info_field($name);
    if ($info['type'] == 'fivestar') {
      $targets[$name] = array(
        'name' => t('@name', array('@name' => $instance['label'])),
        'callback' => 'feeds_voting_mappers_feeds_set_target',
        'description' => t('The rating for the @name field.', array('@name' => $instance['label'])),
        'real_target' => $name,
      );
    }
  }
}

/**
 * Implements hook_feeds_set_target().
 *
 * @param $node
 *   The target node.
 * @param $field_name
 *   The name of field on the target node to map to.
 * @param $feed_element
 *   The value to be mapped. Should be either a (flexible) date string
 *   or a FeedsDateTimeElement object.
 */

function feeds_voting_mappers_feeds_set_target($source, $entity, $target, $feed_element) {
  //$info = field_info_field($target);
  $field = isset($entity->$target) ? $entity->$target : array();
  $field['und'][0]['rating'] = $feed_element * 20; // this mapper expects input values between 0 and 5. To normalize the value we multiply it by 20.
  $entity->{$target} = $field;
}