<?php

/**
 * @file
 * Language Menu Access module (un)installation functions.
 */

/**
 * Implements hook_uninstall().
 */
function language_menu_access_uninstall() {
  $res = db_query("SELECT mlid, options FROM {menu_links}");
  foreach ($res as $row) {
    $options = unserialize($row->options);
    if (isset($options['language_menu_access'])) {
      unset($options['language_menu_access']);
      db_update('menu_links')->fields(array('options' => serialize($options)))
                             ->condition('mlid', $row->mlid)
                             ->execute();
    }
  }
}
