<?php
/**
 * @file
 * Install, update and uninstall functions for the userfly module.
 *
 */


/**
 * Implements hook_uninstall().
 */
function userfly_uninstall() {
  // Remove userfly configuration variables
  // TODO Please review the conversion of this statement to the D7 database API syntax.
  /* db_query("DELETE FROM {variable} WHERE name LIKE 'userfly_%'") */
  db_delete('variable')
  ->condition('name', 'userfly_%', 'LIKE')
  ->execute();
  cache_clear_all('variables', 'cache');
}
