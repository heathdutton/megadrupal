<?php

/**
 * @file
 * Implements displaying a "not yet published" message on unpublished nodes.
 */

/**
 * Implements hook_node_view().
 */
function not_published_node_view($node, $view_mode) {
  // If the node is not published, display a warning
  if ($node->status == 0) {
    drupal_set_message(t("This page is not yet published."), 'warning');
  }
}