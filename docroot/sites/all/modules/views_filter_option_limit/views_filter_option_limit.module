<?php

/**
 * @file views_filter_option_limit.module
 * Limits options in Views filter entityreference fields.
 */

/**
 * Implements hook_ctools_plugin_directory().
 */
function views_filter_option_limit_ctools_plugin_directory($module, $plugin) {
  if ($module == 'entityreference') {
    return "plugins/entityreference/$plugin";
  }
}
