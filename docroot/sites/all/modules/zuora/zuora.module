<?php

/**
 * @file
 * Zuora integration module file.
 */

/**
 * Procedural wrapper for Zuora API client.
 *
 * @return \ZuoraRest
 */
function zuora_rest_api_client() {
  return ZuoraRest::instance();
}

/**
 * Procedural wrapper for Zuora API GET.
 *
 * @param $uri
 *
 * @return \ZuoraResponse
 */
function zuora_rest_api_get($uri) {
  $client = zuora_rest_api_client();
  return $client->get($uri);
}

/**
 * Prcoedural wrapper for Zuora API POST.
 *
 * @param $uri
 * @param array $body
 *
 * @return \ZuoraResponse
 */
function zuora_rest_api_post($uri, array $body) {
  $client = zuora_rest_api_client();
  return $client->post($uri, $body);
}

/**
 * Prcoedural wrapper for Zuora API POST.
 *
 * @param $uri
 * @param array $body
 *
 * @return \ZuoraResponse
 */
function zuora_rest_api_put($uri, array $body) {
  $client = zuora_rest_api_client();
  return $client->put($uri, $body);
}
