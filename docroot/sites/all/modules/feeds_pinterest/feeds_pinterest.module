<?php
/**
 * @file
 * Adds a Pinterest feed processor to the Feeds module.
 */

/**
 * Implements hook_feeds_plugins().
 */
function feeds_pinterest_feeds_plugins() {
  $info = array();
  if (feeds_library_exists('simplepie.inc', 'simplepie')) {
    $info['FeedsPinterestParser'] = array(
      'name' => 'Pinterest parser',
      'description' => 'Parse Pinterest feeds.',
      'help' => 'Use <a href="http://simplepie.org">SimplePie</a> to parse Pinterest feeds.',
      'handler' => array(
        'parent' => 'FeedsSimplePieParser',
        'class' => 'FeedsPinterestParser',
        'file' => 'FeedsPinterestParser.inc',
        'path' => drupal_get_path('module', 'feeds_pinterest'),
      ),
    );
  }
  return $info;
}

/**
 * Implements hook_ctools_plugin_api().
 */
function feeds_pinterest_ctools_plugin_api($owner, $api) {
  if ($owner == 'feeds' && $api == 'plugins') {
    return array('version' => 1);
  }
}
