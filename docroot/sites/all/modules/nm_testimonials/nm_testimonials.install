<?php
/**
 * @file
 * Contains install and update functions for Nodemaker Testimonials.
 */


function nm_testimonials_install() {

  //set defaults for captcha
  $query = db_merge('captcha_points')
    ->key(array('form_id' => 'nm_testimonial_node_form'))
    ->fields(array(
        'form_id' => 'nm_testimonial_node_form',
        'captcha_type' => 'default',
    ))
    ->execute();

}