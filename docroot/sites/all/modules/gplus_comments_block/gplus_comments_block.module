<?php

/**
 * Implements hook_block_info().
 */
function gplus_comments_block_block_info() {
  $blocks = array();
  $blocks['gplus_comments'] = array(
    'info' => t('Google+ Comments Block'),
    'cache' => DRUPAL_CACHE_PER_PAGE
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function gplus_comments_block_block_view($delta='') {
  global $language;

  $block = array();
  $div = drupal_html_id('gplus_comments');
  $lang = $language->language;
  $current_url = url(current_path(), array('absolute' => TRUE));

  switch($delta) {
    case 'gplus_comments' :
      $content = _gplus_comments_block_render($div, $lang, $current_url);
      $block['subject'] = t('Comments');
      $block['content'] = drupal_render($content);
      break;
  }

  return $block;
}

/**
 *
 * Helper function
 *
 * @param $div
 * @param string $lang
 * @param $url
 * @return array
 */
function _gplus_comments_block_render($div, $lang = 'en', $url) {
  return array(
    '#markup' => "<div id='$div'></div>",
    '#attached' => array(
      'js' => array(
        array(
          'data' => array('gplus_comments_block' => array($div => array('url' => $url))),
          'type' => 'setting'
        ),
        "window.___gcfg = {lang: '$lang'};" => array('type' => 'inline'),
        'https://apis.google.com/js/plusone.js' => array('type' => 'external'),
        drupal_get_path('module', 'gplus_comments_block') . '/js/gplus_comments_block.js',
      )
    ),
  );
}

/**
 * Implement hook_theme()
 */
function gplus_comments_block_theme() {
  return array(
    'gplus_comments_count' => array(
      'variables' => array('url' => NULL),
      'template' => 'gplus_comments_count'
    ),
  );
}

/**
 * Implements hook_node_view().
 */
function gplus_comments_block_node_view($node, $view_mode) {
  $path = entity_uri('node', $node);
  $current_url = url($path['path'], array('absolute' => TRUE));

  switch ($view_mode) {
    case 'teaser':

      $links['gplus_comments_count'] = array(
        'title' => theme('gplus_comments_count', array('url' => $current_url)),
        'href' => $current_url,
        'html' => TRUE,
      );

      $node->content['links']['gplus_comments_count'] = array(
        '#theme' => 'links',
        '#links' => $links,
        '#attributes' => array(
          'class' => array('links', 'inline'),
        ),
      );

    break;
  }
}
