<?php
/**
 * @file
 * Hooks for codit Local customization.
 *
 * Any local hooks  that are not module specific can be registered here.
 */

 include_once 'codit_local_function_definitions.inc';

 /**
  * Implements hook_help().
  */
function codit_local_help($path, $arg) {
  switch ($path) {
    case 'admin/help#codit_local':
      $output = file_get_contents(drupal_get_path('module', 'codit_local') . '/README.md');
      // Use markdown filter if it is available to make the readme pretty.
      if (module_exists('markdown')) {
        // Markdown can be used.
        module_load_include('php', 'markdown', 'markdown');
        $output = Markdown($output);
      }
      else {
        // Markdown is not available.
        $output = '<pre>' . $output . '</pre>';
      }
      return $output;
  }
}
