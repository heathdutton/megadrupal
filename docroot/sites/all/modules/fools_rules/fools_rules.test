/**
 * Functional tests for Fool's Rules events, conditions and actions.
 */
class FoolsRulesTestCase extends DrupalWebTestCase {
  public static function getInfo() {
    return array(
      'name' => "Fool's Rules",
      'description' => "Tests Fool's Rules functionality.",
      'group' => "Fool's Rules",
    );
  }

  public function setUp() {
    parent::setUp('fools_rules');
    $this->admin_user = $this->drupalCreateUser(array('administer fools rules'));
    $this->web_user = $this->drupalCreateUser(array('access content'));
  }

  function testFoolsRulesBundleAlter() {
    // Create Bundle Alter
    $this->drupalLogin($this->admin_user);

    // View Bundle Alter
    $this->drupalLogin($this->web_user);
  }

  function testFoolsRulesFormAlter() {
    // Create Form Alter
    $this->drupalLogin($this->admin_user);

    // View Form Alter
    $this->drupalLogin($this->web_user);
  }

  function testFoolsRulesPageAlter() {
    // Create Page Alter
    $this->drupalLogin($this->admin_user);

    // View Page Alter
    $this->drupalLogin($this->web_user);
  }
}
