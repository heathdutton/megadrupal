<?php
/**
 * @file
 * Install, update, and uninstall functions for the racetime module.
 */

/**
 * Implements hook_field_schema().
 */
function racetime_field_schema($field) {
  $columns = array(
    'time' => array(
      'type' => 'int',
      'not null' => FALSE,
      'unsigned' => TRUE,
      'description' => "The time to store",
    ),
  );
  return array(
    'columns' => $columns,
  );
}
