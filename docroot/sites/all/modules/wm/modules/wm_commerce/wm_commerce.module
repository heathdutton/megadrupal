/**
 * Implements hook_wm_item().
 */
function wm_commerce_wm_item() {

  $items = array();

  $images = drupal_get_path('module', 'wm_commerce').'/images/';

  $items['commerce'] = array(
    '#title' => t('Store'),
    '#class' => array(),
    '#weigth' => 1,
    '#icon' => $images.'store.png',
    '#items' => array(
      'commerce_admin' => array(
        'title' => t('Admin'),
        'href' => 'admin/commerce',
        'help' => t('Admin the store.'),
        'shortcut' => TRUE,
      ),
      'commerce_products' => array(
        'title' => t('Products'),
        'href' => 'admin/commerce/products',
        'help' => t('Manage products and product types in the store.'),
        'shortcut' => TRUE,
      ),
      'commerce_orders' => array(
        'title' => t('Orders'),
        'href' => 'admin/commerce/orders',
        'help' => t('Manage orders in the store.'),
      ),
    ),
  );

  return $items;
}
