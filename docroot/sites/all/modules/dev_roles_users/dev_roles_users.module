<?php
/**
 * @file
 * Development Roles Users module.
 */

/**
 * Implements hook_user_role_insert().
 */
function dev_roles_users_user_role_insert($role) {
  // Include a new user if a role was created.
  module_load_include('install', 'dev_roles_users');
  $users = dev_roles_users_get_users_info();

  foreach ($users as $user) {
    if ($user['name'] != dev_roles_users_get_clean_username($role->name)) {
      continue;
    }
    user_save('', $user);
  }
}
