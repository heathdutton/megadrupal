class XCSearchTestCase extends DrupalWebTestCase {
  public static function getInfo() {
    return array(
      'name' => 'Testing xc_search module',
      'description' => 'xc_search test.',
      'group' => 'eXtensible Catalog Drupal Toolkit'
    );
  }

  function setUp() {
    parent::setUp('xcsearchtest');
    $web_user = $this->drupalCreateUser(array('access hello form'));
    debug($web_user);
    $this->drupalLogin($web_user);
  }

  function tearDown() {
    parent::tearDown();
  }

  function testLoad() {
    $this->assertTrue(TRUE, 'Woot!!');
    $this->drupalGet('admin/xc/search/hello');
    // '200' here is a an HTTP response status code
    $this->assertResponse('200', t('URL is reachable'));
  }

  function testSubmit() {
    $word = $this->randomName();
    $edit['text'] = $word;
    $this->drupalPost('admin/xc/search/hello', $edit, 'Save');
    $this->assertText($word, t('Text displayed'));
  }

  function testLong() {
    $word = $this->randomName(300);
    $edit['text'] = $word;
    $this->drupalPost(NULL, $edit, 'Save');
    $this->assertNoText($word, t('Text displayed'));
    $this->assertText('text cannot be longer than 128 characters', t('Warning displayed'));
  }

  function testSolrToArray() {
    $array = _xc_solr_to_array($doc, array('xc:type007', 'dcterms:type',
    'xc:typeLeader06', 'rdvocab:modeOfIssuance', 'rdvocab:dimensions',
    'xc:typeSMD', 'dcterms:identifier'), FALSE);
  }

}

