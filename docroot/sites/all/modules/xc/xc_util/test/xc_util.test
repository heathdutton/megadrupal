class XCUtilTestCase extends DrupalWebTestCase {
  public static function getInfo() {
    return array(
      'name' => 'Testing xc_util module',
      'description' => 'xc_util test.',
      'group' => 'XC'
    );
  }

  function setUp() {
    parent::setUp('xc_util');
    $web_user = $this->drupalCreateUser(array('access hello form'));
    debug($web_user);
    $this->drupalLogin($web_user);
  }

  function tearDown() {
    parent::tearDown();
  }

  function testContains() {
    $this->assertTrue(xc_util_contains('foo', 'foo'), 'Foo should be foo');
    $this->assertFalse(xc_util_contains('foo', 'bar'), 'Foo should not be bar');
    $this->assertTrue(xc_util_contains(array('foo', 'bar'), 'bar'),
      'Foo should contain bar');
    $this->assertFalse(xc_util_contains(array('foo', 'bar'), 'baz'),
      'Foo should not contain baz');
    $this->assertTrue(xc_util_contains(array('foo', 'bar'), array('bar')),
      'Foo should contain bar');
    $this->assertFalse(xc_util_contains(array('foo', 'bar'), array('baz')),
      'Foo should not contain baz');
  }
}