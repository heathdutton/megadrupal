        '#markup' => $markup,
        '#prefix' => '<span class="commerce-affirm-banner-wrapper">',
        '#suffix' => '</span>',
      );
      drupal_add_js(drupal_get_path('module', 'commerce_affirm') . '/js/commerce_affirm.js');
    }
  }

  return $block;
}
