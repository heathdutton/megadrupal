/**
 * Implements hook_init().
 */
function drutex_init() {
  // Load our stylesheets
  static $done = FALSE;

  if (!$done) {
    $css = drupal_get_path('module', 'drutex') . '/drutex.css';
    if (!empty($css)) {
      drupal_add_css($css);
    }
    $done = TRUE;
  }
}

