<?php

/**
 * @file
 * Provides installation functions for the AWS Validate module.
 */

/**
 * Implements hook_requirements().
 */
function aws_validate_requirements($phase) {
  $reqs = array();
  // Ensure translations don't break at install time.
  $t = get_t();

  if ($phase == 'runtime') {
    $reqs['aws_validate_valid'] = array(
      'title' => $t('AWS Validate: Instance ID'),
      'value' => $t('Validated'),
      'severity' => REQUIREMENT_OK,
    );
    if (!variable_get('aws_validate_valid', FALSE)) {
      $reqs['aws_validate_valid']['description'] = $t('You must !link to prove you own this instance.', array('!link' => l('validate your AWS Instance ID', 'admin/config/system/aws-validate')));
      $reqs['aws_validate_valid']['value'] = $t('Not validated');
      $reqs['aws_validate_valid']['severity'] = REQUIREMENT_ERROR;
    }
  }
  return $reqs;
}
