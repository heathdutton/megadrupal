<?php
/**
 * @file
 * Expose returned status code as a context condition.
 */

/**
 * Implements hook_context_plugins().
 */
function status_code_context_context_plugins() {
  $plugins = array();
  $plugins['status_code_context_condition'] = array(
    'handler' => array(
      'class' => 'status_code_context_condition',
      'parent' => 'context_condition',
      'path' => drupal_get_path('module', 'status_code_context') . '/plugins',
      'file' => 'status_code_context_condition.inc',
    ),
  );
  return $plugins;
}


/**
 * Implements hook_context_registry().
 */
function status_code_context_context_registry() {
  return array(
    'conditions' => array(
      'status_code' => array(
        'title' => t('HTTP status code returned'),
        'plugin' => 'status_code_context_condition',
      ),
    ),
  );
}

/**
 * Implements hook_context_page_condition().
 */
function status_code_context_context_page_condition() {
  if ($plugin = context_get_plugin('condition', 'status_code')) {
    $plugin->execute();
  }
}
