<?php

/**
 * @file
 * Feeds Copy & Paste hook implementations
 */

/**
 * Implements hook_feeds_plugins().
 */
function feeds_copypaste_feeds_plugins() {
  $path = drupal_get_path('module', 'feeds_copypaste') . '/plugins';

  $info = array();
  $info['FeedsCopypasteFetcher'] = array(
    'name' => 'Copy - Paste',
    'description' => 'Paste content into a textarea.',
    'handler' => array(
      'parent' => 'FeedsFetcher',
      'class' => 'FeedsCopypasteFetcher',
      'file' => 'FeedsCopypasteFetcher.inc',
      'path' => $path,
    ),
  );

  return $info;
}
