; make file to download image2 ckeditor plugin and dependencies
; these should be installed into sites/all/libraries/ckeditor/plugins

api = 2
core = 7.x

; Image2 Plugin
libraries[image2][directory_name] = "image2"
libraries[image2][subdir] = "ckeditor/plugins"
libraries[image2][type] = "library"
libraries[image2][destination] = "libraries"
libraries[image2][download][type] = "get"
libraries[image2][download][url] = "http://download.ckeditor.com/image2/releases/image2_4.4.6.zip"

; Widget Plugin
libraries[widget][directory_name] = "widget"
libraries[widget][subdir] = "ckeditor/plugins"
libraries[widget][type] = "library"
libraries[widget][destination] = "libraries"
libraries[widget][download][type] = "get"
libraries[widget][download][url] = "http://download.ckeditor.com/widget/releases/widget_4.4.6.zip"

; DialogUI Plugin
libraries[dialogui][directory_name] = "dialogui"
libraries[dialogui][subdir] = "ckeditor/plugins"
libraries[dialogui][type] = "library"
