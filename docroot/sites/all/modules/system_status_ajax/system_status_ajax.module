<?php

/**
 * @file
 * Calls the system status check on the admin/config page via AJAX so that page
 * load times aren't effected by checks that timeout or take a long time to
 * complete.
 */

/**
 * Implements hook_menu().
 */
function system_status_ajax_menu() {
  $items = array();

  $items['admin/reports/status/ajax'] = array(
    'page callback' => 'system_status_ajax_status_page',
    'access arguments' => array('administer site configuration'),
    'type' => MENU_CALLBACK,
    'delivery callback' => 'ajax_deliver',
    'file' => 'system_status_ajax.pages.inc',
  );

  return $items;
}

/**
 * Implements hook_menu_alter().
 *
 * Replaces the admin/config callback with one that executes the status check
 * via AJAX.
 */
function system_status_ajax_menu_alter(&$items) {
  $items['admin/config']['page callback'] = 'system_status_ajax_admin_config_page';
  $items['admin/config']['file'] = 'system_status_ajax.pages.inc';
  $items['admin/config']['file path'] = drupal_get_path('module', 'system_status_ajax');
}

/**
 * Implements hook_theme().
 */
function system_status_ajax_theme() {
  return array(
    'system_status_ajax_message' => array(
      'variables' => array('message' => '', 'type' => ''),
      'file' => 'system_status_ajax.pages.inc',
    ),
  );
}
