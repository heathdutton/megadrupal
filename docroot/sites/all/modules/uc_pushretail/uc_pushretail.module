/**
 * Send an event message to Pushretail api
 * @param string $type
 * @param object $order
 * @return type 
 */
function uc_pushretail_send_event($type = '', $order = '') {
  $site_key = variable_get('uc_pushretail_site_key', '');
  //Check if key specified
  if (!$site_key) {
    watchdog('uc_pushretail', 'No site api key specified.', NULL, WATCHDOG_ERROR);
    return;
  }
  if ($curl = curl_init()) {
    if (!$type) {
      $type = UC_PUSHRETAIL_MESSAGE_TYPE_NEW_ORDER;
    }
    if ($order && $order->order_id) {
      $order_id = $order->order_id;
    }
    //Build request
    $data = 'type=' . $type . '&site_key=' . $site_key . '&data=' . $order_id;
    curl_setopt($curl, CURLOPT_URL, 'http://pushretail.com/api/push');
    curl_setopt($curl, CURLOPT_RETURNTRANSFER, TRUE);
    curl_setopt($curl, CURLOPT_POST, TRUE);
    curl_setopt($curl, CURLOPT_POSTFIELDS, $data);
    $out = curl_exec($curl);
    curl_close($curl);
    $out = drupal_json_decode($out);
    //Log if an error.
    if (!isset($out['success'])) {
      watchdog('uc_pushretail', check_plain($out[0]), NULL, WATCHDOG_ERROR);
    }
  }
  else {
    watchdog('uc_pushretail', "CURL error. Event wasn't sent to device.", NULL, WATCHDOG_ERROR);
  }
  return;
}

/**
 * Notification rules action.
 * @return array 
 */
function uc_pushretail_rules_action_info() {
  $order_arg = array(
    'type' => 'uc_order',
    'label' => t('Order'),
  );
  return array(
    'uc_pushretail_notification' => array(
      'label' => t('Send an app notification'), 
      'arguments' => array(
        'order' => $order_arg,
      ),
      'group' => t('Pushretail'), 
    ),
  );
}

/**
 * Send an app notification.
 * @param object $order 
 */
function uc_pushretail_notification($order) {
  uc_pushretail_send_event(UC_PUSHRETAIL_MESSAGE_TYPE_NEW_ORDER, $order);
}

/**
 * Add default notification rule.
 * Send a message on checkout complete.
 * @return array 
 */
function uc_pushretail_default_rules_configuration() {
  $rule = rules_reaction_rule();
  $rule->label = t('Send push notification to app');
  $rule->active = TRUE;
  $rule->event('uc_checkout_complete')
    ->action('uc_pushretail_notification', array(
      'order:select' => 'order',
    ));

  $configs['uc_pushretail_push_notification'] = $rule;

  return $configs;
}
