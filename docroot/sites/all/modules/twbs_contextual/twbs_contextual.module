<?php

/**
 * @file
 * Contextual links in TWBS style.
 */

/**
 * Implements hook_help().
 */
function twbs_contextual_help($path, $arg) {
  $output = '';

  switch ($path) {
  case 'admin/help#twbs_contextual':
    return '<p>' . t('Contextual links in TWBS style.') . '</p>';
  }

  return $output;
}

/**
 * Implements hook_element_info_alter().
 */
function twbs_contextual_element_info_alter(&$type) {
  if (isset($type['contextual_links'])) {
    $type['contextual_links'] = array(
      '#pre_render' => array(
        'contextual_pre_render_links',
        'twbs_contextual_pre_render_links',
      ),
      '#theme' => 'twbs_bootstrap_dropdown',
      '#attached' => array(
        'css' => array(
          drupal_get_path('module', 'twbs_contextual') . '/twbs_contextual.less',
        ),
      ),
    );
  }
}

/**
 * Alter contextual links for TWBS friendly.
 */
function twbs_contextual_pre_render_links($element) {
  $element['#html_tag'] = array(
    'element' => array(
      '#tag' => 'div',
      '#attributes' => array(
        'class' => array('contextual-links-wrapper'),
      ),
    ),
  );
  $element['#link'] = array(
    'text' => '<i class="fa fa-cog fa-lg"></i>',
    'options' => array(
      'html' => TRUE,
    ),
  );
  $element['#links'] = array(
    'links' => $element['#links'],
    'attributes' => array(
      'class' => array('contextual-links'),
    ),
  );

  return $element;
}
