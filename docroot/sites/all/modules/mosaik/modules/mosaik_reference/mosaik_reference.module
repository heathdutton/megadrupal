/**
 * Implements hook_field_formatter_prepare_view().
 *
 * Preload all mosaiks referenced by items using 'full entity' formatters.
 */
function mosaik_reference_field_formatter_prepare_view($entity_type, $entities, $field, $instances, $langcode, &$items, $displays) {
  $names = array();
  foreach ($displays as $id => $display) {
    foreach ($items[$id] as $delta => $item) {
      $names[$item['name']] = $item['name'];
    }
  }

  // Add the loaded mosaiks to the items.
  foreach ($displays as $id => $display) {
    foreach ($items[$id] as $delta => $item) {
      $items[$id][$delta]['mosaik'] = mosaik_load($item['name']);
    }
  }
}

/**
 * Implements hook_field_formatter_view().
 */
function mosaik_reference_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $result = array();

  foreach ($items as $delta => $item) {
    $mosaik = $item['mosaik'];

    $object = array(
      'title' => !empty($display['settings']['show_title']) ? $mosaik['title'] : NULL,
      'content' => array(
        '#type' => 'markup',
        '#markup' => mosaik_render($mosaik, FALSE),
        '#contextual_links' => array(
          'mosaik_reference' => array(
            MOSAIK_ADMIN_MENU,
            array($mosaik['name']),
          ),
        ),
      )
    );

    $content = array(
      '#theme' => 'mosaik_block',
      '#object' => $object,
      '#contextual_links' => array(
        'mosaik_reference' => array(
          MOSAIK_ADMIN_MENU,
          array($mosaik['name']),
        ),
      ),
    );

    $result[$delta] = array(
      '#type' => 'item',
      '#markup' => render($content)
    );
  }

  return $result;
}

