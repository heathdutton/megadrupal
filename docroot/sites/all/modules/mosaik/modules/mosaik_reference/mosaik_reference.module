/**
 * Value callback for a mosaik_reference autocomplete element.
 *
 * Replace the mosaik name with a mosaik title.
 */
function mosaik_reference_autocomplete_value($element, $input = FALSE, $form_state) {
  if ($input === FALSE) {
    // We're building the displayed 'default value': expand the raw name into
    // "mosaik title [name:m]".
    $name = $element['#default_value'];
    if (!empty($name)) {
      $q = db_select('mosaik', 'm');
      $q->addField('m', 'title');
      $q->condition('m.name', $name, '=');
      $result = $q->execute();
      $value = $result->fetchField();

      if (empty($value)) {
        $code_mosaiks = mosaik_get_all(TRUE);

        if (isset($code_mosaiks[$name])) {
          $value = $code_mosaiks[$name]['title'];
        }
      }

      $value .= ' [name:' . $name . ']';
      return $value;
    }
  }
}

/**
 * Validation callback for a mosaik_reference autocomplete element.
 */
function mosaik_reference_autocomplete_validate($element, &$form_state, $form) {
  $field = field_widget_field($element, $form_state);
  $instance = field_widget_instance($element, $form_state);

  $value = $element['#value'];
  $name = NULL;

  if (!empty($value)) {
    // Check whether we have an explicit "[name:m]" input.
    preg_match('/^(?:\s*|(.*) )?\[\s*name\s*:\s*(\w+)\s*\]$/', $value, $matches);
    if (!empty($matches)) {
      // Explicit name. Check that the 'title' part matches the actual title for
      // the name.
      list(, $title, $name) = $matches;
      if (!empty($title)) {
        $real_title = db_select('mosaik', 'm')
          ->fields('m', array('title'))
          ->condition('m.name', $name)
          ->execute()
          ->fetchField();

        if (empty($real_title)) {
          $code_mosaiks = mosaik_get_all(TRUE);

          if (isset($code_mosaiks[$name])) {
            $real_title = $code_mosaiks[$name]['title'];
          }
        }

        if (trim($title) != trim($real_title)) {
          form_error($element, t('%name: title mismatch. Please check your selection.', array('%name' => $instance['label'])));
        }
      }
    }
    else {
      // No explicit name (the submitted value was not populated by autocomplete
      // selection). Get the name of a referencable mosaik from the entered title.
      $options = array(
        'string' => $value,
        'match' => 'equals',
        'limit' => 1,
      );
      $references = mosaik_reference_potential_references($field, $options);
      if ($references) {
        // @todo The best thing would be to present the user with an
        // additional form, allowing the user to choose between valid
        // candidates with the same title. ATM, we pick the first
        // matching candidate...
        $fbid = key($references);
      }
      else {
        form_error($element, t('%name: found no valid mosaik with that title.', array('%name' => $instance['label'])));
      }
    }
  }

  // Set the element's value as the mosaik name that was extracted from the entered
  // input.
  form_set_value($element, $name, $form_state);
}

