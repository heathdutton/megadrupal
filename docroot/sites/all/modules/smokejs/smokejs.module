<?php

/**
 * @file
 * The Smoke.js module.
 */

/**
 * Implements hook_libraries_info().
 */
function smokejs_libraries_info() {
  $js_options = array(
    'group' => JS_LIBRARY,
  );

  $libraries['smoke.js'] = array(
    'name' => 'Smoke.js',
    'vendor url' => 'http://smoke-js.com',
    'download url' => 'https://github.com/hxgf/smoke.js',
    'version arguments' => array(
      'file' => 'smoke.js',
      'pattern' => '@SMOKE.JS\s-\s+([0-9a-zA-Z\.-]+)@',
    ),
    'files' => array(
      'js' => array('smoke.js'),
      'css' => array('smoke.css'),
    ),
    'variants' => array(
      'minified' => array(
        'files' => array(
          'js' => array(
            'smoke.min.js' => $js_options,
          ),
          'css' => array('smoke.css'),
        ),
      ),
      'source' => array(
        'files' => array(
          'js' => array(
            'smoke.js' => $js_options,
          ),
          'css' => array('smoke.css'),
        ),
      ),
    ),
  );

  return $libraries;
}

/**
 * Implements hook_library().
 */
function smokejs_library() {
  $library = libraries_detect('smoke.js');

  if ($library['installed']) {
    $variants = variable_get('smokejs_library', 'minified');

    foreach ($library['variants'][$variants]['files']['js'] as $js => $options) {
      $library['variants'][$variants]['files']['js'][$library['library path'] . '/' . $js] = $options;
      unset($library['variants'][$variants]['files']['js'][$js]);
    }

    foreach ($library['variants'][$variants]['files']['css'] as $css => $options) {
      $library['variants'][$variants]['files']['css'][$library['library path'] . '/' . $css] = $options;
      unset($library['variants'][$variants]['files']['css'][$css]);
    }

    $libraries[$library['machine name']] = array(
      'title' => $library['name'],
      'website' => $library['vendor url'],
      'version' => $library['version'],
      'js' => $library['variants'][$variants]['files']['js'],
      'css' => $library['variants'][$variants]['files']['css'],
    );
    $libraries[$library['machine name']]['js'][drupal_get_path('module', $library['module']) . '/smokejs.js'] = array(
      'group' => JS_DEFAULT,
    );

    return $libraries;
  }
}

/**
 * Implements hook_library_alter().
 */
function smokejs_library_alter(&$libraries, $module) {
  $library = libraries_detect('smoke.js');

  if ($library['installed'] && $module == 'system' && isset($libraries['drupal.ajax'])) {
    $libraries['drupal.ajax']['dependencies'][] = array('smokejs', $library['machine name']);
  }
}

/**
 * Implements hook_menu().
 */
function smokejs_menu() {
  $items['admin/config/user-interface/smokejs'] = array(
    'title' => 'Smoke.js',
    'description' => 'Configure settings for Smoke.js.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('smokejs_settings'),
    'access arguments' => array('administer site configuration'),
    'file' => 'smokejs.admin.inc',
  );

  return $items;
}
