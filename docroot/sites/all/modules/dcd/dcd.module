<?php

/**
 * @file
 * Used to allow users to delete content without filling the content edit form.
 */

/**
 * Implements hook_help().
 */
function dcd_help($path, $arg) {
  switch ($path) {
    case 'admin/help#dcd':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Helps user to delete content without filling the required fields of content edit form.') . '</p>';
      $output .= '<p>' . t('Any user who has "delete content directly" or "delete content" permissions can view Delete Content link in the content edit form.') . '</p>';
      $output .= '<p>' . t('When user clicks the delete content link he is not required to fill all the required fields which are empty.') . '</p>';
      $output .= '<p>' . t('In site development when content fields are added or changed from non required fields to required fields, all users are not required to fill the content fields to delete the content.') . '</p>';
      return $output;
  }
}

/**
 * Implements hook_permission().
 */
function dcd_permission() {
  return array(
    'delete content directly' => array(
      'title' => t('Delete content directly'),
      'description' => t('Delete content directly permission.'),
    ),
  );
}

/**
 * Implements hook_form_FORM_ID_alter() for user_profile_form().
 */
function dcd_form_node_form_alter(&$form, &$form_state, $form_id) {
  global $user;
  $type = $form['type']['#value'];
  if (user_access('delete content directly') || user_access('delete any ' . $type . ' content') || (user_access('delete own ' . $type . ' content') && ($user->uid == $form['uid']['#value']))) {
    unset($form['actions']['delete']);
    $form['actions']['cancel'] = array(
      '#markup' => l(t('Delete Content'), 'node/' . $form['nid']['#value'] . '/delete'),
      '#weight' => 99,
    );
  }
}
