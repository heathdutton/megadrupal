<?php

/**
 * Implements hook_install().
 */
function good_relations_test_install() {
  // Returns the name of the proper localization function.
  // get_t() exists to support localization for code that might run during the
  // installation phase, when some elements of the system might not have loaded.
  $t = get_t();

  // Define the node type.
  $good_relations_node_definition = array(
    'type' => 'test_car',
    'name' => $t('Test Car'),
    'base' => 'node_content',
    'description' => $t('The Test Car node is defined to demonstrate RDF mapping'),
  );

  // Set defaults and save content type.
  $content_type = node_type_set_defaults($good_relations_node_definition);
  node_type_save($content_type);

  // Create the fields.
  foreach (_good_relations_test_installed_fields() as $field) {
    field_create_field($field);
  }

  // Create the instances of the fields.
  foreach (_good_relations_test_installed_instances() as $bundle_name => $bundle) {
    foreach ($bundle as $instance) {
      $instance['entity_type'] = $bundle_name == 'test_car' ? 'node' : 'field_collection_item';
      $instance['bundle'] = $bundle_name;
      field_create_instance($instance);
    }
  }
}

