<?php

/**
 * @file
 * Main module file.
 */

/**
 * Implements hook_ctools_plugin_api().
 */
function feeds_callback_fetcher_ctools_plugin_api() {
  list($module, $api) = func_get_args();
  if ($module == 'feeds' && $api == 'plugins') {
    return array('version' => 1);
  }
}

/**
 * Implementation of hook_feeds_plugins().
 */
function feeds_callback_fetcher_feeds_plugins() {
  $info = array();
  $info['feeds_callback_fetcher'] = array(
    'name' => 'Feeds callback fetcher',
    'description' => 'Launch callback and use result as content.',
    'handler' => array(
      'parent' => 'FeedsFileFetcher', // A plugin needs to derive either directly or indirectly from FeedsFetcher, FeedsParser or FeedsProcessor.
      'class' => 'feeds_callback_fetcher',
      'file' => 'feeds_callback_fetcher.inc',
      'path' => drupal_get_path('module', 'feeds_callback_fetcher'),
    ),
  );
  return $info;
}
