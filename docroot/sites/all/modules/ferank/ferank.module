 /**
 * Build the footer.
 */
function ferank_page_build(&$page) {
  if (!path_is_admin(current_path())) {
    $script = _ferank_output_js_code();
    $page['page_bottom']['ferank'] = array(
      '#type' => 'markup',
      '#markup' => $script,
    );
  }
}

/**
 * Put the Javascript to the footer.
 */
function _ferank_output_js_code() {
  drupal_add_js('//static.ferank.fr/pixel.js', array('type' => 'external', 'scope' => 'footer'));
}