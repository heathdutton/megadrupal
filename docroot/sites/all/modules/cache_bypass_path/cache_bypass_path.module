<?php

/**
 * @file
 * Hooks for the Cache Bypass Path module.
 */

/**
 * Implements hook_menu(). 
 */
function cache_bypass_path_menu() {
  $items = array();

  $items['admin/config/development/cache-bypass-path'] = array(
    'title' => 'Cache Bypass Path',
    'description' => t('Reset the cache bypass path'),
    'page callback' => 'drupal_get_form',
    'page arguments' => array('cache_bypass_path_regenerate_hash_form'),
    'access arguments' => array('administer cache bypass path'),
    'file' => 'cache_bypass_path.admin.inc',
  );

  $items['cbp/%'] = array(
    'title' => 'Cache Bypass Page',
    'description' => t('An empty page that bypasses the cache'),
    'page callback' => 'cache_bypass_path_hash_page',
    'page arguments' => array(1),
    'access callback' => TRUE,
    'file' => 'cache_bypass_path.pages.inc',
  );

  return $items;
}

/**
 * Implements hook_permission().
 */
function cache_bypass_path_permission() {
  return array(
    'administer cache bypass path' => array(
      'title' => t('Administer the Cache Bypass Path'),
      'description' => t('Reset the cache bypass path to use a new hash url.'),
      'restrict access' => TRUE,
    ),
  );
}
