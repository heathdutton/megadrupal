<?php

/**
 * Implements hook_help().
 */
function views_roundabout_help($path, $arg) {
  switch ($path) {
    case 'admin/help#views_roundabout':
      $output = '<p>' . t('The Views Roundabout module is a Views style plugin that displays the results in a JQuery Roundabout style.</p>');
      return $output;
  }
}

/**
 * Template function for views_roundabout style plugin
 *
 * @param array $vars
 *  Array of template variables.
 *
 * The JS file is loaded within render() in views_roundabout_style_plugin.inc
 */
function template_preprocess_views_view_roundabout(&$vars) {
  // inherit the normal unformatted classes
  template_preprocess_views_view_unformatted($vars);

  $vars['view_roundabout_id'] = 'views-roundabout-' . $vars['view']->name . '-' . $vars['view']->current_display . '-header'; // Don't touch it or it will stop working
}

/**
 * Implements hook_views_api().
 */
function views_roundabout_views_api() {
  return array('api' => 2);
}
