function _get_categories() {
  $cats = array();
  $result = db_query("SELECT cat_id, cat_name FROM {affiliates_cats} WHERE active = 'Y' ORDER BY cat_name ASC");
  foreach ($result as $row) {
    $cats[$row->cat_id] = $row->cat_name;
  }
  return $cats;
}

