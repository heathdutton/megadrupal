function _get_top_users_page() {
  $limit = variable_get(AFFILIATE_TOP_USERS_COUNT_PAGE, 5); 
  $homepage_profile = variable_get(AFFILIATE_HOMEPAGE_PROFILE, ''); 
  $query = db_select('affiliates_summary', 's');
