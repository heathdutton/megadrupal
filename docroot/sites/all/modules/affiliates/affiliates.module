function _create_summary_data($limit = 5) {
  $period = REQUEST_TIME - variable_get(AFFILIATE_TOP_USERS_PERIOD_INTERVAL, 86400);
  $last_period = REQUEST_TIME -  (2 * variable_get(AFFILIATE_TOP_USERS_PERIOD_INTERVAL, 86400));
  db_query("DROP TABLE IF EXISTS {affiliates_summary}");
  db_query("CREATE TABLE {affiliates_summary} (
    user_id       INT(10),
    total_points  INT(10),
    period_points INT(10),
    previous_period_points INT(10),
    PRIMARY KEY (user_id));");
  // Populate the affiliate_summary table with the users and total clicks
  $query = db_select('affiliates', 'a');
  $query->join('affiliates_ads', 'aa', 'a.ad_id = aa.ad_id');
  $query->addField('a','user_id');
  $query->addExpression('SUM(aa.points)', 'total_points'); 
  $query->condition('user_id', '0', '!=')
        ->groupBy('user_id')
        ->orderBy('total_points', 'DESC')
        ->range(0, $limit);
  db_insert('affiliates_summary')
    ->from($query)
    ->execute();
  // Update the period
  $query = db_select('affiliates', 'a');
  $query->join('affiliates_ads', 'aa', 'a.ad_id = aa.ad_id');
  $query->addField('a','user_id');
  $query->addExpression('SUM(aa.points)', 'total_points'); 
  $query->condition('click_time', $period, '>=')
        ->groupBy('user_id')
        ->orderBy('total_points', 'DESC')
        ->range(0, $limit);
  $result = $query->execute(); 
  foreach ($result as $affiliate_points) {
    $total_points = $affiliate_points->total_points;
    $user_id = $affiliate_points->user_id;
    db_update('affiliates_summary')
      ->fields(array(
        'period_points' => $total_points ,
    ))
    ->condition('user_id', $user_id)
    ->execute();
  }
  // Update the previous period
  $query = db_select('affiliates', 'a');
  $query->join('affiliates_ads', 'aa', 'a.ad_id = aa.ad_id');
  $query->addField('a','user_id');
  $query->addExpression('SUM(aa.points)', 'total_points'); 
  $query->condition('click_time', $period, '<')
        ->condition('click_time', $last_period, '>=')
        ->groupBy('user_id')
        ->orderBy('total_points', 'DESC')
        ->range(0, $limit);
  $result = $query->execute();
  foreach ($result as $affiliate_points) {
    $total_points = $affiliate_points->total_points; 
    $user_id = $affiliate_points->user_id;
    db_update('affiliates_summary')
      ->fields(array(
        'previous_period_points' => $total_points ,
    ))
    ->condition('user_id', $user_id)
    ->execute();
  }
}

