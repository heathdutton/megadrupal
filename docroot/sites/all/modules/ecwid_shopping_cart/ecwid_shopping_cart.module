function _ecwid_shopping_cart_get_register_link()
{
    global $user;

    $url = 'https://my.ecwid.com/cp/?source=drupal7%s#register';

    $user_string = '';
    if ($user) {
        $user_string = '&' . http_build_query(array(
            'nickname' => $user->name,
            'email' => $user->mail            
        ));
    }

    $url = sprintf($url, $user_string);

    return $url;
}

