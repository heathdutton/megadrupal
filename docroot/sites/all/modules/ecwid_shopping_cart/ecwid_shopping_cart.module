function _ecwid_shopping_cart_get_storeid() {
  $store_id = variable_get("ecwid_shopping_cart_storeid", 1003);
  if (empty($store_id)) {
    $store_id = '1003';
  }
  else {
    $store_id = intval($store_id);
  }
  return $store_id;
}

