/**
 * Implements hook_field_default_field_bases_alter().
 *
 * @link https://www.drupal.org/node/2178441#comment-8555451
 */
function panopoly_i18n_field_default_field_bases_alter(&$field_bases) {
  if (!empty($field_bases['body'])) {
        $field_bases['body']['translatable'] = 1;
  }
  if (!empty($field_bases['field_basic_text_text'])) {
        $field_bases['field_basic_text_text']['translatable'] = 1;
  }
}
