<?php

/**
 * Implements hook_init().
 */
function logo_watermark_init() {
  if (variable_get('logo_watermark_enabled', 0)) {
    drupal_add_js(array('logo_watermark' =>
      array(
        'filepath' => variable_get('logo_watermark_filepath', ''),
        'url' => variable_get('logo_watermark_url', '/'),
        'anchor_title' => variable_get('logo_watermark_anchor_title', variable_get('site_name', '')),
        'fade_speed' => (int) variable_get('logo_watermark_fade_speed', 200),
      ),
    ), 'setting');

    drupal_add_js(drupal_get_path('module', 'logo_watermark') . '/js/logo_watermark.js', array('scope' => 'footer', 'weight' => 1000, 'preprocess' => TRUE));
    drupal_add_css(drupal_get_path('module', 'logo_watermark') . '/css/logo_watermark.css', 'file');
  }
}

/**
 * Implements hook_permission().
 * @return array
 */
function logo_watermark_permission() {
  return array(
    'administer logo watermark' => array(
      'title' => 'Administer Logo Watermark Settings',
      'description' => 'Allows access to the configuration page for Logo Watermark.',
    ),
  );
}

/**
 * Implements hook_menu().
 * @return array
 */
function logo_watermark_menu() {
  $items = array();

  $items['admin/config/system/logo-watermark'] = array(
    'title' => 'Logo Watermark',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('logo_watermark_admin_settings'),
    'access arguments' => array('administer logo watermark'),
    'description' => 'Configuration options for Logo Watermark.',
    'file' => 'logo_watermark.admin.inc',
  );

  return $items;
}