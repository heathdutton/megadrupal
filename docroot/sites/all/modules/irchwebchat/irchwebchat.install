<?php

/**
 * @file
 * Irchwebchat module unistallation hook
 */


/**
 * Implements hook_uninstall().
 */
function irchwebchat_uninstall() {
  global $conf;

  db_delete('variable')
  ->condition('name', 'irchwebchat_%', 'LIKE')
  ->execute();
  cache_clear_all('variables', 'cache');

  unset($conf['irchwebchat_nav_link']);
  unset($conf['irchwebchat_default_channel']);
  unset($conf['irchwebchat_locked_channel']);
}
