  if (empty($lom_id)) {
    return TRUE;
  }
  $status = archibald_get_lom_stats($lom_id);

  $solr_enabled = variable_get('archibald_solr_search_activ', 0);

  if ($solr_enabled == 0 && empty($status->publication_version)) {
