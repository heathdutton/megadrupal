/**
 * Save site logo as a permanent file on form submission.
 */
function archibald_educa_system_theme_settings_form_submit(&$form, &$form_state) {
  $fid = $form_state['values']['site_logo'];
  $file = file_load($fid);
  $file->status = FILE_STATUS_PERMANENT;
  file_save($file);
}

