<?php

/**
 * Implements hook_field_formatter_info().
 */
function text_formatter_field_formatter_info() {
  $info['text_manual_format'] = array(
    'label' => t('Manual text format'),
    'field types' => array('text', 'text_long', 'text_with_summary'),
    'settings' => array(
      'format' => filter_fallback_format(),
      'trim_length' => '',
    ),
  );

  return $info;
}

/**
 * Implements hook_field_formatter_settings_summary().
 */
function text_formatter_field_formatter_settings_summary($field, $instance, $view_mode) {
  $display = $instance['display'][$view_mode];
  $settings = $display['settings'];

  $summary = '';

  if ($display['type'] == 'text_manual_format') {
    $format = filter_format_load($settings['format']);
    $summary = t('Format: @format', array('@format' => $format->name));
    if (!empty($settings['trim_length'])) {
      $summary .= '<br/>' . t('Trimmed to @length characters.', array('@length' => $settings['trim_length']));
    }
  }

  return $summary;
}

/**
 * Implements hook_field_formatter_settings_form().
 */
function text_formatter_field_formatter_settings_form($field, $instance, $view_mode, $form, &$form_state) {
  $display = $instance['display'][$view_mode];
  $settings = $display['settings'];

  $element = array();

  if ($display['type'] == 'text_manual_format') {
    $options = array();
    foreach (filter_formats() as $format) {
      $options[$format->format] = $format->name;
    }
    $element['format'] = array(
      '#type' => 'select',
      '#title' => t('Format'),
      '#options' => $options,
      '#default_value' => $settings['format'],
      '#required' => TRUE,
    );
    $element['trim_length'] = array(
      '#type' => 'textfield',
      '#title' => t('Trim length'),
      '#description' => t('Leave blank to not trim'),
      '#size' => 10,
      '#default_value' => $settings['trim_length'],
      '#element_validate' => array('element_validate_integer_positive'),
    );
  }

  return $element;
}

/**
 * Implements hook_field_formatter_view().
 */
function text_formatter_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $settings = $display['settings'];

  $element = array();

  if ($display['type'] == 'text_manual_format') {
    foreach ($items as $delta => $item) {
      $output = check_markup($item['value'], $settings['format'], $langcode);
      if ($settings['trim_length']) {
        $output = text_summary($output, $settings['format'], $settings['trim_length']);
      }
      $element[$delta] = array('#markup' => $output);
    }
  }

  return $element;
}
