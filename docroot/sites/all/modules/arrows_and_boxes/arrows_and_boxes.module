<?php


/*
 * Implementation of hook_init()
 *
 */

function arrows_and_boxes_init() {

  // paths
  $path =  drupal_get_path('module', 'arrows_and_boxes') . '/arrows_and_boxes_jquery_plugin' ;
  $path_js  = $path . "/js";
  $path_css  = $path . "/style";

  // add js and css
  drupal_add_css( $path_css . "/arrowsandboxes.css", 'module');
  drupal_add_js( $path_js . "/jquery.wz_jsgraphics.js", 'module');
  drupal_add_js( $path_js . "/arrowsandboxes.js", 'module');

}

