<?php

/**
 * @file
 * Defines features and functions for the Australian Commerce Currency to be displayed in the way
 * Australians expect it to be
 */

/**
 * Implements hook_commerce_currency_info_alter().
 */
function commerce_australia_currencydisplay_commerce_currency_info_alter(&$currencies, $langcode) {
  $currencies['AUD']['symbol'] = '$';
  $currencies['AUD']['symbol_placement'] = 'before';
  $currencies['AUD']['code_placement'] = '';
}
