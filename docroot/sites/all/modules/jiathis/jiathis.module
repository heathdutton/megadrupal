    $iconstyle='';
  }

 	$output = '<!-- JiaThis Button BEGIN -->'.$button.$count.'
            </div>
            <script type="text/javascript" src="http://v3.jiathis.com/code'.$iconstyle.'/jia.js" charset="utf-8"></script>
