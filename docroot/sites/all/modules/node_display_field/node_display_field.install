 /**
  * Implements hook_field_schema().
  */
function node_display_field_field_schema($field) {

  if ($field['type'] == 'node_display_field') {
    $columns = array(
      'node_display' => array(
        'description'   => 'Display type',
        'type'          => 'varchar',
        'size'          => 'normal',
        'length'        => 255,
        'not null'      => TRUE,
        'default'       => 0,
      ),
    );

    $indexes = array(
      'node_display' => array('node_display'),
    );

    return array(
      'columns' => $columns,
      'indexes' => $indexes,
    );
  }
}
