/**
 * Implements hook_schema().
 */
function cvent_signup_schema() {
  $schema['cvent_signup'] = array(
    'fields' => array(
      'nid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'event_code' => array(
        'description' => 'Cvent event code.',
        'type' => 'varchar',
        'length' => 128,
        'not null' => TRUE,
        'default' => '',
      ),
      'session_id' => array(
        'description' => 'Cvent session ID (optional).',
        'type' => 'varchar',
        'length' => 128,
        'not null' => FALSE,
      ),
      'session_title' => array(
        'description' => 'Cached session title.',
        'type' => 'varchar',
        'length' => 128,
        'not null' => FALSE,
      ),
      'sync_end' => array(
        'description' => 'Days after signup event to stop synching signup with Cvent event. If set to 0, there is no limit.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'weblink_detail_url' => array(
        'description' => 'Cvent Event WeblinkDetail URL.',
        'type' => 'varchar',
        'length' => 128,
        'not null' => TRUE,
        'default' => '',
      ),
    ),
    'primary key' => array('nid'),
  );
  return $schema;
}

