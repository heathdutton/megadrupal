/**
 * Add session ID/title field.
 */
function cvent_signup_update_6101() {
  $schema = cvent_signup_schema();
  $ret = array();
  db_add_field('cvent_signup', 'session_id', $schema['cvent_signup']['fields']['session_id']);
  db_add_field('cvent_signup', 'session_title', $schema['cvent_signup']['fields']['session_title']);
  // hook_update_N() no longer returns a $ret array. Instead, return
  // nothing or a translated string indicating the update ran successfully.
  // See http://drupal.org/node/224333#update_sql.
