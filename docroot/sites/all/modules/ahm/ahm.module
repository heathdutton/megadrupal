/**
 * Implement of hook_menu().
 *
 * @return
 *   An array of menu items.
 */
function ahm_menu() {
  $items = array();

  $items['admin/config/user-interface/ahm'] = array(
    'title' => 'jQuery ahm',
    'description' => 'Configure ahm module.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('ahm_settings_form'),
    'access arguments' => array('configure ahm module'),
    'file' => 'includes/ahm.admin.inc',
  );

  return $items;
}

/**
 * Implement of hook_permission().
 *
 * @return array
 *   An array of valid permissions for the browserclass module
 */
function ahm_permission() {
  return array(
    'configure ahm module' => array(
      'title' => 'Configure jQuery ahm module',
      'description' => 'Configure jQuery ahm module, set JavaScript operation.',
      'restrict access' => TRUE,
    ),
  );
}

/**
 * Implement of hook_init().
 */
function ahm_init() {
  if (variable_get('ahm_always_add_js')) {
    drupal_add_library('ahm', 'ahm');
  }
}


/**
 * Implement hook_library().
 *
 * @return array
 *   An array defining libraries associated with a module.
 */
function ahm_library() {
  $libraries = array();

  $libraries['ahm'] = array(
    'title' => 'AHM',
    'website' => 'http://www.jqueryahm.com/',
    'version' => '1.1.0',
    'js' => array(
      drupal_get_path('module', 'ahm') . '/jquery-ahm.min.js' => array(),
    ),
  );

  return $libraries;
}