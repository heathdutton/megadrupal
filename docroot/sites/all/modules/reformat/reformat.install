<?php

/**
 * Implements hook_install().
 */
function reformat_install() {
  // Set the weight to 100 so that the new formatters appear at the bottom of the lists.
  db_update('system')
    ->fields(array('weight' => 100))
    ->condition('type', 'module')
    ->condition('name', 'reformat')
    ->execute();
}
