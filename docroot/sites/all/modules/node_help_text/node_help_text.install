<?php

/**
 * @file
 * Install file for Node Help Text.
 */

/**
 * Implements hook_install().
 */
function node_help_text_install() {
  $t = get_t();
  drupal_set_message($t("Node Help Text Module settings are available under !link", array('!link' => l($t('Administer > Site configuration > Node Help Text'), 'admin/content/help'))));
}

/**
 * Implements hook_uninstall().
 */
function node_help_text_uninstall() {
  variable_del('node_help_text_field_values');
}
