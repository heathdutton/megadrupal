<?php

/**
 * Implements hook_ctools_directory().
 */
function ilink_test_ctools_plugin_directory($owner, $api) {
  if ($owner == 'ilink') {
    return "plugins/$api";
  }
}


/**
 * Implements hook_page_build().
 */
function ilink_test_page_build(&$page) {
  ctools_include('plugins');
  // dpm(ctools_plugin_get_plugin_type_info(), 'types');
  // dpm(ctools_get_plugins('ilink', 'ilink'), 'plugins');
  $page['content']['ilink_test'] = array(
    '#type' => 'ilink',
    '#ilink' => 'fire',
    '#arguments' => array(
      'color' => 'black',
    ),
  );
}

