<?php

/**
 * @file
 * Intershop password module install.
 */

/**
 * Implements hook_enable().
 */
function intershop_password_enable() {
  variable_set('password_inc', drupal_get_path('module', 'intershop_password') . '/password.inc');
}

/**
 * Implements hook_disable().
 */
function intershop_password_disable() {
  // Fallback to default value: "includes/password.inc".
  variable_del('password_inc');
}
