<?php

/**
 * Implements hook_requirements()
 */
function html2canvas_requirements($phase) {
  $requirements = array();
  if ($phase == 'runtime') {
    $t = get_t();
    if ($path = libraries_get_path('html2canvas')) {
      if (file_exists($path . '/html2canvas.js')) {
        $requirements['html2canvas'] = array(
          'title' => $t('html2canvas'),
          'value' => $t('html2canvas.js found under !path', array('!path' => $path . '/html2canvas.js')),
          'severity' => REQUIREMENT_OK,
        );
        return $requirements;
      }
    }
    $requirements['html2canvas'] = array(
      'title' => $t('html2canvas'),
      'value' => isset($lib['error message']) ? $t($lib['error message']) : t('html2canvas library was not found. !download the library and place in under sites/all/libraries/html2canvas, so that the library can be found at sites/all/libraries/html2canvas/html2canvas.js.', array('!download' => l(t('Download'), 'https://github.com/niklasvh/html2canvas/releases'))),
      'severity' => REQUIREMENT_ERROR,
    );
  }
  return $requirements;
}

/**
 * Implements hook_libraries_info().
 */
function html2canvas_libraries_info() {
  $libraries = array();
  $libraries['html2canvas'] = array(
    'name' => 'html2canvas',
    'vendor url' => 'http://html2canvas.hertzen.com/',
    'download url' => 'https://raw.github.com/douglascrockford/JSON-js/master/html2canvas.js',
    'files' => array(
      'js' => array(
        'html2canvas.js',
      ),
    ),
    'version arguments' => array(
      'file' => 'html2canvas.js',
      'pattern' => '/((\d+)\.(\d+)\.(\d+))/',
      'lines' => 4,
    ),    
  );
  return $libraries;
}


