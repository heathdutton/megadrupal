<?php

/**
 * @file
 * title_rotator.install
 */

/**
 * Implements hook_enable().
 */
function title_rotator_enable() {
  drupal_set_message(st("Title Rotator is now enabled. Enter titles on the <a href='@url'>configuration</a> page.", array(
    '@url' => url('admin/config/system/title-rotator'))
  ));
}