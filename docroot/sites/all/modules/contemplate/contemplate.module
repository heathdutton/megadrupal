  // get the nid of the latest node of this type
  $result = db_query("SELECT nid FROM {node} WHERE type = :type ORDER BY created DESC", array(':type' => $type));
  foreach ($result as $record) {
    $nid = $record->nid;
  }
  if (isset($nid) && $nid) {
