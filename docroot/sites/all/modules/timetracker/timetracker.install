<?php

/**
 * Implements hook_enable().
 */
function timetracker_enable() {
  if (!drupal_theme_access(TIMETRACKER_TRACK_THEME)) {
    $t = get_t();
    theme_enable(array(TIMETRACKER_TRACK_THEME));
    drupal_set_message($t('Timetracker module is enabling @themename theme for proper timetrack page rendering.', array('@themename' => TIMETRACKER_TRACK_THEME)));
  }
}
