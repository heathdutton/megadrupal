<?php
/**
 * @file
 * Overlay context module.
 *
 * Provides context reaction to detect if a page is currently loaded as an
 * overlay parent, child, or not at all.
 */

/**
 * Implements hook_context_plugins().
 */
function overlay_context_context_plugins() {
  $plugins = array();
  $plugins['overlay_context_condition'] = array(
    'handler' => array(
      'path' => drupal_get_path('module', 'overlay_context'),
      'file' => 'overlay_context_condition.inc',
      'class' => 'overlay_context_condition',
      'parent' => 'context_condition',
    ),
  );
  return $plugins;
}

/**
 * Implements hook_context_registry().
 */
function overlay_context_context_registry() {
  return array(
    'conditions' => array(
      'overlay' => array(
        'title' => t('Overlay'),
        'description' => t('Whether or not the current page is an overlay child, parent or none.'),
        'plugin' => 'overlay_context_condition',
      ),
    ),
  );
}

/**
 * Implements hook_context_page_condition().
 */
function overlay_context_context_page_condition() {
  $plugin = context_get_plugin('condition', 'overlay');
  if ($plugin) {
    $plugin->execute();
  }
}
