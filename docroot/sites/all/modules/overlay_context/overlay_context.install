<?php
/**
 * @file
 * Install file for overlay_context module.
 */

/**
 * Implements hook_install().
 */
function overlay_context_install() {
  // Set the weight of overlay context above that of Overlay.
  db_update('system')
    ->fields(array('weight' => 1))
    ->condition('name', 'overlay_context')
    ->condition('type', 'module')
    ->execute();
}
