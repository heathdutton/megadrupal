<?php

 /**
  * Implementation of hook_init()
  */

function jquery_bidi_init() {
  # setup the jquery filter rule
  # TODO: make this configurable maybe
  $js = '(function ($) {
    $(document).ready(function() {
        $("address, blockcode, blockquote, :header, p, pre, li, dt, dd, ul, ol, dl").filter(":not([dir])").bidi();
      });
    })(jQuery);';
  drupal_add_js($js, "inline");
}
