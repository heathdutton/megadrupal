    'api' => 2.0,
    'path' => drupal_get_path('module', 'ynews') . '/includes',
  );
}

// prepare all strings so they are valid for Yandex.News format
function yml_safe($str) {  
  return htmlspecialchars($str, ENT_QUOTES);
  $rep = array(
    '"' => '&quot;',
    /*'&' => '&amp;',*/
    '>' => '&gt;',
    '<' => '&lt;',
    "'" => '&apos;'
  );

  return strtr($str, $rep);
}

