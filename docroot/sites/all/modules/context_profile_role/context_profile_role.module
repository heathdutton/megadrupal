<?php
/**
 * @file
 * Provide context condition of the role of the user profile viewed.
 */

/**
 * Implements hook_context_plugins().
 */
function context_profile_role_context_plugins() {
  $plugins = array();
  $plugins['context_profile_role_context_condition_profile_role'] = array(
    'handler' => array(
      'path'   => drupal_get_path('module', 'context_profile_role') . '/plugins',
      'file'   => 'context_profile_role_context_conditions.inc',
      'class'  => 'ContextProfileRoleContextConditionProfileRole',
      'parent' => 'context_condition',
    ),
  );
  return $plugins;
}

/**
 * Implements hook_context_registry().
 */
function context_profile_role_context_registry() {
  return array(
    'conditions' => array(
      'profile_role' => array(
        'title'  => t('Profile page role'),
        'plugin' => 'context_profile_role_context_condition_profile_role',
      ),
    ),
  );
}

/**
 * Implements hook_user_view().
 */
function context_profile_role_user_view($account, $view_mode, $langcode) {
  if ($view_mode == 'full') {
    if ($plugin = context_get_plugin('condition', 'profile_role')) {
      $plugin->execute($account);
    }
  }
}
