<?php

/**
 * @file
 * This module transform an org file to nodes.
 */

/**
 * Implements hook_menu().
 *
 * Here we set up the URLs (menu entries) for the
 * form examples. Note that most of the menu items
 * have page callbacks and page arguments set, with
 * page arguments set to be functions in external files.
 */
function ocrad_menu() {
  $items = array();
  $items['ocrad'] = array(
    'title' => 'GNU Ocrad Drupal Interface',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('ocrad_form_upload'),
    'description' => 'Recognize text in image using gnu ocrad.',
    'access callback' => TRUE,
    'file' => 'ocrad.inc',
    'weight' => 10,
  );
  $items['admin/ocrad'] = array(
    'title' => 'Administer Ocrad',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('ocrad_form_settings'),
    'description' => 'Administer text recognition in images using gnu ocrad.',
    'access arguments' => array('administer site configuration'),
    'file' => 'ocrad.inc',
    'weight' => 10,
  );

  return $items;
}
