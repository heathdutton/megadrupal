<?php

/**
 * @file
 *   Commerce Integration module for Sauce.
 */

/**
 * Implements hook_permission().
 */
function commerce_marketplace_sauce_permission() {
  return array(
    'access the commerce marketplace sauce' =>  array(
      'title' => t('Access the Commerce Marketplace Sauce'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function commerce_marketplace_sauce_menu() {
  $items['commerceguys-marketplace/sauce'] = array(
    'title' => 'Sauce',
    'page callback' => 'commerce_marketplace_sauce_page',
    'access arguments' => array('access the commerce marketplace sauce'),
    'type' => MENU_LOCAL_TASK,
    'weight' => 10,
  );
  return $items;
}

function commerce_marketplace_sauce_page() {
  module_load_include('inc', 'sauce', 'includes/sauce.form');
  $form = drupal_get_form('sauce_form');
  // add css to change Font color to White
  $form['#attached']['css'] = array(
      drupal_get_path('module', 'commerce_marketplace_sauce') . '/css/commerce_marketplace_sauce.css',
  );
  return $form;
}

/**
 * Implements hook_admin_paths().
 */
function commerce_marketplace_sauce_admin_paths() {
  $paths = array(
      'commerceguys-marketplace/sauce' => TRUE,
  );
  return $paths;
}
