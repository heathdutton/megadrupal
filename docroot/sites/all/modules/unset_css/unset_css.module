<?php

/**
 * @file
 * Allows site admins to set a list of css files/path patterns that should be unset.
 */

/**
 * Implements hook_menu().
 */
function unset_css_menu() {
  $items = array();

  $items['admin/config/development/unset-css'] = array(
    'title' => 'Unset CSS',
    'description' => 'Black list CSS files.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('unset_css_settings'),
    'access arguments' => array('unset css'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}

/**
 * Implements hook_permission().
 */
function unset_css_permission() {
  return array(
    'unset css' => array(
      'title' => t('Unset CSS'),
      'description' => t('Set a blacklist of CSS files to exclude.'),
    )
  );
}

/**
 * Unset CSS settings form
 */
function unset_css_settings() {
  $form = array();

  $form['unset_css_blacklist'] = array(
    '#type' => 'textarea',
    '#title' => 'Blacklist',
    '#default_value' => variable_get('unset_css_blacklist', ''),
    '#description' => 'Enter a list of CSS files that should be unset. You can also enter patterns like "modules/*".'
  );

  return system_settings_form($form);
}

/**
 * Process CSS list and remove files that match the patterns
 */
function unset_css(&$css) {
  foreach ($css as $file => $details) {
    if (_unset_css_match($file)) {
      unset($css[$file]);
    }
  }
  return $css;
}

/**
 * Process the blacklist into an array
 */
function unset_css_blacklist() {
  $list = variable_get('unset_css_blacklist', '');
  $list = explode("\n", $list);

  $files = array();

  foreach ($list as $file) {
    $files[] = trim($file);
  }

  return array_filter($files);
}

/**
 * Helper function to check if a file matches a pattern in the blcklist
 */
function _unset_css_match($file) {
  $blacklist = unset_css_blacklist();
  if (in_array($file, $blacklist)) {
    return TRUE;
  }

  foreach ($blacklist as $pattern) {
    if (drupal_match_path($file, $pattern) == 1) {
      return TRUE;
    }
  }

  return FALSE;
}

/**
 * Implements hook_css_alter().
 */
function unset_css_css_alter(&$css) {
  unset_css(&$css);
} 