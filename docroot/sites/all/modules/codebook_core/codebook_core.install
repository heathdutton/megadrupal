<?php

/**
 * @file
 * Installation hooks for Codebook Core.
 */

/**
 * Implements hook_install().
 */
function codebook_core_install() {
  variable_set('codebook_core_num_sep', CODEBOOK_CORE_NUM_SEP);
  variable_set('codebook_core_num_len_codebook_title', 1);
  variable_set('codebook_core_num_len_codebook_chapter', 2);
  variable_set('codebook_core_num_len_codebook_section', 3);
}

/**
 * Implements hook_uninstall().
 */
function codebook_core_uninstall() {
  variable_del('codebook_core_num_sep');
  variable_del('codebook_core_num_len_codebook_title');
  variable_del('codebook_core_num_len_codebook_chapter');
  variable_del('codebook_core_num_len_codebook_section');
}
