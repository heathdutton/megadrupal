<?php

/**
 * Implements hook_apps_servers_info().
 *
 * Add the vardot_apps server
 */
function vardot_apps_apps_servers_info() {
  $profile = variable_get('install_profile', 'standard');
  $info =  drupal_parse_info_file(drupal_get_path('profile', $profile) . '/' . $profile . '.info');
  return array(
    'vardot' => array(
      'title' => 'Vardot',
      'description' => "Apps from Vardot",
      'manifest' => 'http://apps.drupal.vardot.com/app/query',
      'profile' => $profile,
      'profile_version' => isset($info['version']) ? $info['version'] : '7.x-1.x',
      'server_name' => $_SERVER['SERVER_NAME'],
      'server_ip' => $_SERVER['SERVER_ADDR'],
    ),
  );
}

/**
 * Implements hook_init().
 * 
 * Add a message if this is the vardot apps page.
 */
function vardot_apps_init() {
  if ($_GET['q'] == 'admin/apps/vardot') {
    apps_include('manifest'); 
    $server = apps_servers('vardot');
    // Create args array for substitutions
    $manifest = apps_manifest($server);
    if (isset($manifest['message']) && $manifest['message'] != '') {
      foreach($server as $key => $value) {
        $args['!' . $key] = $value;
      }
      drupal_set_message(format_string($manifest['message'], $args));
    }
  }
}
