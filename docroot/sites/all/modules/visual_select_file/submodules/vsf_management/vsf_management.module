    'label' => 'VSF Management Thumbnail',
    'effects' => array(
      array(
        'name' => 'image_scale_and_crop',
        'data' => array(
          'width' => 50,
          'height' => 50,
        ),
        'weight' => 0,
      ),
    ),
  );

  return $styles;
}

/**
