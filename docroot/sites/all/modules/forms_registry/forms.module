<?php
/**
 * @file
 * The main file of the forms module.
 */


/**
 * Implements hook_menu_alter().
 */
function forms_menu_alter(&$items) {
  FormsHooks::menuAlter($items);
}

/**
 * Wrapper for the core ajax_form_callback().
 */
function forms_ajax_form_callback() {
  if (preg_match('/[^A-Za-z_]/', $_POST['form_id'])) {
    watchdog('forms', 'Invalid form id: @id', array('@id' => $_POST['form_id']));
    return;
  }
  Forms::includeFiles(check_plain($_POST['form_id']));
  return ajax_form_callback();
}

/**
 * A procedural wrapper for the Forms::get() method.
 */
function forms_get_form($id) {
  return Forms::get($id);
}