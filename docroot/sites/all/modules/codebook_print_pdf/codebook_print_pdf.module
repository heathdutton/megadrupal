<?php
/**
 * @file
 * Code for the Codebook Print and PDF feature.
 */

include_once 'codebook_print_pdf.features.inc';

/**
 * Implements hook_entity_info_alter().
 *
 * Add an extra view mode to allow a different field display configuration to be
 * used when sections are displayed within chapters, and chapters within titles
 * in the print/PDF functionality.
 */
function codebook_print_pdf_entity_info_alter(&$info) {
  $info['node']['view modes']['codebook_embed_pdf'] = array(
    'label' => t('Codebook embed - PDF'),
    'custom settings' => FALSE,
  );
}
