<?php
/**
 * @file
 * Main file for AJAX Pages module.
 */

/**
 * Implements hook_init().
 */
function ajaxify_pages_init() {
  drupal_add_js(drupal_get_path('module', 'ajaxify_pages') . '/js/ajaxify_pages.js', array('scope' => 'footer'));
  //drupal_add_js(drupal_get_path('module', 'ajax_pages') . '/js/ajaxify-html5.js');
  
  $settings = array(
    'links_selector' => variable_get('ajaxify_pages_links_selector', '#main-menu a, a#logo, #site-name a'),
    'content_selector' => variable_get('ajaxify_pages_content_selector', '#page-wrapper'),
  );
  
  drupal_add_js(array('ajaxify_pages' => $settings), array('type' => 'setting'));
}

/**
 * Implements hook_menu().
 */
function ajaxify_pages_menu() {
  $items = array();
  
  $items['admin/config/user-interface/ajaxify_pages'] = array(
    'title' => 'AJAXify Pages',
    'description' => 'Configure AJAXify Pages settings.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('ajaxify_pages_settings_form'),
    'access callback' => 'user_access',
    'access arguments' => array('administer site configuration'),
    'file' => 'ajaxify_pages.admin.inc',
    'type' => MENU_NORMAL_ITEM,
  );
  
  return $items;
}
