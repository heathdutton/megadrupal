<?php
/**
 * @file
 * Handles install/uninstall operations.
 */

/**
 * Implements hook_uninstall().
 */
function hide_termpage_content_uninstall() {
  // Remove the taxonomy_term page display content
  // visibility setting for any vocabularies that
  // defined it.
  db_delete('variable')
    ->condition('name', 'hide_termpage_content_%', 'LIKE')
    ->execute();
}
