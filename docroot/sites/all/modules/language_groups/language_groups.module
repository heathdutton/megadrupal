<?php
/**
 * @file
 * Language Groups module file.
 */

/**
 * Implements hook_permission().
 */
function language_groups_permission() {
  return array(
    'administer language groups' => array(
      'title' => t('Administer Language Groups'),
      'description' => t("Allow users to add, edit, or delete language groups.  Allow users to update language group settings."),
      'restrict access' => TRUE,
    ),
  );
}

/**
 * Implements hook_menu().
 */
function language_groups_menu() {

  $items['admin/config/regional/language/groups'] = array(
    'title' => 'Language Groups',
    'page callback' => 'language_groups_groups_overview',
    'access arguments' => array('administer language groups'),
    'file' => 'language_groups.admin.inc',
    'type' => MENU_LOCAL_TASK,
    'weight' => 20,
  );
  $items['admin/config/regional/language/groups/add'] = array(
    'title' => 'Add a language group',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('language_groups_config_add_form'),
    'access arguments' => array('administer language groups'),
    'file' => 'language_groups.admin.inc',
    'type' => MENU_LOCAL_ACTION,
  );
  $items['admin/config/regional/language/groups/%/edit'] = array(
    'title' => 'Configure language group',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('language_groups_config_edit_form', 5),
    'access arguments' => array('administer language groups'),
    'file' => 'language_groups.admin.inc',
  );
  $items['admin/config/regional/language/groups/%/delete'] = array(
    'title' => 'Delete language group',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('language_groups_delete_form', 5),
    'access arguments' => array('administer language groups'),
    'file' => 'language_groups.admin.inc',
  );

  return $items;
}


/**
 * Implements hook_ctools_plugin_directory().
 */
function language_groups_ctools_plugin_directory($module, $plugin) {
  if ($module == 'ctools' && !empty($plugin)) {
    return "plugins/$plugin";
  }
}

/**
 * Implements hook_ctools_plugin_api().
 */
function language_groups_ctools_plugin_api($module, $api) {
  if ($module == 'page_manager' && $api == 'pages_default') {
    return array('version' => 1);
  }
}
