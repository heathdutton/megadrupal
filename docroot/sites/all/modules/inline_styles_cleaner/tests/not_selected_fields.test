<?php

/**
 * @file
 * Not selected fields test.
 */

/**
 * Class NotSelectedFieldsWebTestCase.
 */
class NotSelectedFieldsWebTestCase extends InlineStylesCleanerWebTestCase {
  /**
   * Standard simpletest function.
   *
   * @return array
   *   Array with test info.
   */
  public static function getInfo() {
    return array(
      'name' => 'Not selected fields',
      'description' => 'Show warning message if user does not choose any field on config page',
      'group' => 'Inline Styles Cleaner',
    );
  }

  /**
   * Show warning message if user does not choose any field on config page.
   */
  public function testNotSelectedFields() {
    $this->drupalPost('admin/config/content/inline-styles-cleaner', array(), t('Start processing'));
    $this->assertText(t('Please select field(s) to start processing.'), 'Message "Please select field(s) to start processing." found.');
  }
}
