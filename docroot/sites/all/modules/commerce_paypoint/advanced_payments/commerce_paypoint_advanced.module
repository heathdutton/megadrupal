  if (count($url) > 2) {
    if ($url[0] == 'checkout') {
      drupal_add_js(drupal_get_path('module', 'commerce_paypoint_advanced') .
      '/js/commerce_paypoint_hosted_iframe.js', array('type' => 'file', 'scope' => 'header', 'weight' => -100));
