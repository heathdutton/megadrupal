<?php

/**
 * @file
 */

define('BOOTBOXJS_MIN_PLUGIN_VERSION', '4.2.0');
define('BOOTBOXJS_DOWNLOAD_URI', 'https://github.com/makeusabrew/bootbox/archive/v4.4.0.zip');

/**
 * Implements hook_requirements().
 */
function bootboxjs_requirements($phase) {
  $requirements = array();

  if ($phase == 'runtime') {
    $t = get_t();
    $library = libraries_detect('bootboxjs');
    $error_type = isset($library['error']) ? drupal_ucfirst($library['error']) : '';
    $error_message = isset($library['error message']) ? $library['error message'] : '';

    if (empty($library['installed'])) {
      $requirements['bootboxjs_plugin'] = array(
        'title' => $t('Bootbox.js plugin'),
        'value' => $t('@e: At least @a', array('@e' => $error_type, '@a' => BOOTBOXJS_MIN_PLUGIN_VERSION)),
        'severity' => REQUIREMENT_ERROR,
        'description' => $t('!error You need to download the !bootboxjs and place !file in the bootboxjs directory in the %path directory on your server.', array('!error' => $error_message, '!file' => 'bootboxjs', '!bootboxjs' => l($t('Bootbox.js plugin'), $library['download url']), '%path' => 'sites/all/libraries')),
      );
    }
    elseif (version_compare($library['version'], BOOTBOXJS_MIN_PLUGIN_VERSION, '>=')) {
      $requirements['bootboxjs_plugin'] = array(
        'title' => $t('Bootbox.js plugin'),
        'severity' => REQUIREMENT_OK,
        'value' => $library['version'],
      );
    }
    else {
      $requirements['bootboxjs_plugin'] = array(
        'title' => $t('Bootbox.js plugin'),
        'value' => $t('At least @a', array('@a' => BOOTBOXJS_MIN_PLUGIN_VERSION)),
        'severity' => REQUIREMENT_ERROR,
        'description' => $t('You need to download a later version of the !bootboxjs and replace the old version located in the %path directory on your server.', array('!bootboxjs' => l($t('Bootbox.js plugin'), $library['download url']), '%path' => $library['library path'])),
      );
    }
  }

  return $requirements;
}

/**
 * Implements hook_libraries_info().
 */
function bootboxjs_libraries_info() {
  $libraries['bootboxjs'] = array(
    'name' => 'Bootbox.js plugin',
    'vendor url' => 'http://bootboxjs.com/',
    'download url' => BOOTBOXJS_DOWNLOAD_URI,
    'version arguments' => array(
      'file' => 'bootbox.js',
      'pattern' => '@v([0-9\.a-z]+)@',
      'lines' => 5,
    ),
    'files' => array(
      'js' => array(
        'bootbox.js',
      ),
    ),
  );

  return $libraries;
}
