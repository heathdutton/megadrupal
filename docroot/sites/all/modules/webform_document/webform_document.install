<?php

/**
 * Implements hook_requirements().
 */
function webform_document_requirements($phase) {
  $t = get_t();
  $requirements = array();

  if (!class_exists('ZipArchive')) {
    $requirements['webform_document_ziparchive'] += array(
      'severity' => REQUIREMENT_ERROR,
      'description' => $t('Webform Document module requires <a href="@url">PHP ZipArchive class</a>.', array('@url' => 'http://php.net/manual/en/class.ziparchive.phpâ€Ž')),
    );
  }

  return $requirements;
}

/**
 * Implements hook_uninstall().
 */
function webform_document_uninstall() {
  variable_del('webform_document');
}
