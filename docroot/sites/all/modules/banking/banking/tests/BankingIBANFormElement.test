<?php

/**
 * @file
 * Contains class BankingIBANFormElement.
 */

/**
 * Tests the banking_iban form element.
 */
class BankingIBANFormElement extends DrupalWebTestCase {

  /**
   * Implements DrupalTestCase::getInfo().
   */
  static function getInfo() {
    return array(
      'name' => 'banking_iban form element',
      'group' => 'Banking',
    );
  }

  /**
   * Overrides parent::setUp().
   */
  function setUp(array $modules = array()) {
    $this->profile = 'testing';
    parent::setUp($modules + array('banking_test'));
  }

  /**
   * Test validation.
   */
  function testValidation() {
    $path = 'banking_test_form_element_banking_iban';

    // Test valid values.
    $valid_form_state = 'NL91ABNA0417164300';
    $valid_form_post = array(
      'banking_iban' => 'NL91ABNA0417164300',
    );
    $this->drupalPost($path, $valid_form_post, t('Submit'));
    $this->assertUrl('user');
    $form_state = variable_get('banking_test_form_submit');
    $this->assertEqual($valid_form_state, $form_state['banking_iban']);

    // Test valid values.
    $valid_form_state = 'NL91ABNA0417164301';
    $valid_form_post = array(
      'banking_iban' => 'NL91ABNA0417164301',
    );
    $this->drupalPost($path, $valid_form_post, t('Submit'));
    // Test that the invalid element is the only element to be flagged.
    $this->assertFieldByXPath("//input[@name='banking_iban' and contains(@class, 'error')]");
    $this->assertNoFieldByXPath("//input[not(@name='banking_iban') and contains(@class, 'error')]");
  }
}
