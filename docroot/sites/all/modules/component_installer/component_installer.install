<?php

/**
 * Makes the Component Installer module last in the chain.
 */

/**
 * Implementation of hook_install().
 */
function component_installer_install() {
  // Set the weight to 100 so that it can alter the libraries properly.
  db_update('system')
    ->fields(array(
      'weight' => 100,
    ))
    ->condition('name', 'component_installer')
    ->execute();
}
