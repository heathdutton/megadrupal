<?php

/**
 * Returns the part of day of the given timestamp.
 *
 * @param int $timestamp
 * @param string $timezone
 * @param string $language_code
 *
 * @return string Part of day of the given timestamp.
 */
function date_partofday($timestamp, $timezone = NULL, $language_code = NULL) {
  $hour = (int) format_date($timestamp, 'custom', 'G', $timezone, $language_code);
  if ($hour < 6) {
    $partofday = t('early morning');
  }
  elseif ($hour < 12) {
    $partofday = t('morning');
  }
  elseif ($hour == 12) {
    $partofday = t('noon');
  }
  elseif ($hour < 18) {
    $partofday = t('afternoon');
  }
  elseif ($hour < 21) {
    $partofday = t('evening');
  }
  elseif ($hour < 24) {
    $partofday = t('night');
  }
  elseif ($hour == 24) {
    $partofday = t('midnight');
  }
  return $partofday;
}
