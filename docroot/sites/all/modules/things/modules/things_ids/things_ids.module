/**
 * Implements hook_menu_local_tasks_alter().
 */
function things_ids_menu_local_tasks_alter(&$data, $router_item, $root_path) {
  // Add action link 'admin/structure/things_ids/add' on 'admin/structure/things_ids'.
  if ($root_path == 'admin/content/things_ids') {
    $item = menu_get_item('admin/content/things_ids/add');
    if ($item['access']) {
      $data['actions']['output'][] = array(
        '#theme' => 'menu_local_action',
        '#link' => $item,
      );
    }
  }
}


