    // Entity API
    'entity class' => 'things_ids',
    'controller class' => 'things_idsController',
    'base table' => 'things_ids',
    'fieldable' => TRUE,
    'entity keys' => array(
        'id' => 'things_ids_id',
        'bundle' => 'type',
    ),
    // Bundles are defined by the Things Identifier types below
    'bundles' => array(),
    // Bundle keys tell the FieldAPI how to extract information from the bundle objects
    'bundle keys' => array(
      'bundle' => 'type',
    ),
    'label callback' => 'entity_class_label',
    'uri callback' => 'entity_class_uri',
    'creation callback' => 'things_ids_create',
    'access callback' => 'things_ids_access',
    'module' => 'things_ids',
    // The information below is used by the things_idsUIController (which extends the EntityDefaultUIController)
    'admin ui' => array(
      'path' => 'admin/content/things_ids',
      'file' => 'things_ids.admin.inc',
      'controller class' => 'things_idsUIController',
      'menu wildcard' => '%things_ids',
    ),
  );
  // The entity that holds information about the entity types	  
  $return['things_ids_type'] = array(
    'label' => t('Things Identifiers Type'),
    'entity class' => 'things_idsType',
    'controller class' => 'things_idsTypeController',
    'base table' => 'things_ids_type',
    'fieldable' => FALSE,
    'bundle of' => 'things_ids',
    'exportable' => TRUE,
    'entity keys' => array(
      'id' => 'id',
      'name' => 'type',
      'label' => 'label',
    ),
    'access callback' => 'things_ids_type_access',
    'module' => 'things_ids',
    // Enable the entity API's admin UI.
    'admin ui' => array(
      'path' => 'admin/structure/things_ids_types',
      'file' => 'things_ids_type.admin.inc',
      'controller class' => 'things_idsTypeUIController',
    ),
  );

  return $return;
}


/**
 * Implements hook_entity_info_alter().
 *
 * We are adding the info about the Things Identifier types via a hook to avoid a recursion
 * issue as loading the Things Identifier types requires the entity info as well.
 *
 * @todo This needs to be improved
 */
function things_ids_entity_info_alter(&$entity_info) {
  foreach (things_ids_get_types() as $type => $info) {
    $entity_info['things_ids']['bundles'][$type] = array(
      'label' => $info->label,
      'admin' => array(
        'path' => 'admin/structure/things_ids_types/manage/%things_ids_type',
        'real path' => 'admin/structure/things_ids_types/manage/' . $type,
        'bundle argument' => 4,
        'access arguments' => array('administer things_ids types'),
      ),
    );
  }
}
  

/**
 * Implements hook_permission().
 */
function things_ids_permission() {
  // We set up permisssions to manage entity types, manage all entities and the
  // permissions for each individual entity
  $permissions = array(
    'administer things_ids types' => array(
      'title' => t('Administer things_ids types'),
      'description' => t('Create and delete fields for Things Identifier types, and set their permissions.'),
    ),
    'administer things_ids' => array(
      'title' => t('Administer Things Identifiers'),
      'description' => t('Edit and delete all things_ids'),
    ),  
  );
  
  //Generate permissions per things_ids 
  foreach (things_ids_get_types() as $type) {
    $type_name = check_plain($type->type);
    $permissions += array(
      "edit any $type_name things_ids" => array(
        'title' => t('%type_name: Edit any things_ids', array('%type_name' => $type->label)),
      ),
      "view any $type_name things_ids" => array(
        'title' => t('%type_name: View any things_ids', array('%type_name' => $type->label)),
      ),
    );
  }
  return $permissions;  
}


/**
 * Determines whether the given user has access to a things_ids.
 *
 * @param $op
 *   The operation being performed. One of 'view', 'update', 'create', 'delete'
 *   or just 'edit' (being the same as 'create' or 'update').
 * @param $things_ids
 *   Optionally a things_ids or a Things Identifier type to check access for. If nothings_ids is
 *   given, access for all Things Identifiers is determined.
 * @param $account
 *   The user to check for. Leave it to NULL to check for the global user.
 * @return boolean
 *   Whether access is allowed or not.
 */
function things_ids_access($op, $things_ids = NULL, $account = NULL) {
  if (user_access('administer things_ids', $account)) {
    return TRUE;
  }
  if (isset($things_ids) && $type_name = $things_ids->type) {
    $op = ($op == 'view') ? 'view' : 'edit';
    if (user_access("$op any $type_name things_ids", $account)) {
      return TRUE;
    }
  }
  return FALSE;
}


/**
 * Access callback for the entity API.
 */
function things_ids_type_access($op, $type = NULL, $account = NULL) {
  return user_access('administer things_ids types', $account);
}


/**
 * Gets an array of all Things Identifier types, keyed by the type name.
 *
 * @param $type_name
 *   If set, the type with the given name is returned.
 * @return things_idsType[]
 *   Depending whether $type isset, an array of Things Identifier types or a single one.
 */
function things_ids_get_types($type_name = NULL) {
  // entity_load will get the Entity controller for our things_ids entity and call the load
  // function of that object - we are loading entities by name here.
  $types = entity_load_multiple_by_name('things_ids_type', isset($type_name) ? array($type_name) : FALSE);
  return isset($type_name) ? reset($types) : $types;
}


/**
 * Menu argument loader; Load a Things Identifier type by string.
 *
 * @param $type
 *   The machine-readable name of a Things Identifier type to load.
 * @return
 *   A Things Identifier type array or FALSE if $type does not exist.
 */
function things_ids_type_load($type) {
  return things_ids_get_types($type);
}


/**
 * Fetch a things_ids object. Make sure that the wildcard you choose 
 * in the things_ids entity definition fits the function name here.
 *
 * @param $things_ids_id
 *   Integer specifying the things_ids id.
 * @param $reset
 *   A boolean indicating that the internal cache should be reset.
 * @return
 *   A fully-loaded $things_ids object or FALSE if it cannot be loaded.
 *
 * @see things_ids_load_multiple()
 */
function things_ids_load($things_ids_id, $reset = FALSE) {
  $things_ids = things_ids_load_multiple(array($things_ids_id), array(), $reset);
  return reset($things_ids);
}


/**
 * Load multiple Things Identifiers based on certain conditions.
 *
 * @param $things_ids_ids
 *   An array of things_ids IDs.
 * @param $conditions
 *   An array of conditions to match against the {things_ids} table.
 * @param $reset
 *   A boolean indicating that the internal cache should be reset.
 * @return
 *   An array of things_ids objects, indexed by things_ids_id.
 *
 * @see entity_load()
 * @see things_ids_load()
 */
function things_ids_load_multiple($things_ids_ids = array(), $conditions = array(), $reset = FALSE) {
  return entity_load('things_ids', $things_ids_ids, $conditions, $reset);
}


