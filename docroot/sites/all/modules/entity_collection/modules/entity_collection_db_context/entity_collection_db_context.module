<?php

/**
 * Implements hook_entity_collection_plugins().
 */
function entity_collection_db_context_entity_collection_plugins() {
  $path = drupal_get_path('module', 'entity_collection_db_context') . '/plugins/entity_collection_storage';

  $info['entity_collection_storage_db_context'] = array(
    'title' => t('Database with hashed+indexed Context storage'),
    'entity_collection_storage' => array(
      'parent' => 'EntityCollectionStorageDB',
      'class' => 'EntityCollectionStorageDBContext',
      'file' => 'db_context.inc',
      'path' => $path,
    ),
  );
  
  return $info;
}

/**
 * Implements hook_ctools_plugin_directory().
 */
function entity_collection_db_context_ctools_plugin_directory($module, $type) {
  if ($type == 'entity_collection_storage') {
    return 'plugins/' . $type;
  }
}