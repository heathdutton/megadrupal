<?php

/**
 * Implements hook_permission().
 */
function outbrain_integration_permission() {
  return array(
    'administer outbrain integration' => array(
      'title' => t('Administer Outbrain Integration'),
      'description' => t('Administer account settings and visibility of Outbrain on your site.'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function outbrain_integration_menu() {
  $items['admin/config/system/outbrain_integration'] = array(
    'title' => 'Outbrain Integration',
    'description' => 'Configure Outbrain blocks on your website.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('outbrain_integration_admin_settings_form'),
    'access arguments' => array('administer outbrain integration'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'admin.inc',
  );

  return $items;
}

/**
 * Implementation of hook_help().
 */
function outbrain_integration_help($path, $arg) {
  switch ($path) {
    case 'admin/config/system/outbrain_integration':
      return t('<a href="@url">Outbrain</a> is an analytics tool that provides links to other content either internally or from external sites.', array('@url' => 'http://www.outbrain.com/'));
  }
}

/**
 * Implements hook_block_info().
 * Used to create 2 blocks - one for internal ads, one for external.
 */
function outbrain_integration_block_info() {
  $blocks['outbrain_integration_internal'] = array(
    'info' => t('Outbrain Internal Ads'),
    'cache' => DRUPAL_CACHE_PER_PAGE,
  );

  $blocks['outbrain_integration_external'] = array(
    'info' => t('Outbrain External Ads'),
    'cache' => DRUPAL_CACHE_PER_PAGE,
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 * Used to create the content for the internal/external ad blocks.
 * Uses variables set in the admin form.
 */
function outbrain_integration_block_view($delta = '') {
  global $base_url;
  $block = array();

  switch ($delta) {
    case 'outbrain_integration_internal':
      // Get the variables.
      $outbrain_block_subject = variable_get('outbrain_integration_internal_block_subject', '<none>');
      $outbrain_data_widget_id = variable_get('outbrain_integration_internal_data_widget_id', FALSE);
      $outbrain_data_ob_template = variable_get('outbrain_integration_internal_data_ob_template', FALSE);
      // Get the URL of the current node (page 1).
      $node = menu_get_object();
      $url = drupal_lookup_path('alias', 'node/' . $node->nid);
      if (!$url) {
        $url = 'node/' . $node->nid;
      }
      $url = $base_url . '/' . $url;
      // Create block subject and content.
      $block['subject'] = t("@subject", array('@subject', $outbrain_block_subject));
      $outbrain_enabled = variable_get('outbrain_integration_enabled', FALSE);
      if ($outbrain_enabled) {
        $block['content'] = array(
          '#attached' => array(
            'js' => outbrain_attached_js(),
          ),
          '#markup' => '<div class="OUTBRAIN" data-src="' . $url . '" data-widget-id="' . $outbrain_data_widget_id . '" data-ob-template="' . $outbrain_data_ob_template . '" ></div>',
        );
      }
      else {
        $block['content'] = '';
      }
      break;

    case 'outbrain_integration_external':
      // Get the variables.
      $outbrain_block_subject = variable_get('outbrain_integration_external_block_subject', '<none>');
      $outbrain_data_widget_id = variable_get('outbrain_integration_external_data_widget_id', FALSE);
      $outbrain_data_ob_template = variable_get('outbrain_integration_external_data_ob_template', FALSE);
      // Get the URL of the current node (page 1).
      $node = menu_get_object();
      $url = drupal_lookup_path('alias', 'node/' . $node->nid);
      if (!$url) {
        $url = 'node/' . $node->nid;
      }
      $url = $base_url . '/' . $url;
      // Create block subject and content.
      $block['subject'] = t("@subject", array('@subject', $outbrain_block_subject));
      $outbrain_enabled = variable_get('outbrain_integration_enabled', FALSE);
      if ($outbrain_enabled) {
        $block['content'] = array(
          '#attached' => array(
            'js' => outbrain_attached_js(),
          ),
          '#markup' => '<div class="OUTBRAIN" data-src="' . $url . '" data-widget-id="' . $outbrain_data_widget_id . '" data-ob-template="' . $outbrain_data_ob_template . '" ></div>',
        );
      }
      else {
        $block['content'] = '';
      }
      break;

    default:
      break;
  }

  return $block;
}

/**
 * Returns attached JS array
 */
function outbrain_integration_attached_js() {
  return array(
    'http://widgets.outbrain.com/outbrain.js' => array(
      'type' => 'external'
    )
  );
}
