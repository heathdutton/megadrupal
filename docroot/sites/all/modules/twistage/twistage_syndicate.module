/**
 * Implementation of hook_twistage_api
 */
function twistage_syndicate_twistage_api($op, $video) {
  /*if (!$video->syndicated) {
    twistage_syndicate_push_all($video->pid, $video->vid);
  }*/
  
  switch($op) {
    case 'order add':
      if (!$video->syndicated) {
        twistage_syndicate_push_all($video->pid, $video->vid);
      }
    break;
    
  }
}

