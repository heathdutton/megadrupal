<?php
/**
 * @file
 * Core functions for the Context server variables module.
 */

/**
 * Implements hook_init().
 */
function context_server_vars_init() {
  $map = context_condition_map();
  $plugin = context_get_plugin('condition', 'server_vars');
  if (!empty($map['server_vars']) && $plugin) {
    $plugin->execute();
  }
}

/**
 * Implements hook_theme().
 */
function context_server_vars_theme() {
  $items = array();

  $items['context_server_vars_form'] = array(
    'render element' => 'form',
  );

  return $items;
}

/**
 * Implements hook_context_plugins().
 */
function context_server_vars_context_plugins() {
  $plugins = array();

  $plugins['context_condition_server_vars'] = array(
    'handler' => array(
      'path' => drupal_get_path('module', 'context_server_vars') . '/plugins',
      'file' => 'context_condition_server_vars.inc',
      'class' => 'context_condition_server_vars',
      'parent' => 'context_condition',
    ),
  );

  return $plugins;
}

/**
 * Implements hook_context_registry().
 */
function context_server_vars_context_registry() {
  $registry = array();

  $registry['conditions'] = array(
    'server_vars' => array(
      'title' => t('Server variables'),
      'description' => t(''),
      'plugin' => 'context_condition_server_vars',
    ),
  );

  return $registry;
}

/**
 * Theme callback for context options form.
 */
function theme_context_server_vars_form($variables) {
  $form = $variables['form'];

  $header = array(t('Name'), t('Operator'), t('Negate?'), t('Value'), '');
  $rows = array();

  // Variables settings form and operations.
  $children = element_children($form);
  if (!empty($children)) {
    foreach ($children as $delta) {
      if (is_numeric($delta)) {
        $columns = array();

        $fields = array('name', 'op', 'negate', 'value');
        foreach ($fields as $field) {
          unset($form[$delta][$field]['#title']);
          $columns[] = render($form[$delta][$field]);
        }
        $columns[] = render($form['remove'][$delta]);

        $rows[] = $columns;
      }
    }
  }

  // No server variables have been added.
  else {
    $rows[] = array(array(
      'colspan' => 2,
      'data' => t('No server variables have been added.'),
    ));
  }

  return theme('table', array(
    'header' => $header,
    'rows' => $rows,
  ));
}
