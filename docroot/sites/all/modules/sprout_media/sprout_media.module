<?php
/**
 * @file
 * Code for the Sprout Media feature.
 */

include_once 'sprout_media.features.inc';

function sprout_media_enable() {
  // image settings
  variable_set('image_jpeg_quality', '90');
}

function sprout_media_theme_registry_alter(&$theme_registry) {
  if (isset($theme_registry['imce_page'])) {
    $path = drupal_get_path('module', 'sprout_media');
    $theme_registry['imce_page']['path'] = $path . '/templates';
    $theme_registry['imce_page']['template'] = 'imce-page';
  }

  if (isset($theme_registry['imce_content'])) {
    $path = drupal_get_path('module', 'sprout_media');
    $theme_registry['imce_content']['path'] = $path . '/templates';
    $theme_registry['imce_content']['template'] = 'imce-content';
  }

  if (isset($theme_registry['imce_file_list'])) {
    $path = drupal_get_path('module', 'sprout_media');
    $theme_registry['imce_file_list']['path'] = $path . '/templates';
    $theme_registry['imce_file_list']['template'] = 'imce-file-list';
  }
}
