<?php
/**
 * @file
 * Add BuzzGrowl support for your Drupal site!
 */

/**
 * Implements hook_init().
 */
function buzzgrowl_init() {
  if (!path_is_admin(current_path()) && user_access('view buzzgrowl popup')) {
    drupal_add_js("http://buzzgrowl.com/embed/buzz.js", array('type' => 'external'));
    drupal_add_js(drupal_get_path('module', 'buzzgrowl') . '/buzzgrowl.js', array('type' => 'file'));
  }
}

/**
 * Implements hook_permission().
 */
function buzzgrowl_permission() {
  return array(
    'view buzzgrowl popup' => array(
      'title' => t('View BuzzGrowl popup'),
      'description' => t('Allows users to see the BuzzGrowl popup at the bottom of the page'),
    ),
  );
}
