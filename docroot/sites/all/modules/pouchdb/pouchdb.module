<?php

/**
 * Implements hook_init().
 */
function pouchdb_init() {
  libraries_load('pouchdb');
}

/**
 * Implements hook_libraries_info().
 */
function pouchdb_libraries_info() {
  $libraries = array();

  $libraries['pouchdb'] = array(
    'name' => 'PouchDB',
    'vendor url' => 'http://pouchdb.com/',
    'download url' => 'https://github.com/daleharvey/pouchdb/downloads',
    'version' => 'whatever',
    'files' => array(
      'js' => array(
        'pouch.alpha.min.js' => array(
          'group' => JS_LIBRARY,
          'every_page' => TRUE,
          'weight' => -50,
        ),
      ),
    ),
  );

  return $libraries;
}
