/**
 * Implements hook_field_schema().
 */
function massrelevance_field_schema($field) {
  if ($field['type'] == 'massrelevance') {
    $columns = array(
      'value' => array(
        'type' => 'varchar',
        'length' => 255,
        'not null' => FALSE,
      ),
    );
  }
  $indexes = array(
    'value' => array('value'),
  );
  return array(
    'columns' => $columns,
    'indexes' => $indexes,
  );
}