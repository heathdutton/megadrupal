/**
 * @file
 * Default layout for the commerce checkout forms.
 */

/**
 * Implements hook_form_FORM_ID_alter().
 */
function commerce_kbclayout_form_commerce_checkout_form_checkout_alter(&$form, &$form_state) {
  // Attach extra CSS for a KBC look and feel.
  $form['#attached']['css'][] = drupal_get_path('module', 'commerce_kbclayout') . '/css/commerce_kbclayout_checkout.css';
}

