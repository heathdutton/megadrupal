/*
 * Implementation of hook_permission
 * @see http://api.drupal.org/api/drupal/modules--system--system.api.php/function/hook_permission/7
 */
function ljxp_permission() {
  return array(
    'can crosspost to livejournal' => array(
      'title' => t('Can crosspost to LiveJournal'), 
      'description' => t('Users can crosspost to LiveJournal or LiveJournal-based services'),
    ),
  );
}

/*
 * Implementation of hook_menu.
 * D6 => D7 No change in parameters. 
 * @see http://api.drupal.org/api/drupal/modules--system--system.api.php/function/hook_menu/7
 */
function ljxp_menu() {
  $items = array();
  $items['admin/config/services/ljxp'] = array(
    'title' => t('LiveJournal crossposter'),
    'description' => t('Allows you or your users to automatically crosspost entries to a LiveJournal account.'),
    'page callback' => 'drupal_get_form',
    'page arguments' => array('ljxp_admin_settings'),
    'access arguments' => array('administer site configuration'),
    'type' => MENU_NORMAL_ITEM, // optional
  );
  return $items;
}

/*
 * Implementation of hook_form_alter
 * D6 => D7 No change in parameters. 
 * @see http://api.drupal.org/api/drupal/modules--system--system.api.php/function/hook_form_alter/7
 */
function ljxp_form_alter(&$form, $form_state, $form_id) {
  global $user;
  // part of D6 hook_user came here.
  if ($form_id == 'user_profile_form') {
    ljxp_alter_user_profile($form, $form_state, $form_id);
    return;
  }
  if (substr($form_id, -9) != 'node_form' || 
    !user_access('can crosspost to livejournal') || 
    empty($form['uid']['#value']) ||
    $user->uid != $form['uid']['#value']) {
    return;
  }
  $default_state = variable_get('ljxp_type_' . $form['type']['#value'], 0);

  if (!$default_state) {
    return;
  }

  $ljxp = ljxp_load_settings($user->uid);
  if (!$ljxp->active) {
    return;
  }

  if ($form['nid']['#value']) {
    $lj = db_query("SELECT ljid FROM {ljxp_node} WHERE nid = :nid", array(':nid' => $form['nid']['#value']))->fetchAssoc();
    $form['ljid'] = array(
      '#type' => 'value',
      '#value' => $lj['ljid'],
    );
    $checked = $lj['ljid'] ? TRUE : FALSE;
  }
  else {
    $checked = ($default_state == 'yes');
  }
  $form['ljxp_set'] = array (
    '#type' => 'fieldset',
    '#title' => t('LiveJournal Crossposter'),
    '#collapsible' => TRUE,
    '#group' => 'additional_settings',  
  );
  $form['ljxp_set']['ljxp'] = array(
     '#type' => 'value',
     '#value' => '1',
  );
  $form['ljxp_set']['ljxp_crosspost'] = array(
    '#type' => 'checkbox',
    '#title' => t('Crosspost to LiveJournal'),
    '#default_value' => $checked,
    '#description' => t('Crosspost this to LiveJournal; if already crossposted and you uncheck this, it will be deleted from LiveJournal.'),
  );
  return $form;
}

/*
 * hook_node_insert
 * @see http://api.drupal.org/api/search/7/hook_node_
 */
function ljxp_node_insert($node) {
  // only let people with access; also skip people editing other people's posts.
  if (!user_access('can crosspost to livejournal') || $GLOBALS['user']->uid != $node->uid) {
    return;
  }
  if (!empty($node->ljxp)) {
    // Delete nodes that are crossposted and set to crosspost as well
    // as nodes that are unpublished.
    if (!empty($node->ljid) && (empty($node->ljxp_crosspost) || !$node->status)) {
      ljxp_delete($node);
    }
    elseif ($node->status && !empty($node->ljxp_crosspost)) {
      ljxp_post($node);
    }
  }
}

/*
 * hook_node_update
 * @see http://api.drupal.org/api/search/7/hook_node_
 */
function ljxp_node_update($node) {
  ljxp_node_insert($node);
}

function ljxp_node_delete($node) {
  // Skip permission check on delete - otherwiser administrators will not be able to clean LJ data.
  if (!empty($node->ljid)) {
    ljxp_delete($node);
  }
}

/*
 * hook_user_*  implementation
 * @see http://api.drupal.org/api/function/hook_user/6
 */
function ljxp_user_insert(&$edit, $account, $category) {
  if (user_access('can crosspost to livejournal', $account) && $category == 'account' && isset($edit['ljxp'])) {
    $ljxp = (object) $edit['ljxp'];
    $ljxp->uid = $account->uid;
    if (!empty($ljxp->pass)) {
      $ljxp->pass = md5($ljxp->pass);
    }
    ljxp_save_settings($ljxp);
  }
}

function ljxp_user_update(&$edit, $account, $category) {
  ljxp_user_insert($edit, $account, $category);
}

function ljxp_user_view($account, $view_mode, $langcode) {
  global $user;
  if (user_access('can crosspost to livejournal', $account) && ($user->uid == $account->uid || user_access('administer site configuration'))) {
    $ljxp = ljxp_load_settings($account->uid);
    if (!$ljxp->active) {
      $output = t('Not active');
    }
    else {
      $output = theme('ljxp_user_info', $ljxp, $account);
    }
    return array(t('Livejournal Crossposting') => array(array('value' => $output)));
  }
}

function theme_ljxp_user_info($ljxp, $account) {
  $output .= '<div>' . t('Username') . ': ' . $ljxp->name . '</div>';
  if ($ljxp->community) {
    $output .= '<div>' . t('Community') . ': ' . $ljxp->community . '</div>';
  }
  return $output;
}
