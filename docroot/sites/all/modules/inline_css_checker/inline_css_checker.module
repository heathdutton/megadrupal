<?php

/**
 * @file inline_css_checker.module
 */

/**
 * Implements hook_menu()..
 */
function inline_css_checker_menu() {
  $items = array();
  
  $items['admin/content/inline-css-checker'] = array(
    'title' => 'Inline CSS Checker',
    'page callback' => 'inline_css_checker_admin_overview',
    'access arguments' => array('scan for inline css'),
    'type' => MENU_SUGGESTED_ITEM,
    'file' => 'inline_css_checker.admin.inc',
  );
  return $items;
}

function inline_css_checker_permission() {
  return array(
    'scan for inline css' => array(
      'title' => t('Scan for Inline CSS'),
      'description' => t('Allows scanning for inline CSS on the Inline CSS Checker page.'),
    ),
  );
}
