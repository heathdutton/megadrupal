<?php
/**
 * @file
 * Main code file for the Data URI Creator module.
 */

// Specify the URLs for this module.
define('DATA_URI_CREATOR_PAGE_PATH', 'data-uri-creator');
define('DATA_URI_CREATOR_CONFIG_PATH', 'admin/config/content/data-uri-creator');

// Specify the identifier for the utility page's access permission.
define('DATA_URI_CREATOR_PAGE_PERMISSION', 'access data uri creator tool');

/**
 * Implements hook_menu().
 */
function data_uri_creator_menu() {
  $items = array();

  $items[DATA_URI_CREATOR_PAGE_PATH] = array(
    'title' => 'Data URI Creator',
    'description' => 'Tool to create a Data URI, such as for embedded images.',
    'type' => MENU_NORMAL_ITEM,
    'file' => 'data_uri_creator_page.inc',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('data_uri_creator_form'),
    'access callback' => 'data_uri_creator_page_access',
  );

  $items[DATA_URI_CREATOR_CONFIG_PATH] = array(
    'title' => 'Data URI Creator settings',
    'description' => 'General configuration setting of the Data URI Creator module.',
    'type' => MENU_NORMAL_ITEM,
    'file' => 'settings_form.inc',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('data_uri_creator_settings_form'),
    'access arguments' => array('administer site configuration'),
  );

  return $items;
}

/**
 * Implements hook_help().
 */
function data_uri_creator_help($path, $arg) {
  $help = NULL;
  if ($path === ('admin/help#data_uri_creator')) {
    require_once 'data_uri_creator_help.inc';
    $help = _data_uri_creator_get_general_help();
  }

  return $help;
}

/**
 * Implements hook_permission().
 */
function data_uri_creator_permission() {
  $permissions = array();
  $url_options = array('attributes' => array('target' => '_blank'));
  $permissions[DATA_URI_CREATOR_PAGE_PERMISSION] = array(
    'title' => t('Use the creator tool'),
    'description' => t(
      'Allows specific users to access the !utility_page. Public access can also be configured on the !settings_page. Furthermore, site administrators will have access in general.',
      array(
        '!utility_page' => l(t('utility page'), DATA_URI_CREATOR_PAGE_PATH, $url_options),
        '!settings_page' => l(t('settings page'), DATA_URI_CREATOR_CONFIG_PATH),
      )
    ),
  );

  return $permissions;
}

/**
 * Determines whether the user has access to the Data URI Creator page.
 *
 * @param object $account
 *   (optional) A parameter to specify the account to check; defaults to the
 *   currently logged-in user.
 *
 * @return bool
 *   TRUE when the page is available; otherwise FALSE.
 */
function data_uri_creator_page_access($account = NULL) {
  return (user_access(DATA_URI_CREATOR_PAGE_PERMISSION, $account)
    || DataUriCreatorSettings::getPagePublicFlag()
    || user_access('administer site configuration', $account)
    || user_access('access administration pages', $account));
}
