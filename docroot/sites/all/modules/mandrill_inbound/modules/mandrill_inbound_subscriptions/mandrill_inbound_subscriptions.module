<?php
/**
 * @file
 * Integration Mandrill Inbound with Subscriptions.
 */

/**
 * Implements hook_mail_alter()
 */
function mandrill_inbound_subscriptions_mail_alter(array &$message) {
  if ($message['module'] == 'subscriptions_mail') {
    $message['headers']['Reply-To'] = mandrill_inbound_make_email_address('subscriptions_mail', $message['params']['data']['node']->nid);
  }
}