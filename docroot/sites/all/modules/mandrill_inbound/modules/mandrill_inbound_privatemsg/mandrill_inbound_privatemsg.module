<?php
/**
 * @file
 * Integration Mandrill Inbound with Privatemsg.
 */

/**
 * Implements hook_mail_alter()
 */
function mandrill_inbound_privatemsg_mail_alter(array &$message) {
  if ($message['module'] == 'pm_email_notify' && $message['key'] == 'notice') {
    $message['headers']['Reply-To'] = mandrill_inbound_make_email_address('pm_email_notify', $message['params']['message']->thread_id);
  }
}
