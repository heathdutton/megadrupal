<?php

function show_field_info_form_field_ui_display_overview_form_alter(&$form, $form_state) {
  if (!empty($form['fields'])) {
    foreach ($form['fields'] as $field_name => $field_element) {
      if (isset($field_element['human_name']['#markup'])) {
        $form['fields'][$field_name]['human_name']['#markup'] .= ' <small style="margin-left: 20px;">' . $field_name . '</small>';
      }
    }
  }
}

function show_field_info_form_field_ui_field_overview_form_alter(&$form, $form_state) {
  if (!empty($form['fields'])) {
    foreach ($form['fields'] as $field_name => $field_element) {
      if ((isset($field_element['field_name']['#markup'])) && (isset($field_element['#row_type'])) && ($field_element['#row_type'] === 'field')) {
        $field = field_info_field($field_name);
        $instance = field_info_instance($form['#entity_type'], $field_name, $form['#bundle']);
        $cardinality = $field['cardinality'];
        if ($cardinality < 0) {
          $cardinality = '&infin;';
        }
        if (!empty($instance['required'])) {
          $cardinality .= ' *';
        }
        $form['fields'][$field_name]['type']['#suffix'] = ' <span style="margin-left: 20px;">' . $cardinality . '</span>';
      }
    }
  }
}
