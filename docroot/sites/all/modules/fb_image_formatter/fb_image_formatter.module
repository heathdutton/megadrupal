/**
 * Implements hook_field_formatter_info().
 */
function fb_image_formatter_field_formatter_info() {
  return array(
    'fb_image_formatter' => array(
        'label' => t('Facebook Album Image View'),
        'description' => t('Images will look similar to the way Facebook displays them.'),
        'field types' => array('image'),
    ),
  );
}

/**
 * Implements hook_field_formatter_view().
 */
function fb_image_formatter_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array('#images' => array(), '#theme' => 'fb_image_formatter');
  foreach ($items as $delta => $item) {
    $element['#images'][$delta] = array(
      '#item' => $item,
    );
  }
  return $element;
}

/**
 * Implements hook_theme().
 */
function fb_image_formatter_theme($existing, $type, $theme, $path) {
  return array(
    'fb_image_formatter' => array(
      'render element' => 'element',
      'path' => drupal_get_path('module', 'fb_image_formatter'),
      'template' => 'fb_image_formatter',
    ),
  );
}

/**
 * Implements hook_preprocess_HOOK().
 */
function fb_image_formatter_preprocess_fb_image_formatter(&$variables) {
  drupal_add_css(drupal_get_path('module', 'fb_image_formatter') . '/fb_image_formatter.css', array('type' => 'file'));
  foreach ($variables['element']['#images'] as $delta => $image) {
    $variables['images'][$delta] = array(
      'thumbnail' => image_style_url('fb_image_thumbnail', $image['#item']['uri']),
      'original' => file_create_url($image['#item']['uri']),
      'album' => $variables['element']['#object']->title,
    );
  }
}

/**
 * Implements hook_image_default_styles().
 */
function fb_image_formatter_image_default_styles() {
  return array(
      'fb_image_thumbnail' => array(
          'label' => 'Facebook Image Thumbnail',
          'effects' => array(
            array(
                'name' => 'image_scale',
                'data' => array(
                    'height' => 200,
                ),
                'weight' => 0,
            ),
          ),
      ),
  );
}
