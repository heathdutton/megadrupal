/**
 * Function to get API Settings from Drupal Variables. 
 */
function _cleverreach_get_settings() {
  $cr_api = array(
    'key' => variable_get('cleverreach_api_key', ''),
    'url' => variable_get('cleverreach_wsdl_url', ''),
  );

  if (empty($cr_api["key"]) || empty($cr_api["url"])) {
    watchdog('CleverReach', 'api settings are incomplete');
    return FALSE;
  }
  else {
    return $cr_api;
  }

}

/**
 * Implements hook_cron().
 */
function cleverreach_cron() {
  $queue = DrupalQueue::get('cleverreach_group_update_cron');
  $queue->createItem(array());
}

/**
 * Implements hook_cron_queue_info().
 */
function cleverreach_cron_queue_info() {
  $queues['cleverreach_group_update_cron'] = array(
    'worker callback' => '_cleverreach_group_update',
    'time' => 120,
  );
  return $queues;
}

/**
 * Main function for importing groups from cleverreach api. 
 */
function _cleverreach_group_update() {
  $settings = _cleverreach_get_settings();

  if (is_array($settings)) {
    $api = new SoapClient($settings["url"]);
    $result = $api->groupGetList($settings["key"]);

    if ($result->status == 'SUCCESS') {
      db_truncate('cleverreach_groups')->execute();
      $query = db_insert('cleverreach_groups')->fields(array(
        'crgid',
        'name',
        'attributes',
        'active_count',
        'inactive_count',
        'last_mailing',
        'last_changed',
      ));

      foreach ($result->data as $value) {
        $attr = array();
        $details = $api->groupGetDetails($settings["key"], $value->id);

        foreach ($details->data->attributes as $valued) {
          array_push($attr, array(
            'key' => $valued->key,
            'type' => $valued->type,
            'variable' => $valued->variable,
          ));
        }

        $attr = serialize($attr);
        $query->values(array(
          'crgid' => $value->id,
          'name' => $value->name,
          'attributes' => $attr,
          'active_count' => $value->count,
          'inactive_count' => $value->inactive_count,
          'last_mailing' => $value->last_mailing,
          'last_changed' => $value->last_changed,
        ));
      }

      $query->execute();
      variable_set('cleverreach_last_group_fetch', time());
      watchdog('CleverReach', 'groups updated successfully');
      drupal_set_message(t('CleverReach groups updated successfully'));
    }
    else {
      watchdog('CleverReach', 'group update failed');
      drupal_set_message(t('CleverReach group update failed'), 'error');
    }

  }
  else {
    drupal_set_message(t('CleverReach group update failed'), 'error');
  }

}

/**
 * Function to get a group name by id. 
 */
function _cleverreach_get_group_name($listid) {

  if (empty($listid) || !is_numeric($listid)) {
    return FALSE;
  }
  else {
    $name = db_query('SELECT g.name FROM {cleverreach_groups} g WHERE g.crgid = :listid', array(':listid' => $listid))->fetchField();
    return $name;
  }

}

/**
 * Implements hook_block_info().
 */
function cleverreach_block_info() {
  $blocks = array();
  $results = db_query('SELECT * FROM {cleverreach_block_forms} bf WHERE bf.active = 1');

  foreach ($results as $result) {
    $blocks['cr_block_' . $result->bid] = array(
      'info' => t('CleverReach: @grpname', array('@grpname' => _cleverreach_get_group_name($result->listid))),
      'cache' => DRUPAL_NO_CACHE,
    );
  }

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function cleverreach_block_view($delta = '') {
  $block = array();

  if (substr($delta, 0, 9) == 'cr_block_') {
    $tmp = explode("_", $delta);

    if (is_numeric($tmp[2])) {
      $result = db_query('SELECT * FROM {cleverreach_block_forms} bf WHERE bf.bid = :bid AND bf.active = 1', array(':bid' => $tmp[2]))->fetchAssoc();
      $block['subject'] = t('CleverReach: @grpname', array('@grpname' => _cleverreach_get_group_name($result['listid'])));
      $block['content'] = drupal_get_form('_cleverreach_build_block_form_' . $result['bid']);
    }

  }

  return $block;
}

/**
 * Function for buildung the subscribing blockform. 
 */
function _cleverreach_build_block_form($form, &$form_state) {
  $form = array();
  $form['#tree'] = TRUE;
  $tmp = explode("_", $form_state['build_info']['form_id']);
  $bid = is_numeric($tmp[5]) ? $tmp[5] : 0;
  $form['cr_form_wrapper'] = array(
    '#markup' => '',
  );
  $form['cr_form_wrapper']['cr_block_bid'] = array(
    '#type' => 'hidden',
    '#value' => $bid,
  );
  $form['cr_form_wrapper'][$bid]['cr_block_mail_' . $bid] = array(
    '#type' => 'textfield',
    '#title' => t('E-Mail:'),
    '#required' => 1,
    '#size' => 25,
  );
  $fields = db_query('SELECT bf.fields FROM {cleverreach_block_forms} bf WHERE bf.bid = :bid', array(':bid' => $bid))->fetchField();
  $un_fields = unserialize($fields);

  if (count($un_fields) > 0 && !empty($un_fields)) {

    foreach ($un_fields as $value) {

      if ($value["active"] == 1) {
        $form['cr_form_wrapper'][$bid]['cr_block_' . $value["name"] . '_' . $bid] = _cleverreach_build_block_field($value);
      }

    }

  }

  $form['cr_form_wrapper'][$bid]['cr_block_submit'] = array(
    '#type' => 'submit',
    '#value' => t('subscribe'),
    '#validate' => array('_cleverreach_group_assign_validate'),
    '#submit' => array('_cleverreach_group_assign'),
  );
  return $form;
}

/**
 * AJAX Callback function. 
 */
function _cleverreach_block_form_js($form, &$form_state) {
  return $form['cr_form_wrapper'];
}

/**
 * Implements hook_forms().
 */
function cleverreach_forms($form_id, $args) {
  $forms = array();

  if (substr($form_id, 0, 30) == '_cleverreach_build_block_form_') {
    $forms[$form_id] = array('callback' => '_cleverreach_build_block_form');
  }

  return $forms;
}

/**
 * Implements hook_form_validate().
 */
function _cleverreach_group_assign_validate($form, &$form_state) {
  $bid = $form_state['values']['cr_form_wrapper']['cr_block_bid'];

  if (!valid_email_address($form_state['values']['cr_form_wrapper'][$bid]['cr_block_mail_' . $bid])) {
    form_set_error('cr_form_wrapper][' . $bid . '][cr_block_mail_' . $bid, t('Please enter a valid email address.'));
  }

}

/**
 * Function for assign a customer to a group. 
 */
function _cleverreach_group_assign($form, &$form_state) {
  $source = variable_get('site_name', "CleverReach Drupal Module");
  $listid = db_query('SELECT bf.listid FROM {cleverreach_block_forms} bf WHERE bf.bid = :bid', array(':bid' => $form_state['values']['cr_form_wrapper']['cr_block_bid']))->fetchField();
  $fields = db_query('SELECT bf.fields FROM {cleverreach_block_forms} bf WHERE bf.bid = :bid', array(':bid' => $form_state['values']['cr_form_wrapper']['cr_block_bid']))->fetchField();
  $un_fields = unserialize($fields);
  $attr = array();

  if (count($un_fields) > 0) {

    foreach ($un_fields as $value) {

      if ($value["active"] == 1) {

        if ($value["display"] == "date") {
          $year = $form_state['values']['cr_form_wrapper'][$form_state['values']['cr_form_wrapper']['cr_block_bid']]['cr_block_' . $value["name"] . '_' . $form_state['values']['cr_form_wrapper']['cr_block_bid']]['year'];
          $month = $form_state['values']['cr_form_wrapper'][$form_state['values']['cr_form_wrapper']['cr_block_bid']]['cr_block_' . $value["name"] . '_' . $form_state['values']['cr_form_wrapper']['cr_block_bid']]['month'];
          $day = $form_state['values']['cr_form_wrapper'][$form_state['values']['cr_form_wrapper']['cr_block_bid']]['cr_block_' . $value["name"] . '_' . $form_state['values']['cr_form_wrapper']['cr_block_bid']]['day'];
          $attr[] = array('key' => $value["name"], 'value' => $year . "-" . $month . "-" . $day);
        }
        else {
          $attr[] = array('key' => $value["name"], 'value' => $form_state['values']['cr_form_wrapper'][$form_state['values']['cr_form_wrapper']['cr_block_bid']]['cr_block_' . $value["name"] . '_' . $form_state['values']['cr_form_wrapper']['cr_block_bid']]);
        }

      }

    }

  }

  if (count($attr) > 0) {
    $user = array(
      "email" => $form_state['values']['cr_form_wrapper'][$form_state['values']['cr_form_wrapper']['cr_block_bid']]['cr_block_mail_' . $form_state['values']['cr_form_wrapper']['cr_block_bid']],
      "registered" => time(),
      "activated" => time(),
      "source" => $source,
      "attributes" => $attr,
    );
  }
  else {
    $user = array(
      "email" => $form_state['values']['cr_form_wrapper'][$form_state['values']['cr_form_wrapper']['cr_block_bid']]['cr_block_mail_' . $form_state['values']['cr_form_wrapper']['cr_block_bid']],
      "registered" => time(),
      "activated" => time(),
      "source" => $source,
    );
  }

  $settings = _cleverreach_get_settings();
  $api = new SoapClient($settings["url"]);
  $result = $api->receiverAdd($settings["key"], $listid, $user);

  if ($result->status == "SUCCESS") {
    drupal_set_message(t('Your submission was successfully.'));
  }
  else {
    drupal_set_message(t('Error: Your submission failed.'), 'error');
  }

}

/**
 * Function for buildung the blockform fields. 
 */
function _cleverreach_build_block_field($field_data) {
  $field = array(
    '#title' => ucfirst($field_data["name"]) . ":",
    '#required' => $field_data["required"],
  );

  if ($field_data["display"] == "textfield") {
    $field['#type'] = 'textfield';
    $field['#size'] = 25;
    $field['#default_value'] = isset($field_data["display_options"]) ? $field_data["display_options"] : '';
  }

  elseif ($field_data["display"] == "select") {
    $field['#type'] = 'select';
    $field['#multiple'] = FALSE;
    $options = explode("\n", $field_data["display_options"]);
    $select_options = array();

    foreach ($options as $value) {
      $tmp = explode("|", $value);

      if (count($tmp) == 2) {
        $select_options[trim($tmp[0])] = trim($tmp[1]);
      }

      else {
        $select_options[trim($tmp[0])] = trim($tmp[0]);
      }

    }

    $field['#options'] = isset($select_options) ? $select_options : array();
  }

  elseif ($field_data["display"] == "date") {
    $field['#type'] = 'date';
  }

  else {
    $field['#type'] = 'textfield';
  }

  return $field;
}

