<?php

/**
 * Implements hook_form_BASE_FORM_ID_alter().
 */
function required_node_author_form_node_form_alter(&$form, &$form_state, $form_id){
  // Turns 'authored by' field required.
  $form['author']['name']['#required'] = TRUE;
  $form['author']['name']['#description'] = t('You must select a user to be the author of this content.');
}
