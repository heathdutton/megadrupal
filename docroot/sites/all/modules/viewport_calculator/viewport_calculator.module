<?php


/**
 * Set the permission options
 */
function viewport_calculator_permission() {
  return array(
    'viewport calculator' => array(
      'title' => t('Viewport calculator'),
      'description' => t('View viewport calculator on bottom right of browser.'),
    ),
  );
}


/**
 * Add script to display viewport calculation in browser
 */
function viewport_calculator_preprocess_page(&$vars, $hook) {

  if (user_access('viewport calculator')) {
    drupal_add_js(drupal_get_path('module', 'viewport_calculator') .'/viewport_calculator.js');
    $vars['scripts'] = drupal_add_js();
  }

}
