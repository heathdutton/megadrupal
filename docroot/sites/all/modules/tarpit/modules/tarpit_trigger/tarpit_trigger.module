<?php

/**
 * Implements hook_tarpit_reaction().
 */
function tarpit_trigger_tarpit_reaction($arguments) {
  $actions = (array) trigger_get_assigned_actions('tarpit_detection');
  actions_do(array_keys($actions), NULL, array());
}

/**
 * Implements hook_trigger_info().
 */
function tarpit_trigger_trigger_info() {
  return array(
    'tarpit' => array(
      'tarpit_detection' => array(
        'label' => t('React when someone is caught.')
      )
    )
  );
}

/**
 * Implements hook_action_info().
 */
function tarpit_trigger_action_info() {
  return array(
    'tarpit_trigger_sleep' => array(
      'type' => 'system',
      'label' => t('Slow down the render of the page'),
      'configurable' => TRUE,
      'triggers' => array('any'),
    ),
  );
}

/**
 * Implements form defined in hook_action_info().
 */
function tarpit_trigger_sleep_form($context) {
  return array(
    'sleep_min' => array(
      '#type' => 'textfield',
      '#title' => t('Sleep minimum time in second'),
      '#default_value' => isset($context['sleep_min']) && is_numeric($context['sleep_min']) ? $context['sleep_min'] : 0,
      '#description' => t('Sleep minimum time in seconds'),
    ),
    'sleep_max' => array(
      '#type' => 'textfield',
      '#title' => t('Sleep maximum time in second'),
      '#default_value' => isset($context['sleep_max']) && is_numeric($context['sleep_max']) ? $context['sleep_max'] : 0,
      '#description' => t('Sleep maximum time in seconds'),
    )
  );
}

/**
 * Implements form submit defined in hook_action_info().
 */
function tarpit_trigger_sleep_submit($form, $form_state) {
  return $form_state['values'];
}

/**
 * Implements the action.
 */
function tarpit_trigger_sleep(&$entity, $context = array()) {
  $sleep_min = isset($context['sleep_min']) && is_numeric($context['sleep_min']) ? $context['sleep_min'] : 0;
  $sleep_max = isset($context['sleep_max']) && is_numeric($context['sleep_max']) ? $context['sleep_max'] : 0;

  _tarpit_sleep($sleep_min, $sleep_max);
}
