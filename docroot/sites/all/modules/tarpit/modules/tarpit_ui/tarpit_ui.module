<?php

/**
 * Implements hook_menu().
 */
function tarpit_ui_menu() {
  return array(
    'admin/config/system/tarpit' => array(
      'title' => 'Tarpit configuration',
      'description' => 'Configure the tarpit settings.',
      'page callback' => 'drupal_get_form',
      'page arguments' => array('tarpit_ui_admin_settings'),
      'access arguments' => array('administer tarpit'),
      'file' => 'tarpit_ui.admin.inc',
      'type' => MENU_NORMAL_ITEM,
    )
  );
}

/**
 * Implements hook_help().
 */
function tarpit_ui_help($path) {
  switch ($path) {
    case 'admin/config/system/tarpit':
      return 'This is the configuration page of the Tarpit module.';
    }
}


/**
 * Implements hook_permission().
 */
function tarpit_ui_permission() {
  return array(
    'administer tarpit' => array(
      'title' => 'Administer Tarpit',
      'description' => 'Administer Tarpit'
    )
  );
}
