<?php

/**
 * Implements hook_crumbs_plugins().
 */
function crumbs_search_crumbs_plugins($api) {
  $api->routeMonoPlugin('search/content/%', 'searchTerm');
}

/**
 * Implementation of class hook class_CrumbsParentFinder
 * on the behalf of path module.
 */
class crumbs_search_CrumbsMonoPlugin_searchTerm implements crumbs_MonoPlugin_FindParentInterface {
  /**
   * {@inheritdoc}
   */
  function describe($api) {
    return t('Removes one "Content" breadcrumb element from the breadcrumb.');
  }
  /**
   * {@inheritdoc}
   */
  function findParent($path, $item) {
    return 'search';
  }
}
