<?php

/**
 * Implements hook_menu().
 */
function blurry_menu() {
  $items = array();

  $items['admin/config/content/blurry'] = array(
    'title' => 'Blurry',
    'description' => 'Administer Blurry',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('blurry_settings_form'),
    'access arguments' => array('administer site configuration'),
    'file' => 'blurry.admin.inc',
  );

  return $items;
}

/**
 * Implements hook_permission().
 */
function blurry_permission() {
  return array(
    'skip blurry' => array(
      'title' => t('Skip Blurry'),
    ),
  );
}

/**
 * Implements hook_preprocess_field().
 */
function blurry_preprocess_field(&$vars, $hook) {
  if (!user_access('skip blurry')) {
    $node_type = $vars['element']['#bundle'];
    $field_name = $vars['element']['#field_name'];

    $fields = variable_get('blurry_' . $node_type . '_fields', array());

    if (isset($fields[$field_name]) && $fields[$field_name]) {
      $vars['classes_array'][] = 'blurry-text';
      drupal_add_css(drupal_get_path('module', 'blurry') . '/css/blurry.css');
    }
  }
}
