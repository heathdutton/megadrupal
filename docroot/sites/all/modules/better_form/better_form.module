<?php

/**
 * @file
 * Adds configure menu; Inits actions with fields.
 */

/**
 * Implements hook_menu().
 */
function better_form_menu() {
  $items = array();
  $items['admin/config/user-interface/better-form'] = array(
    'title' => 'Better form',
    'description' => 'Configure the Better form Module.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('better_form_admin_settings_page'),
    'access arguments' => array('administer modules'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'includes/pages/better_form.admin.inc',
  );
  return $items;
}

/**
 * Implements hook_form_alter().
 */
function better_form_form_alter(&$form, &$form_state) {
  if (path_is_admin(current_path()) && !variable_get('better_form_is_enable_on_admin_pages', FALSE)) {
    return FALSE;
  }
  form_load_include($form_state, 'inc', 'better_form', 'includes/better_form.api');
  // Add js script for checkboxes and radios inputs.
  $form['#attached']['js'][] = drupal_get_path('module', 'better_form') . '/theme/js/better_form.js';
  // Add required attributes.
  better_form_add_required_attribute_fields($form);
  if (variable_get('better_form_placeholder_is_enable', FALSE)) {
    // Add placeholder attributes.
    better_form_add_placeholder_attribute_fields($form);
  }
}
