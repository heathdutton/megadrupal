<?php
/**
 * @file
 * Hidey Help module code
 */

define('HIDEY_HELP_PERMISSION', 'hide and show help');

/**
 * Implementation of hook_init().
 * Add a javascript to automatically hide page help
 * Add a style sheet for the hidey help element
 */
function hidey_help_init() {
  if (user_access(HIDEY_HELP_PERMISSION)) {
    $mod = drupal_get_path('module', 'hidey_help');
    drupal_add_js($mod .'/hidey_help.js');
    drupal_add_css($mod .'/hidey_help.css');
  }
}

function hidey_help_perm() {
  return array(HIDEY_HELP_PERMISSION);
}
