<?php

/**
 * @file
 * Installation file for CiviCRM Base Jumper
 */

/**
 * Implementation of hook_install()
 */
function civicrm_base_jumper_install() {
  variable_set('civicrm_configpath', '');
}

/**
 * Implementation of hook_install()
 */
function civicrm_base_jumper_uninstall() {
  variable_del('civicrm_configpath');
}