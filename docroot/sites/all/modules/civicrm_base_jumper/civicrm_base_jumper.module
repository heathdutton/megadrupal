<?php

/**
 * @file
 * Module file for CiviCRM Base Jumper
 */

/**
 * Implementation of hook_init().
 */
function civicrm_base_jumper_init() {
  if (module_exists('civicrm')) {
    if (civicrm_initialize()) {
      $config = CRM_Core_Config::singleton(true, true);
      if (variable_get('civicrm_configpath', $config->configAndLogDir) != $config->configAndLogDir) {
        $configFile = $config->configAndLogDir . 'Config.IDS.ini';
        @unlink($configFile);
        variable_set('civicrm_configpath', $config->configAndLogDir);
      }
    }
  }
}