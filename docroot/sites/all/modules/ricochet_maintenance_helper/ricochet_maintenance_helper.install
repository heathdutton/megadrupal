<?php
/**
 * @file Install file for the Ricochet Maintenance Helper
 */

/**
 * Implements hook_install().
 */
function ricochet_maintenance_helper_install() {
  variable_set(RMH_STATUS, RMH_STATUS_WARNING);
  variable_set('ricochet_maintenance_helper_listen', FALSE);
  variable_set('ricochet_maintenance_helper_send', TRUE);
  $settings_url = l('admin/config/system/ricochet_maintenance_helper', '/admin/config/system/ricochet_maintenance_helper');
}
