<?php

/**
 * @file
 * Zip Alerts Module.
 */

/**
 * Implements hook_views_api().
 */
function zipalerts_views_api() {
  return array(
    'api' => 3.0,
    'path' => drupal_get_path('module', 'zipalerts') . '/includes',
  );
}

/**
 * Implements hook_help().
 */
function zipalerts_help($path, $arg) {
  switch ($path) {
    case 'admin/help#zipalerts':
      $output = file_get_contents(drupal_get_path('module', 'zipalerts') . '/README.txt');
      return module_exists('markdown') ? filter_xss_admin(module_invoke('markdown', 'filter', 'process', 0, -1, $output)) : '<pre>' . check_plain($output) . '</pre>';
  }
}
