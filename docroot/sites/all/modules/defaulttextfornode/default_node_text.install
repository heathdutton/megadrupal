<?php

/**
 * @file
 * Install file for the Default node text module.
 */

/**
 * Implementation of hook_uninstall().
 */
function default_node_text_uninstall() {
  $content_types = node_type_get_types();
  foreach ($content_types as $key => $info) {
    variable_del('default_text_' . $key);
  }
  drupal_set_message(t('defaultTextForNode module successfully uninstalled'));
}
