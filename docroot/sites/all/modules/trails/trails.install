<?php
/**
 * @file
 * Installer for Trails.
 */

/**
 * Implements hook_install().
 */
function trails_install() {
  variable_set('trails_breadcrumb', TRUE);
  variable_set('trails_breadcrumb_home', TRUE);
}

/**
 * Implements hook_uninstall().
 */
function trails_uninstall() {
  variable_del('trails_breadcrumb');
  variable_del('trails_breadcrumb_home');
}
