<?php
/**
 * @file
 * Black & White flag iconsets for Country Icons.
 */

/**
 * Implements hook_iconset_info().
 */
function countryicons_bw_iconset_info() {
  $iconsets = array();

  $iconset = new stdClass();
  $iconset->key = 'bw_small';
  $iconset->name = t('Black & White (small)');
  $iconset->description = t('Black & White Flag Icon Set (small, 16x16)');
  $iconset->width = '16';
  $iconset->height = '16';
  $iconset->extension = 'png';
  $iconset->path = drupal_get_path('module', 'countryicons_bw') . '/bw-small';
  $iconsets[$iconset->key] = $iconset;

  $iconset = new stdClass();
  $iconset->key = 'bw_large';
  $iconset->name = t('Black & White (large)');
  $iconset->description = t('Black & White Flag Icon Set (large, 64x64)');
  $iconset->width = '64';
  $iconset->height = '64';
  $iconset->extension = 'png';
  $iconset->path = drupal_get_path('module', 'countryicons_bw') . '/bw-large';
  $iconsets[$iconset->key] = $iconset;

  return $iconsets;
}
