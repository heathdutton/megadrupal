/**
 * Implemements hook_form_FORM_ID_alter().
 *
 * Change the default views edit behaviour to override the current
 * display instead of applying to all except overridden.
 */
function unreasonable_defaults_alter_form_views_ui_edit_display_form_alter(&$form, &$form_state, $form_id) {
  $form['override']['dropdown']['#default_value'] = $form_state['display_id'];
}
