<?php

/**
 * @file
 * Rijksoverheid Cookie Opt-in Log main module functions.
 */

/**
 * Implements hook_permission().
 */
function ro_cookie_opt_in_log_permission() {
  return array(
    'view cookie logs' => array(
      'title' => t('View the Rijksoverheid Cookie Opt-in logs'),
      'description' => t('View the logs of the Rijksoverheid Cookie Opt-in module.'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function ro_cookie_opt_in_log_menu() {
  $items['admin/reports/cookielog'] = array(
    'title' => 'Rijksoverheid Cookie Opt-in Log',
    'description' => 'View the cookie consent log.',
    'page callback' => 'ro_cookie_opt_in_log_report',
    'access arguments' => array(
      'view cookie logs',
    ),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'ro_cookie_opt_in_log.pages.inc',
    'file path' => drupal_get_path('module', 'ro_cookie_opt_in_log') . '/includes',
  );

  return $items;
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function ro_cookie_opt_in_log_form_ro_cookie_opt_in_settings_form_alter(&$form, &$form_state, $form_id) {
  // Add a link to the cookie log in the module configuration form.
  $form['general']['ro_cookie_opt_in_log_enabled']['#description'] = $form['general']['ro_cookie_opt_in_log_enabled']['#description'] . ' ' .  l(t('View the cookie log'), 'admin/reports/cookielog');
}
