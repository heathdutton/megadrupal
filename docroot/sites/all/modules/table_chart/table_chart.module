      array('table_chart', 'morrisjs'),
      // Require our other library.
      array('table_chart', 'tabletojson'),
    ),
  );
  // Raphael
  $libraries['raphaeljs'] = array(
    'title' => 'Raphael',
    'version' => '2.1.2',
    'website' => 'http://raphaeljs.com/',
    'js' => array(
      libraries_get_path('raphael') . '/raphael-min.js' => array(
        'scope' => 'footer',
      ),
