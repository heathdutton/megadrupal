/**
 * Implements hook_cron().
 */
function datasources_cron() {
  foreach (datasources_inputs_info() as $input_id => $input_info) {
    if ($input_info['ready'] && $input_info['cron']) {
      datasources_import($input_id, $input_info['max']);
    }
  }
}

