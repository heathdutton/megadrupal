/**
 * Gets the last imported steps record.
 *
 * @return Object
 *   The last recorded steps record (timestamp, source_id only)
 */
function qd_core_steps_get_latest_entry($uid, $service_id) {
  $query = 'SELECT id, timestamp, source_id from {qd_core_steps} ';
  $query .= 'WHERE uid=:uid AND service_id=:service_id ';
  $query .= 'ORDER BY timestamp DESC LIMIT 1';

  $params = array(
    ':uid' => $uid,
    ':service_id' => $service_id,
  );

  $result = db_query($query, $params);

  return $result->fetchObject();
}


function qd_core_steps_create($uid, $timestamp, $utc_offset, $source_id, $steps, $service_id) {
  $entity = entity_create('qd_core_steps', array('type' => 'qd_core_steps'));
  $entity->uid = $uid;
  $entity->timestamp = $timestamp;
  $entity->utc_offset = $utc_offset;
  $entity->source_id = $source_id;
  $entity->total_steps = $steps;
  $entity->service_id = $service_id;

  return $entity;
}



