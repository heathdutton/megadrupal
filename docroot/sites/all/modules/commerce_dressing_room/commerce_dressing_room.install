<?php

/**
 * @file
 * Add/remove fields for the commerce dressing room module.
 *
 * @ingroup commerce_dressing_room
 */

/**
 * Implements hook_enable().
 */
function commerce_dressing_room_enable() {
  // Add fields on product and product_display.
  commerce_dressing_room_add_fields();
}

/**
 * Implements hook_uninstall().
 */
function commerce_dressing_room_uninstall() {
  // Delete fields.
  commerce_delete_field('cdr_image_without_gb');
}
