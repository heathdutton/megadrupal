name = WrpStarter
description = A starting point for the flexible, recolorable theme, based on a unique color picker system and grid 960 framework. It provides unlimited color variations and allows to re-arrange columns order and width. It is a child of Wrapped Sites base theme, developed by <a href="http://www.wrappedsites.com">wrappedsites.com</a>.
core = 7.x
engine = phptemplate
screenshot = screenshot.png

; Core 960gs stylesheets.
; All the .css files within the "960_grid_system" directory will be placed before all others.


;main settings:
base theme = wrappedsites
stylesheets[all][] = css/style.css

regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[highlighted] = Highlighted
regions[content] = Content
regions[header] = Header
regions[footer] = Footer


features[] = name
features[] = slogan
features[] = mission
features[] = main_menu
features[] = search
features[] = favicon
features[] = logo

;forms theme settings:
settings[colors_form] = '1'
settings[grid_form] = '1'

;grid settings:
settings[grid_cols] = '12'

settings[grid_sidebar][sidebar_first][enable] = '1'
settings[grid_sidebar][sidebar_first][position] = 'left'
settings[grid_sidebar][sidebar_first][width] = '3'
settings[grid_sidebar][sidebar_first][weight] = '3'

settings[grid_sidebar][sidebar_second][enable] = '1'
settings[grid_sidebar][sidebar_second][position] = 'right'
settings[grid_sidebar][sidebar_second][width] = '3'
settings[grid_sidebar][sidebar_second][weight] = '3'

;colors settings:

;adding color pickers in theme settings form:
settings[color_picker][default][header-background-color][Colors for header background][Colors for header background]='547B97'
settings[color_picker][default][footer-background-color][Colors for footer background][Colors for footer background]='212B40'
settings[color_picker][default][content-background-color][Colors for content background][Colors for content background]='DDEEEE'
settings[color_picker][default][body-background-color][Colors for body background][Colors for body background]='F2F9E3'

settings[color_picker][default][text-header-color][Colors for header Fonts][Colors for header Fonts]='FFFFFF'
settings[color_picker][default][text-footer-color][Colors for footer Fonts][Colors for footer Fonts]='FFFFFF'
settings[color_picker][default][text-content-color][Colors for content Fonts][Colors for content Fonts]='444444'

;colors config file (css selectors for color pickers) :
settings[color_file][default]='css/colors-config.css'

;apply colors in theme:
settings[colors_status]='1'

 




