name = Wrapped Sites
description = <strong>Do not enable this theme!</strong> This is a robust parent theme which provides a unique color picker system and the ability to utilize the benefits of the grid 960 framework. It is a base for the themes with the unlimited number of color variations and adjustable columns. Developed by <a href="http://www.wrappedsites.com">wrappedsites.com</a>.
core = 7.x
engine = phptemplate
screenshot = screenshot.png

; Core 960gs stylesheets.
; All the .css files within the "960_grid_system" directory will be placed before all others.

stylesheets[all][] = css/960_grid_system/reset.css
stylesheets[all][] = css/960_grid_system/960.css
stylesheets[all][] = css/style.css


regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[highlighted] = Highlighted
regions[content] = Content
regions[header] = Header
regions[footer] = Footer


features[] = name
features[] = slogan
features[] = mission
features[] = main_menu
features[] = search
features[] = favicon
features[] = logo

;forms theme settings:
settings[colors_form] = '0'
settings[grid_form] = '0'

;grid settings:
settings[grid_cols] = '12'

settings[grid_sidebar][sidebar_first][enable] = '1'
settings[grid_sidebar][sidebar_first][position] = 'left'
settings[grid_sidebar][sidebar_first][width] = '3'
settings[grid_sidebar][sidebar_first][weight] = '3'

settings[grid_sidebar][sidebar_second][enable] = '1'
settings[grid_sidebar][sidebar_second][position] = 'left'
settings[grid_sidebar][sidebar_second][width] = '3'
settings[grid_sidebar][sidebar_second][weight] = '3'

;colors settings:

;colors config file:
;settings[color_file][default]='css/colors-config.css'

;apply colors in theme:
settings[colors_status]='0'





