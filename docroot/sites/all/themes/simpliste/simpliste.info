regions[featured]       = Featured
regions[content]        = Content
regions[help]           = Help
regions[content_bottom] = Content bottom
regions[footer]         = Footer

;//-- Theme Setting Defaults
; Breadcrumb
settings[breadcrumb][display]      = 1
settings[breadcrumb][separator]    = ' &#187; '
settings[breadcrumb][home]         = 1
settings[breadcrumb][title]        = 1
; Skin
settings[active_skin]              = 'simplesoft'
; Layout
settings[sidebar_position]         = 'right'
settings[sidebar_visibility]       = 0
settings[sidebar_pages]            = 'node/*/edit'
; Development
settings[wireframes]               = 0
settings[rebuild_registry]         = 0
settings[settings_form]            = 1
settings[timer]                    = 0
; Form
settings[hide_format_node_form]    = 0
settings[hide_format_comment_form] = 0
; Miscellaneous
settings[head_code]                = ''
