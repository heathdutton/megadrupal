name = Bootstrap Agency
description = This one page Drupal theme is based on Start Bootstrap Agency Template. http://ironsummitmedia.github.io/startbootstrap-agency/
core = 7.x
base theme = bootstrap

settings[bootstrap_navbar_position] = 'fixed-top'

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Page splash'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footerl]        = 'Footer left'
regions[footerc]        = 'Footer center'
regions[footerr]        = 'Footer right'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'
regions[contact]        = 'Contact'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

;;stylesheets[all][] = css/bootstrap_agency.css
stylesheets[all][] = css/bootstrap_agency.min.css

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;
scripts[] = js/bootstrap_agency.js
;; include a modified version of bootstrap.js because of [#2162165]
scripts[] = js/bootstrap.js

fonts[google_fonts_api][] = "Droid Serif&subset=latin#700"
fonts[google_fonts_api][] = "Droid Serif&subset=latin#700italic"
fonts[google_fonts_api][] = "Droid Serif&subset=latin#italic"
fonts[google_fonts_api][] = "Droid Serif&subset=latin#regular"
fonts[google_fonts_api][] = "Kaushan Script&subset=latin#regular"
fonts[google_fonts_api][] = "Montserrat&subset=latin#700"
fonts[google_fonts_api][] = "Montserrat&subset=latin#regular"
fonts[google_fonts_api][] = "Roboto Slab&subset=latin#100"
fonts[google_fonts_api][] = "Roboto Slab&subset=latin#300"
fonts[google_fonts_api][] = "Roboto Slab&subset=latin#700"
fonts[google_fonts_api][] = "Roboto Slab&subset=latin#regular"

