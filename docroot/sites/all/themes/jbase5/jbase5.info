; $Id$

; Theme Info -----------------------------------------------------------------
; required information about the theme

name = jBase5
description = jBase5 theme for Drupal 7 which converts the core template files to HTML5 markup.
core = 7.x
engine = phptemplate

; Stylesheets  ---------------------------------------------------------------
; We use [screen] instead of [all] to avoid browser styles affecting 
; other media types. IE stylesheets are loaded through template.php

; Theme stylesheet
stylesheets[screen][] = css/html5.css
;stylesheets[screen][] = css/fontface.css
stylesheets[screen][] = css/style.css
;stylesheets[screen][] = css/handheld.css

; Theme stylesheet - Print
;stylesheets[print][] = css/print.css

; Scripts --------------------------------------------------------------------
; html5.js is required for IE to understand the new elements like article
; http://remysharp.com/2009/01/07/html5-enabling-script/

scripts[] = js/modernizr-1.7.min.js
;scripts[] = js/webfontloader.js
scripts[] = js/jbase5-theme-script.js

; Plugins --------------------------------------------------------------------
;plugins[panels][layouts] = plugins/layouts
;plugins[panels][styles] = plugins/styles

; Regions --------------------------------------------------------------------
; These content regions are available for block placement
; Some are special hidden regions: page_top, page_bottom, and help

regions[search] = Search
regions[primary_navigation] = Primary Navigation
regions[secondary_navigation] = Secondary Navigation
regions[highlighted] = Highlighted
regions[preface_first] = Preface first
regions[preface_second] = Preface second
regions[preface_third] = Preface third
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[page_node_top] = Page node top
regions[page_node_bottom] = Page node bottom
regions[help] = Help
regions[content] = Content
regions[postscript_top] = Postscript top
regions[postscript_first] = Postscript first
regions[postscript_second] = Postscript second
regions[postscript_third] = Postscript third
regions[footer_first] = Footer first
regions[footer_second] = Footer second
regions[footer_third] = Footer third

; Options --------------------------------------------------------------------
; These are the checkboxes that are available on the theme settings page.

; These are the stock options
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = comment_user_verification
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; Fusion Accelerator - http://drupal.org/project/fusion_accelerator
fusion[api] = 2
fusion[directory] = skins
stylesheets[all][] = skins/general/css/general.css
