name = Bootstrap Sub-theme
description = A Bootstrap Sub-theme.
core = 7.x
base theme = strapped


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[breadcrumb]     = 'Breadcrumb'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css
exclude[css][] = 'sites/all/themes/bootstrap/css/overrides.css'

; For information on choosing the desired method, please read the Drupal
; Bootstrap sub-theme "how-to" documentation:
; https://drupal.org/node/1978010

; ;----------------------------------
; ; METHOD 1: Bootstrap Source Files
; ;----------------------------------
;
; ;;;;;;;;;;;;;;;;;;;;;
; ;; Scripts
; ;;;;;;;;;;;;;;;;;;;;;
;
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/affix.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/alert.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/button.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/carousel.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/collapse.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/dropdown.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/modal.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/tooltip.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/popover.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/scrollspy.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/tab.js'
scripts[] = '../../../all/libraries/bootstrap-sass/assets/javascripts/bootstrap/transition.js'

scripts[] = 'js/custom.js'

;
; ; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''


; ;-------------------------
; ; METHOD 2: Bootstrap CDN
; ;-------------------------
;
; Method 2 uses BootstrapCDN, the only thing you might need to provide here
; is overrides to Bootstrap theme settings. Copy them here from the base theme
; to override.
