name        = Sizzle
description = A starter theme for Open Restaurant based on <a href="http://drupal.org/project/radix">Radix</a>.
screenshot  = screenshot.png
core        = 7.x

; Base - Radix
base theme  = restaurant_radix

; Regions
regions[content] = Content

; Panels
plugins[panels][layouts] = layouts
plugins[panels][styles] = styles

; Breakpoints
breakpoints[xs] = (max-width: 767px)
breakpoints[sm] = (min-width: 768px) and (max-width: 991px)
breakpoints[md] = (min-width: 992px) and (max-width: 1199px)
breakpoints[lg] = (min-width: 1200px)

; Vendors
scripts[] = assets/vendor/jquery.matchHeight/jquery.matchHeight-min.js
scripts[] = assets/vendor/waypoints/lib/jquery.waypoints.min.js
scripts[] = assets/vendor/waypoints/lib/shortcuts/sticky.min.js
scripts[] = assets/vendor/waypoints/lib/shortcuts/inview.min.js

; CSS - General
stylesheets[all][]     = assets/css/sizzle.style.css
stylesheets[all][]     = assets/css/sizzle.custom.css

; Javascript
scripts[] = assets/js/sizzle.script.js

; Settings
settings[site_width] = boxed
settings[show_footer_nav] = 1
settings[footer_text][value] = <div class="row"><div class="col-sm-5 col-sm-offset-1 text--center"><h3 class="clear-margin--bottom">Have any <strong>Questions</strong>?</h3><p>Go to the FAQs <i class="fa fa-angle-right">&nbsp;</i></p></div><div class="col-sm-4 col-sm-offset-1 text--center"><h3 class="clear-margin--bottom">Need <strong>Support</strong>?</h3><p>We're 1 click away <i class="fa fa-angle-right">&nbsp;</i></p></div></div>
settings[footer_text][format] = panopoly_wysiwyg_text
settings[copyright][value] = <div class="text--center"><h4>Follow us on</h4><a href="[config:yelp]"><i class="fa fa-yelp">&nbsp;</i></a> <a href="[config:twitter]"><i class="fa fa-twitter-square">&nbsp;</i></a> <a href="[config:facebook]"><i class="fa fa-facebook-square">&nbsp;</i></a> <a href="[config:google_plus]"><i class="fa fa-google-plus-square">&nbsp;</i></a><p class="margin--sm--top">@ 2015 Open Restaurant - Open Source Restaurant Software</p></div>
settings[copyright][format] = panopoly_wysiwyg_text

