name = Landing Page Theme
description = A Bootstrap Sub-theme.
core = 7.x
engine = phptemplate
base theme = bootstrap

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header]         = 'Header'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[prefix]         = 'Prefix'
regions[content]        = 'Content'
regions[suffix]         = 'Suffix'
regions[featured]       = 'Featured'
regions[footer]         = 'Footer'

;;;;;;;;;;;;;;;;;;;;;
;; Dependencies
;;;;;;;;;;;;;;;;;;;;;
dependencies[] = libraries (>=2)
dependencies[] = jquery_update (>=2)

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;
stylesheets[all][] = css/style.css
stylesheets[all][] = css/custom_style/custom_style.css

;;;;;;;;;;;;;;;;;;;;;
;; Javascripts
;;;;;;;;;;;;;;;;;;;;;
scripts[] = js/anchors_region_navigation.js

; Landing page theme settings
; --------------
settings[default_background] = 1

; Region paddings
; --------------
settings[region_padding_top] = 100
settings[region_padding_bottom] = 100

; Region anchor
; --------------
settings[region_anchor-header] = 'header'
settings[region_anchor-highlighted] = 'highlighted'
settings[region_anchor-help] = 'help'
settings[region_anchor-prefix] = 'prefix'
settings[region_anchor-content] = 'content'
settings[region_anchor-suffix] = 'suffix'
settings[region_anchor-featured] = 'featured'
settings[region_anchor-footer] = 'footer'
